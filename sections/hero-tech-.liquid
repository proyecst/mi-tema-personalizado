{%- style -%}
  .hero-tech-{{ section.id }} {
    position: relative;
    width: 100%;
    height: {{ section.settings.height_desktop }}vh;
    background: #000;
    overflow: hidden;
    display: flex;
    align-items: center;
  }

  /* Animación de fondo: Gradiente tecnológico sutil */
  .hero-tech-{{ section.id }}::before {
    content: '';
    position: absolute;
    width: 150%;
    height: 150%;
    background: radial-gradient(circle at 20% 30%, #1a1a1a 0%, #000 50%),
                radial-gradient(circle at 80% 70%, #0a0a2a 0%, #000 50%);
    animation: meshMove 20s infinite alternate;
    z-index: 1;
  }

  @keyframes meshMove {
    from { transform: translate(-10%, -10%); }
    to { transform: translate(10%, 10%); }
  }

  .tech-container {
    width: 100%;
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 5%;
    display: grid;
    grid-template-columns: 1fr 1fr;
    align-items: center;
    position: relative;
    z-index: 2;
  }

  /* Animación de entrada para el texto */
  .tech-content {
    animation: techFadeIn 1.2s cubic-bezier(0.16, 1, 0.3, 1) forwards;
  }

  .tech-title {
    font-size: clamp(3rem, 6vw, 5.5rem);
    font-weight: 800;
    line-height: 0.95;
    letter-spacing: -0.05em;
    color: #fff;
    margin: 0;
    background: linear-gradient(to right, #fff 20%, #666 50%, #fff 80%);
    background-size: 200% auto;
    color: transparent;
    -webkit-background-clip: text;
    background-clip: text;
    animation: shine 5s linear infinite;
  }

  @keyframes shine {
    to { background-position: 200% center; }
  }

  .tech-subtitle {
    font-size: 1.2rem;
    color: #888;
    margin: 25px 0 40px 0;
    max-width: 450px;
    line-height: 1.5;
  }

  /* Imagen del Reloj con flotación suave */
  .tech-image-wrapper {
    position: relative;
    display: flex;
    justify-content: center;
    animation: float 6s ease-in-out infinite;
  }

  @keyframes float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-20px); }
  }

  .tech-image-wrapper img {
    width: 100%;
    max-width: 550px;
    height: auto;
    filter: drop-shadow(0 0 50px rgba(0,113,227,0.2));
  }

  .tech-btn {
    display: inline-block;
    padding: 18px 45px;
    background: #fff;
    color: #000;
    text-decoration: none;
    font-weight: 700;
    border-radius: 4px;
    transition: all 0.3s cubic-bezier(0.19, 1, 0.22, 1);
  }

  .tech-btn:hover {
    background: {{ section.settings.accent_color }};
    color: #fff;
    transform: scale(1.05);
    box-shadow: 0 0 30px {{ section.settings.accent_color | color_modify: 'alpha', 0.4 }};
  }

  @media screen and (max-width: 990px) {
    .tech-container {
      grid-template-columns: 1fr;
      text-align: center;
      padding-top: 50px;
    }
    .tech-image-wrapper { order: -1; margin-bottom: 40px; }
    .tech-subtitle { margin: 20px auto 30px auto; }
  }

  @keyframes techFadeIn {
    from { opacity: 0; transform: translateX(-30px); }
    to { opacity: 1; transform: translateX(0); }
  }
{%- endstyle -%}

<section class="hero-tech-{{ section.id }}">
  <div class="tech-container">
    
    <div class="tech-content">
      <h1 class="tech-title">
        {{ section.settings.title_1 }}<br>
        <span style="color: {{ section.settings.accent_color }}; -webkit-text-fill-color: {{ section.settings.accent_color }};">{{ section.settings.title_2 }}</span>
      </h1>
      <p class="tech-subtitle">{{ section.settings.subtitle }}</p>
      <a href="{{ section.settings.link }}" class="tech-btn">{{ section.settings.btn_text }}</a>
    </div>

    <div class="tech-image-wrapper">
  {%- if section.settings.image != blank -%}
    <img 
      src="{{ section.settings.image | image_url: width: 1200 }}" 
      alt="{{ section.settings.image.alt | default: section.settings.title_1 }}" 
      loading="eager"
      width="1200"
      height="auto">
  {%- else -%}
    {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
  {%- endif -%}
</div>

  </div>
</section>

{% schema %}
{
  "name": "Banner Tech Premium",
  "settings": [
    { "type": "image_picker", "id": "image", "label": "Imagen del Producto (PNG)" },
    { "type": "text", "id": "title_1", "label": "Título Línea 1", "default": "Kieslect" },
    { "type": "text", "id": "title_2", "label": "Título Línea 2", "default": "Serie KS3 Pro" },
    { "type": "textarea", "id": "subtitle", "label": "Subtítulo", "default": "Doble núcleo, pantalla AMOLED de 2.01\" y una experiencia de usuario fluida como nunca antes." },
    { "type": "text", "id": "btn_text", "label": "Texto Botón", "default": "Comprar Ahora" },
    { "type": "url", "id": "link", "label": "Link Botón" },
    { "type": "color", "id": "accent_color", "label": "Color de Acento", "default": "#0071e3" },
    { "type": "range", "id": "height_desktop", "min": 60, "max": 100, "step": 5, "unit": "vh", "label": "Altura Desktop", "default": 90 }
  ],
  "presets": [
    { "name": "Banner Tech Premium" }
  ]
}
{% endschema %}