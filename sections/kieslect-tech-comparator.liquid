{<style>
  @import url('https://fonts.googleapis.com/css2?family=Michroma&display=swap');
</style>

{%- style -%}
  #shopify-section-{{ section.id }} {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    background-color: {{ section.settings.bg_color }};
    color: {{ section.settings.text_color }};
  }

  :root {
    --k-accent: #00D1FF;
    --k-dark-bg: #111111;
    --k-border: rgba(255, 255, 255, 0.1);
    --font-futurista: 'Michroma', sans-serif;
  }

  .comp-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .comp-header {
    text-align: center;
    margin-bottom: 60px;
  }

  /* --- TÍTULO CON ESTILO ETHNOCENTRIC --- */
  .comp-title {
    font-family: var(--font-futurista) !important;
    font-size: clamp(1.5rem, 5vw, 2.5rem) !important;
    font-weight: 700 !important;
    text-transform: uppercase !important;
    letter-spacing: 6px !important;
    margin: 0;
    line-height: 1.2;
    background: linear-gradient(120deg, rgba(255,255,255,0.1) 30%, {{ section.settings.text_color }} 50%, rgba(255,255,255,0.1) 70%);
    background-size: 200% 100%;
    -webkit-background-clip: text;
    background-clip: text;
    color: rgba(255, 255, 255, 0.9);
    animation: kTitleShine 4s infinite linear;
  }

  @keyframes kTitleShine {
    0% { background-position: 200% 0; }
    100% { background-position: -200% 0; }
  }

  .comp-subtitle {
    font-family: var(--font-futurista) !important;
    color: var(--k-accent);
    letter-spacing: 4px;
    font-size: 10px;
    display: block;
    margin-bottom: 15px;
  }

  /* --- TABLA FUTURISTA --- */
  .comp-table-wrapper {
    overflow-x: auto;
    border-radius: 0px; /* Bordes rectos industriales */
    background: #000;
    border: 1px solid var(--k-border);
  }

  .comp-table {
    width: 100%;
    border-collapse: collapse;
    min-width: 800px;
  }

  .comp-table th, .comp-table td {
    padding: 30px 20px;
    text-align: center;
    border-bottom: 1px solid var(--k-border);
  }

  .comp-feature-label {
    font-family: var(--font-futurista) !important;
    text-align: left !important;
    background-color: rgba(255,255,255,0.02);
    font-size: 10px !important;
    letter-spacing: 1px;
    color: #888;
    width: 220px;
    border-right: 1px solid var(--k-border);
  }

  .comp-model-badge {
    font-family: var(--font-futurista) !important;
    background: var(--k-accent);
    color: #000;
    font-size: 8px;
    padding: 4px 8px;
    margin-bottom: 15px;
    display: inline-block;
  }

  .comp-model-name {
    font-family: var(--font-futurista) !important;
    font-size: 1.2rem;
    color: #fff;
    display: block;
    margin-bottom: 10px;
    letter-spacing: 1px;
  }

  .comp-price {
    font-family: var(--font-futurista) !important;
    font-size: 14px;
    color: var(--k-accent);
  }

  .comp-spec-value {
    font-family: sans-serif;
    font-size: 15px;
    color: #fff;
  }

  .comp-check-wrapper {
    font-family: var(--font-futurista) !important;
    font-size: 9px;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 8px;
    color: var(--k-accent);
  }

  .comp-icon-box {
    width: 20px;
    height: 20px;
    border: 1px solid var(--k-accent);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 12px;
  }

  /* --- BOTÓN CTA --- */
  .comp-btn {
    font-family: var(--font-futurista) !important;
    display: inline-flex;
    align-items: center;
    gap: 15px;
    padding: 20px 50px;
    background-color: var(--k-accent);
    color: #000;
    text-decoration: none;
    font-size: 11px;
    font-weight: bold;
    letter-spacing: 2px;
    transition: all 0.3s ease;
    border-radius: 0px;
  }

  .comp-btn:hover {
    background: #fff;
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(0, 209, 255, 0.3);
  }

  .comp-table-wrapper::-webkit-scrollbar { height: 4px; }
  .comp-table-wrapper::-webkit-scrollbar-thumb { background: var(--k-accent); }
{%- endstyle -%}

<div class="comp-container">
  <div class="comp-header">
    <span class="comp-subtitle">TECH SPECS COMPARISON</span>
    {% if section.settings.title != blank %}
      <h2 class="comp-title">{{ section.settings.title }}</h2>
    {% endif %}
  </div>

  <div class="comp-table-wrapper">
    <table class="comp-table">
      <thead>
        <tr>
          <th class="comp-feature-label">Hardware & Software</th>
          {% for block in section.blocks %}
            <th {{ block.shopify_attributes }}>
              <span class="comp-model-badge">SERIE {{ block.settings.model_name | slice: 0, 2 | upcase }}</span>
              <span class="comp-model-name">{{ block.settings.model_name }}</span>
              <span class="comp-price">{{ block.settings.price }}</span>
            </th>
          {% endfor %}
        </tr>
      </thead>
      <tbody>
        <tr>
          <td class="comp-feature-label">Tecnología de Pantalla</td>
          {% for block in section.blocks %}
            <td class="comp-spec-value">{{ block.settings.spec_screen }}</td>
          {% endfor %}
        </tr>
        <tr>
          <td class="comp-feature-label">Llamadas Bluetooth</td>
          {% for block in section.blocks %}
            <td>
              {% if block.settings.feat_calls %}
                <div class="comp-check-wrapper">
                  <div class="comp-icon-box">✓</div>
                  <span>DUAL-MODE</span>
                </div>
              {% else %}
                <span class="comp-dash" style="opacity:0.3">—</span>
              {% endif %}
            </td>
          {% endfor %}
        </tr>
        <tr>
          <td class="comp-feature-label">Autonomía</td>
          {% for block in section.blocks %}
            <td class="comp-spec-value">{{ block.settings.spec_battery }}</td>
          {% endfor %}
        </tr>
        <tr>
          <td class="comp-feature-label">Algoritmos Deportivos</td>
          {% for block in section.blocks %}
            <td class="comp-spec-value">
              <span style="color:var(--k-accent); font-weight: bold;">+</span>{{ block.settings.spec_sports }} MODOS
            </td>
          {% endfor %}
        </tr>
        <tr>
          <td class="comp-feature-label">AI Voice Assistant</td>
          {% for block in section.blocks %}
            <td>
              {% if block.settings.feat_voice %}
                <div class="comp-check-wrapper">
                  <div class="comp-icon-box">
                    <svg width="10" height="10" viewBox="0 0 24 24" fill="currentColor"><path d="M12 14c1.66 0 3-1.34 3-3V5c0-1.66-1.34-3-3-3S9 3.34 9 5v6c0 1.66 1.34 3 3 3z"/><path d="M17 11c0 2.76-2.24 5-5 5s-5-2.24-5-5H5c0 3.53 2.61 6.43 6 6.92V21h2v-3.08c3.39-.49 6-3.39 6-6.92h-2z"/></svg>
                  </div> 
                  <span>ACTIVO</span>
                </div>
              {% else %}
                <span class="comp-dash" style="opacity:0.3">—</span>
              {% endif %}
            </td>
          {% endfor %}
        </tr>
      </tbody>
    </table>
  </div>

  {% if section.settings.cta_text != blank %}
    <div class="comp-cta-container" style="text-align: center; margin-top: 60px;">
      <a href="{{ section.settings.cta_link }}" class="comp-btn">
        {{ section.settings.cta_text }}
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3"><path d="M5 12h14M12 5l7 7-7 7"/></svg>
      </a>
    </div>
  {% endif %}
</div>

{% schema %}
{
  "name": "Kieslect Comparator V3",
  "max_blocks": 3,
  "settings": [
    { "type": "text", "id": "title", "label": "Título", "default": "COMPARATIVA TÉCNICA" },
    { "type": "color", "id": "bg_color", "label": "Fondo Sección", "default": "#000000" },
    { "type": "color", "id": "text_color", "label": "Color Texto", "default": "#ffffff" },
    { "type": "text", "id": "cta_text", "label": "Texto Botón", "default": "EXPLORAR TODOS" },
    { "type": "url", "id": "cta_link", "label": "Link Botón" },
    { "type": "range", "id": "padding_top", "min": 0, "max": 100, "default": 80, "unit": "px", "label": "Padding Superior" },
    { "type": "range", "id": "padding_bottom", "min": 0, "max": 100, "default": 80, "unit": "px", "label": "Padding Inferior" }
  ],
  "blocks": [
    {
      "type": "model",
      "name": "Smartwatch",
      "settings": [
        { "type": "text", "id": "model_name", "label": "Modelo", "default": "KS3" },
        { "type": "text", "id": "price", "label": "Precio", "default": "$129.00" },
        { "type": "text", "id": "spec_screen", "label": "Pantalla", "default": "Ultra AMOLED 2.1\"" },
        { "type": "checkbox", "id": "feat_calls", "label": "Llamadas BT", "default": true },
        { "type": "text", "id": "spec_battery", "label": "Batería", "default": "15 Días" },
        { "type": "text", "id": "spec_sports", "label": "Nº Deportes", "default": "150" },
        { "type": "checkbox", "id": "feat_voice", "label": "Asistente Voz", "default": true }
      ]
    }
  ],
  "presets": [
    {
      "name": "Kieslect Comparator V3"
    }
  ]
}
{% endschema %}