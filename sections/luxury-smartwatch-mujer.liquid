  "name": "Luxury Smartwatch Mujer",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Imagen de la Sección"
    }
  ],
  "presets": [
    {
      "name": "Luxury Smartwatch Mujer"
    }
  ]
}
{% endschema %}