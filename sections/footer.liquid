{%- style -%}
  :root {
    --accent-glow: {{ section.settings.accent_color | color_modify: 'alpha', 0.3 }};
  }

  .k-footer {
    background-color: {{ section.settings.bg_color }};
    color: {{ section.settings.text_color }};
    padding: 80px 0 30px 0;
    font-family: 'Inter', -apple-system, sans-serif;
    border-top: 1px solid rgba(255, 255, 255, 0.05);
    position: relative;
    overflow: hidden;
  }

  /* Línea de luz superior con degradado dinámico */
  .k-footer::before {
    content: "";
    position: absolute;
    top: 0; left: 50%;
    transform: translateX(-50%);
    width: 85%;
    height: 1px;
    background: linear-gradient(90deg, transparent, {{ section.settings.accent_color }}, transparent);
    box-shadow: 0 0 15px {{ section.settings.accent_color }};
  }

  .footer-container {
    max-width: 1300px;
    margin: 0 auto;
    padding: 0 25px;
    display: flex;
    flex-wrap: wrap;
    gap: 40px;
  }

  /* Columna de Marca (más ancha) */
  .footer-col-brand { flex: 2; min-width: 280px; }
  .footer-col-menu { flex: 1; min-width: 160px; }
  .footer-col-info { flex: 1.2; min-width: 200px; }

  .footer-logo-img {
    max-width: 180px;
    height: auto;
    margin-bottom: 25px;
    display: block;
  }

  .footer-logo-text {
    font-size: 1.8rem;
    font-weight: 900;
    letter-spacing: -1px;
    margin: 0 0 20px 0;
    text-transform: uppercase;
  }

  .brand-desc {
    font-size: 0.95rem;
    line-height: 1.6;
    opacity: 0.6;
    max-width: 320px;
    margin-bottom: 25px;
  }

  .footer-title {
    font-size: 0.8rem;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 2px;
    margin-bottom: 25px;
    color: {{ section.settings.accent_color }};
  }

  .footer-links { list-style: none; padding: 0; margin: 0; }
  .footer-links li { margin-bottom: 12px; }
  .footer-links a {
    text-decoration: none;
    color: {{ section.settings.text_color }};
    opacity: 0.5;
    font-size: 0.9rem;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    display: inline-block;
  }

  .footer-links a:hover {
    opacity: 1;
    transform: translateX(8px);
    color: {{ section.settings.accent_color }};
  }

  /* Redes Sociales */
  .footer-socials { display: flex; gap: 12px; }
  .social-icon {
    width: 38px; height: 38px;
    border: 1px solid rgba(255,255,255,0.1);
    border-radius: 50%;
    display: flex; align-items: center; justify-content: center;
    transition: 0.3s;
    color: {{ section.settings.text_color }};
  }
  .social-icon:hover {
    background: {{ section.settings.accent_color }};
    border-color: {{ section.settings.accent_color }};
    color: #000;
    transform: translateY(-4px);
    box-shadow: 0 5px 15px var(--accent-glow);
  }

  /* Imagen con Link (Ultima columna) */
  .info-image-wrapper {
    position: relative;
    border-radius: 12px;
    overflow: hidden;
    margin-bottom: 15px;
    transition: 0.3s;
  }
  .info-image-wrapper:hover { transform: scale(1.02); }
  .info-image-wrapper img { width: 100%; display: block; }

  /* Barra inferior */
  .footer-bottom {
    max-width: 1300px;
    margin: 60px auto 0;
    padding: 30px 25px;
    border-top: 1px solid rgba(255,255,255,0.05);
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .copyright { font-size: 0.7rem; opacity: 0.4; letter-spacing: 1px; }

  @media (max-width: 768px) {
    .footer-container { flex-direction: column; text-align: center; gap: 50px; }
    .footer-col-brand, .footer-col-menu, .footer-col-info { width: 100%; }
    .brand-desc { margin: 0 auto 25px; }
    .footer-socials { justify-content: center; }
    .footer-bottom { flex-direction: column; gap: 20px; text-align: center; }
  }
{%- endstyle -%}

<footer class="k-footer">
  <div class="footer-container">
    {% for block in section.blocks %}
      {% case block.type %}
        
        {% when 'brand' %}
          <div class="footer-col-brand" {{ block.shopify_attributes }}>
            {% if block.settings.logo_image != blank %}
              <img src="{{ block.settings.logo_image | img_url: '400x' }}" class="footer-logo-img" alt="Logo">
            {% else %}
              <h2 class="footer-logo-text">{{ block.settings.logo_text }}</h2>
            {% endif %}
            <div class="brand-desc">{{ block.settings.description }}</div>
            <div class="footer-socials">
              {%- if settings.social_instagram_link != blank -%}
                <a href="{{ settings.social_instagram_link }}" class="social-icon">IG</a>
              {%- endif -%}
              {%- if settings.social_facebook_link != blank -%}
                <a href="{{ settings.social_facebook_link }}" class="social-icon">FB</a>
              {%- endif -%}
            </div>
          </div>

        {% when 'menu' %}
          <div class="footer-col-menu" {{ block.shopify_attributes }}>
            <h3 class="footer-title">{{ block.settings.title }}</h3>
            <ul class="footer-links">
              {% for link in linklists[block.settings.menu].links %}
                <li><a href="{{ link.url }}">{{ link.title }}</a></li>
              {% endfor %}
            </ul>
          </div>

        {% when 'image_info' %}
          <div class="footer-col-info" {{ block.shopify_attributes }}>
            <h3 class="footer-title">{{ block.settings.title }}</h3>
            {% if block.settings.image != blank %}
              <a href="{{ block.settings.link }}" class="info-image-wrapper">
                <img src="{{ block.settings.image | img_url: '500x' }}" alt="Info">
              </a>
            {% endif %}
            <p style="font-size: 0.85rem; opacity: 0.6;">{{ block.settings.text }}</p>
          </div>

      {% endcase %}
    {% endfor %}
  </div>

  <div class="footer-bottom">
    <div class="copyright">
      &copy; {{ 'now' | date: "%Y" }} {{ section.settings.copyright_text }}
    </div>
    <div class="payment-icons" style="filter: grayscale(1) brightness(2); opacity: 0.5;">
      {% for type in shop.enabled_payment_types %}
        {{ type | payment_type_svg_tag: class: 'icon' }}
      {% endfor %}
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Kieslect Tech Footer",
  "settings": [
    { "type": "color", "id": "bg_color", "label": "Fondo", "default": "#000000" },
    { "type": "color", "id": "text_color", "label": "Texto", "default": "#ffffff" },
    { "type": "color", "id": "accent_color", "label": "Color Acento (Neon)", "default": "#00D1FF" },
    { "type": "text", "id": "copyright_text", "label": "Copyright", "default": "KIESLECT TECHNOLOGY." }
  ],
  "blocks": [
    {
      "type": "brand",
      "name": "Logo y Redes",
      "limit": 1,
      "settings": [
        { "type": "image_picker", "id": "logo_image", "label": "Imagen de Logo" },
        { "type": "text", "id": "logo_text", "label": "Texto de Logo", "default": "KIESLECT" },
        { "type": "textarea", "id": "description", "label": "Descripción", "default": "Wearable technology for the future." }
      ]
    },
    {
      "type": "menu",
      "name": "Menú",
      "settings": [
        { "type": "text", "id": "title", "label": "Título", "default": "Explorar" },
        { "type": "link_list", "id": "menu", "label": "Seleccionar Menú" }
      ]
    },
    {
      "type": "image_info",
      "name": "Imagen con Link",
      "settings": [
        { "type": "text", "id": "title", "label": "Título", "default": "Soporte" },
        { "type": "image_picker", "id": "image", "label": "Imagen" },
        { "type": "url", "id": "link", "label": "Link de la imagen" },
        { "type": "textarea", "id": "text", "label": "Texto adicional", "default": "Global Support: hello@kieslect.com" }
      ]
    }
  ],
  "presets": [
    { "name": "Kieslect Tech Footer" }
  ]
}
{% endschema %}