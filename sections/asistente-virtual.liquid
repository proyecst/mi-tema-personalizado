{% comment %}
  Asistente Virtual Pro: B√∫squeda por modelo, detecci√≥n de secciones y bloques din√°micos.
{% endcomment %}

<section id="asistente-{{ section.id }}" class="asistente-wrapper" data-customer="{{ customer.first_name | default: 'invitado' }}">
  <div class="asistente-bubble">
    <div class="asistente-header">
      <strong>ü§ñ Asistente de {{ shop.name }}</strong>
    </div>
    
    <div class="asistente-body">
      <p id="greeting-text">Hola <strong>{{ customer.first_name | default: 'viajero' }}</strong>, ¬øqu√© modelo buscas hoy?</p>
      
      {%- if section.blocks.size > 0 -%}
        <div class="asistente-promos">
          {%- for block in section.blocks -%}
            <a href="{{ block.settings.link }}" class="promo-link" {{ block.shopify_attributes }}>
              {{ block.settings.text }} ‚Üí
            </a>
          {%- endfor -%}
        </div>
      {%- endif -%}

      <div class="search-group">
        <input type="text" id="model-search-{{ section.id }}" placeholder="Ej: Modelo X-200..." autocomplete="off">
        <div id="results-{{ section.id }}" class="results-container"></div>
      </div>
    </div>
  </div>
</section>

<style>
  .asistente-wrapper {
    position: fixed;
    bottom: 30px;
    right: 30px;
    z-index: 1000;
    font-family: sans-serif;
  }
  .asistente-bubble {
    background: {{ section.settings.bg_color }};
    color: {{ section.settings.text_color }};
    width: 300px;
    border-radius: 15px;
    box-shadow: 0 10px 25px rgba(0,0,0,0.3);
    overflow: hidden;
    border: 1px solid rgba(255,255,255,0.1);
  }
  .asistente-header {
    background: rgba(0,0,0,0.1);
    padding: 12px;
    font-size: 14px;
    border-bottom: 1px solid rgba(255,255,255,0.05);
  }
  .asistente-body { padding: 15px; }
  .asistente-promos { margin-bottom: 15px; }
  .promo-link {
    display: block;
    font-size: 12px;
    color: {{ section.settings.accent_color }};
    text-decoration: none;
    margin-bottom: 5px;
    font-weight: bold;
  }
  .search-group input {
    width: 100%;
    padding: 8px;
    border-radius: 5px;
    border: none;
    outline: none;
    margin-top: 10px;
  }
  .results-container {
    max-height: 200px;
    overflow-y: auto;
  }
  .result-item {
    display: flex;
    align-items: center;
    padding: 10px 0;
    border-bottom: 1px solid rgba(255,255,255,0.1);
    text-decoration: none;
    color: inherit;
    font-size: 13px;
  }
  .result-item:hover { opacity: 0.8; }
  .result-item img {
    width: 40px;
    height: 40px;
    object-fit: cover;
    margin-right: 10px;
    border-radius: 4px;
  }
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const searchInput = document.getElementById('model-search-{{ section.id }}');
  const resultsContainer = document.getElementById('results-{{ section.id }}');

  // Localizar secciones para "inteligencia" del bot
  const sections = Array.from(document.querySelectorAll('.shopify-section')).map(s => s.id);
  console.log("Asistente detect√≥ estas secciones:", sections);

  searchInput.addEventListener('input', async (e) => {
    const query = e.target.value;
    if (query.length < 2) {
      resultsContainer.innerHTML = '';
      return;
    }

    try {
      const response = await fetch(`/search/suggest.json?q=${query}&resources[type]=product&resources[limit]=4`);
      const data = await response.json();
      const products = data.resources.results.products;

      resultsContainer.innerHTML = '';
      
      if (products.length > 0) {
        products.forEach(product => {
          const productHTML = `
            <a href="${product.url}" class="result-item">
              <img src="${product.image}" alt="${product.title}">
              <div>
                <div>${product.title}</div>
                <small>${product.price_max ? 'Ver precio' : ''}</small>
              </div>
            </a>
          `;
          resultsContainer.insertAdjacentHTML('beforeend', productHTML);
        });
      } else {
        resultsContainer.innerHTML = '<p style="font-size:11px; margin-top:10px;">No encuentro ese modelo...</p>';
      }
    } catch (err) {
      console.error("Error buscando modelo:", err);
    }
  });
});
</script>

{% schema %}
{
  "name": "Asistente Virtual Pro",
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Color de Fondo",
      "default": "#1a1a1a"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Color de Texto",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "accent_color",
      "label": "Color de Enlaces/Promo",
      "default": "#00ffcc"
    }
  ],
  "blocks": [
    {
      "type": "link_invitation",
      "name": "Invitaci√≥n/Link",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Texto del Link",
          "default": "Ver nueva colecci√≥n"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Destino del Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Asistente Virtual Pro",
      "blocks": [
        { "type": "link_invitation" }
      ]
    }
  ]
}
{% endschema %}