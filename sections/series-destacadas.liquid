  /* Estilos de la Sección */
  .series-destacadas {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    background-color: #000; /* Estilo oscuro para resaltar IA */
    color: #fff;
    transition: all 0.5s ease;
  }
