<section class="series-destacadas section-{{ section.id }}-padding" id="series-section-{{ section.id }}">
  <div class="page-width">
    {% if section.settings.title != blank %}
      <div class="section-heading">
        <h2 class="h1">{{ section.settings.title | escape }}</h2>
      </div>
    {% endif %}

    <div class="series-grid" id="series-grid-main">
      {% for block in section.blocks %}
        <a href="{{ block.settings.link }}" 
           class="serie-card k-item-ai" 
           data-title="{{ block.settings.title | downcase }}"
           {{ block.shopify_attributes }}>
          <div class="serie-image">
            {% if block.settings.image != blank %}
              {{ block.settings.image | image_url: width: 600 | image_tag: loading: 'lazy' }}
            {% else %}
              {{ 'collection-1' | placeholder_svg_tag: 'placeholder-svg' }}
            {% endif %}
            <div class="ai-focus-overlay"></div>
          </div>
          <div class="serie-info">
            <h3>{{ block.settings.title }}</h3>
          </div>
        </a>
      {% endfor %}
    </div>
  </div>
</section>

<div class="k-ai-assistant">
  <div class="k-ai-chat" id="k-ai-window">
    <div class="k-ai-header">ASISTENTE KIESLECT IA</div>
    <div class="k-ai-log" id="k-ai-log">
      <div class="k-bot-msg">Dime qué buscas (ej: "Amoled", "Deporte") y yo filtraré las series por ti.</div>
    </div>
    <div class="k-ai-input">
      <input type="text" id="k-ai-input-text" placeholder="Ordena a la IA..." onkeypress="if(event.key==='Enter') executeKieslectAI()">
      <button onclick="executeKieslectAI()">EXE</button>
    </div>
  </div>
  <div class="k-ai-toggle" onclick="toggleKieslectAI()">
    <span class="pulse-ia"></span>
    <svg viewBox="0 0 24 24"><path d="M12 2a10 10 0 1 0 10 10A10 10 0 0 0 12 2zm0 18a8 8 0 1 1 8-8 8 8 0 0 1-8 8z"/><circle cx="12" cy="12" r="3" fill="#00D1FF"/></svg>
  </div>
</div>

