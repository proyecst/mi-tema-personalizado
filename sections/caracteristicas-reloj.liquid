{%- style -%}
  #shopify-section-{{ section.id }} {
    background-color: {{ section.settings.bg_color }};
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    font-family: 'Inter', sans-serif;
  }

  .feat-wrapper {
    max-width: 1100px;
    margin: 0 auto;
    padding: 0 20px;
    color: {{ section.settings.text_color }};
  }

  .feat-header {
    text-align: center;
    margin-bottom: 50px;
  }

  .feat-model-badge {
    display: inline-block;
    padding: 5px 15px;
    background: #00D1FF;
    color: #000;
    font-weight: 800;
    border-radius: 50px;
    font-size: 12px;
    margin-bottom: 10px;
    text-transform: uppercase;
  }

  .feat-main-title {
    font-size: 2.5rem;
    font-weight: 900;
    margin: 0;
    text-transform: uppercase;
    color: #fff;
  }

  .feat-price {
    font-size: 1.8rem;
    color: #00D1FF;
    font-weight: 700;
    margin-top: 10px;
  }

  /* Grid de Especificaciones */
  .spec-table {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 20px;
    margin-top: 40px;
  }

  @media screen and (max-width: 749px) {
    .spec-table { grid-template-columns: 1fr; }
    .feat-main-title { font-size: 1.8rem; }
  }

  .spec-card {
    background: #111;
    border: 1px solid #222;
    padding: 25px;
    border-radius: 12px;
    transition: all 0.3s ease;
    display: flex;
    align-items: flex-start;
    gap: 20px;
  }

  .spec-card:hover {
    border-color: #00D1FF;
    box-shadow: 0 0 20px rgba(0, 209, 255, 0.1);
    transform: translateY(-5px);
  }

  .spec-icon {
    width: 45px;
    height: 45px;
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(0, 209, 255, 0.1);
    border-radius: 8px;
    color: #00D1FF;
  }

  .spec-icon svg, .spec-icon img {
    width: 28px;
    height: 28px;
  }

  .spec-info h4 {
    margin: 0 0 5px 0;
    font-size: 0.9rem;
    color: #00D1FF;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .spec-info p {
    margin: 0;
    font-size: 1.1rem;
    font-weight: 500;
    color: #fff;
  }

  .feat-cta-wrapper {
    text-align: center;
    margin-top: 50px;
  }

  .feat-btn {
    display: inline-block;
    padding: 15px 45px;
    background-color: #00D1FF;
    color: #000;
    text-decoration: none;
    border-radius: 4px;
    font-weight: 900;
    text-transform: uppercase;
    transition: all 0.3s;
    box-shadow: 0 0 15px rgba(0, 209, 255, 0.3);
  }

  .feat-btn:hover {
    background-color: #fff;
    box-shadow: 0 0 25px rgba(255, 255, 255, 0.4);
  }
{%- endstyle -%}

<div class="feat-wrapper">
  <div class="feat-header">
    {% if section.settings.model_name != blank %}
      <span class="feat-model-badge">{{ section.settings.model_name }}</span>
    {% endif %}
    
    <h2 class="feat-main-title">{{ section.settings.title }}</h2>
    
    {% if section.settings.price != blank %}
      <div class="feat-price">{{ section.settings.price }}</div>
    {% endif %}
  </div>

  <div class="spec-table">
    {% for block in section.blocks %}
      <div class="spec-card" {{ block.shopify_attributes }}>
        <div class="spec-icon">
          {% if block.settings.custom_icon != blank %}
            <img src="{{ block.settings.custom_icon | image_url: width: 100 }}" alt="{{ block.settings.spec_label }}" loading="lazy">
          {% else %}
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 2v20M2 12h20" stroke-linecap="round"/></svg>
          {% endif %}
        </div>
        <div class="spec-info">
          <h4>{{ block.settings.spec_label }}</h4>
          <p>{{ block.settings.spec_value }}</p>
        </div>
      </div>
    {% endfor %}
  </div>

  {% if section.settings.cta_text != blank %}
    <div class="feat-cta-wrapper">
      <a href="{{ section.settings.cta_link }}" class="feat-btn">
        {{ section.settings.cta_text }}
      </a>
    </div>
  {% endif %}
</div>

{% schema %}
{
  "name": "Especificaciones Pro",
  "settings": [
    { "type": "color", "id": "bg_color", "label": "Fondo", "default": "#000000" },
    { "type": "color", "id": "text_color", "label": "Color Texto", "default": "#ffffff" },
    { "type": "text", "id": "model_name", "label": "Nombre del Modelo", "default": "KIESLECT KR PRO" },
    { "type": "text", "id": "title", "label": "Título Principal", "default": "Especificaciones Técnicas" },
    { "type": "text", "id": "price", "label": "Precio", "default": "$89.99" },
    { "type": "text", "id": "cta_text", "label": "Texto Botón", "default": "Comprar Ahora" },
    { "type": "url", "id": "cta_link", "label": "Link Botón" },
    { "type": "range", "id": "padding_top", "min": 0, "max": 100, "step": 4, "default": 60, "unit": "px", "label": "Padding Superior" },
    { "type": "range", "id": "padding_bottom", "min": 0, "max": 100, "step": 4, "default": 60, "unit": "px", "label": "Padding Inferior" }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Especificación",
      "settings": [
        { "type": "image_picker", "id": "custom_icon", "label": "Icono Personalizado" },
        { "type": "text", "id": "spec_label", "label": "Etiqueta (Ej: Pantalla)", "default": "Pantalla" },
        { "type": "text", "id": "spec_value", "label": "Valor (Ej: 1.43\" AMOLED)", "default": "1.43\" Ultra AMOLED" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Especificaciones Pro Reloj",
      "blocks": [
        { "type": "feature", "settings": { "spec_label": "Pantalla", "spec_value": "1.43\" AMOLED" } },
        { "type": "feature", "settings": { "spec_label": "Construcción", "spec_value": "Cuerpo de Metal Pulido" } },
        { "type": "feature", "settings": { "spec_label": "Batería", "spec_value": "Hasta 10 días de uso" } },
        { "type": "feature", "settings": { "spec_label": "Resistencia", "spec_value": "IP68 Resistente al Agua" } }
      ]
    }
  ]
}
{% endschema %}