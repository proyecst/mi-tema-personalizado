{%- style -%}
  .hero-slider-container { position: relative; overflow: hidden; }
  .hero-slide { 
    display: none; 
    height: 80vh; 
    background-size: cover; 
    background-position: center; 
    align-items: center; 
    justify-content: center;
    color: #fff;
    text-align: center;
  }
  .hero-slide.active { display: flex; flex-direction: column; }
  .hero-overlay { 
    background: rgba(0,0,0,0.3); 
    padding: 40px; 
    border-radius: 10px; 
  }
  .cta-button {
    background-color: {{ section.settings.cta_color }};
    color: #fff;
    padding: 15px 30px;
    text-decoration: none;
    font-weight: bold;
    border-radius: 5px;
    margin-top: 20px;
    display: inline-block;
  }
  .promo-banner {
    background: {{ section.settings.banner_bg }};
    color: {{ section.settings.banner_text }};
    text-align: center;
    padding: 15px 0;
    font-weight: bold;
    font-size: 1.2rem;
  }
{%- endstyle -%}

<div class="hero-slider-wrapper">
  <div class="promo-banner">
    {{ section.settings.promo_text }}
  </div>

  <div class="hero-slider-container" id="HeroSlider-{{ section.id }}">
    {% for block in section.blocks %}
      <div class="hero-slide {% if forloop.first %}active{% endif %}" 
           style="background-image: url('{{ block.settings.image | img_url: '2000x' }}');">
        <div class="hero-overlay">
          <h1>{{ block.settings.title }}</h1>
          <p>{{ block.settings.subheading }}</p>
          <a href="{{ section.settings.cta_link }}" class="cta-button">
            {{ section.settings.cta_label }}
          </a>
        </div>
      </div>
    {% endfor %}
  </div>
</div>

<script>
  let currentSlide = 0;
  const slides = document.querySelectorAll('#HeroSlider-{{ section.id }} .hero-slide');
  
  function nextSlide() {
    slides[currentSlide].classList.remove('active');
    currentSlide = (currentSlide + 1) % slides.length;
    slides[currentSlide].classList.add('active');
  }
  setInterval(nextSlide, 5000); // Cambia cada 5 segundos
</script>

