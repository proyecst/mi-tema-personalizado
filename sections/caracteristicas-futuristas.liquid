<section class="feat-futuro-section" style="background: {{ section.settings.bg_color }};">
  <div class="feat-futuro-container">
    
    <h2 class="feat-futuro-main-title">
      {{ section.settings.section_title }}
    </h2>

    <div class="feat-futuro-grid">
      {% for block in section.blocks %}
        <div class="feat-futuro-item" {{ block.shopify_attributes }}>
          <div class="feat-futuro-icon" style="color: {{ section.settings.accent_color }};">
            ●
          </div>
          <div class="feat-futuro-text-box">
            <h3 class="feat-futuro-item-title" style="color: {{ section.settings.accent_color }};">
              {{ block.settings.feature_text }}
            </h3>
          </div>
        </div>
      {% endfor %}
    </div>

    <div class="feat-futuro-line" style="background: {{ section.settings.accent_color }};"></div>
  </div>
</section>

<style>
  @font-face {
    font-family: 'Ethnocentric';
    src: url('https://db.onlinewebfonts.com/t/625330384ef8f0607921389809635532.woff2') format('woff2');
  }

  .feat-futuro-section {
    padding: 80px 5%;
    overflow: hidden;
  }

  .feat-futuro-container {
    max-width: 1200px;
    margin: 0 auto;
    text-align: center;
  }

  .feat-futuro-main-title {
    font-family: 'Ethnocentric', sans-serif;
    font-size: clamp(1.4rem, 3.5vw, 2.2rem);
    color: #ffffff;
    margin-bottom: 50px;
    text-transform: uppercase;
    letter-spacing: 2px;
    background: linear-gradient(90deg, #fff, {{ section.settings.accent_color }}, #fff);
    background-size: 200% auto;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    animation: shineText 5s linear infinite;
  }

  .feat-futuro-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 20px;
  }

  .feat-futuro-item {
    background: rgba(255, 255, 255, 0.03);
    padding: 25px;
    border-radius: 8px;
    border-left: 3px solid {{ section.settings.accent_color }};
    transition: 0.3s ease;
    display: flex;
    align-items: center;
    gap: 12px;
    text-align: left;
  }

  .feat-futuro-item:hover {
    background: rgba(255, 255, 255, 0.07);
    transform: translateY(-5px);
    box-shadow: 0 10px 25px {{ section.settings.accent_color }}22;
  }

  .feat-futuro-icon {
    font-size: 1.2rem;
    filter: drop-shadow(0 0 5px {{ section.settings.accent_color }});
  }

  .feat-futuro-item-title {
    font-family: 'Ethnocentric', sans-serif;
    font-size: 0.85rem;
    line-height: 1.4;
    margin: 0;
    text-transform: uppercase;
  }

  .feat-futuro-line {
    height: 1px;
    width: 80%;
    margin: 50px auto 0;
    opacity: 0.3;
    box-shadow: 0 0 10px {{ section.settings.accent_color }};
  }

  @keyframes shineText {
    to { background-position: 200% center; }
  }

  @media (max-width: 768px) {
    .feat-futuro-grid { grid-template-columns: 1fr; }
  }
</style>

{% schema %}
{
  "name": "Características 8K",
  "settings": [
    { "type": "color", "id": "bg_color", "label": "Fondo", "default": "#000000" },
    { "type": "color", "id": "accent_color", "label": "Color Neón", "default": "#00f2ff" },
    { "type": "text", "id": "section_title", "label": "Título", "default": "Características" }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Punto",
      "settings": [
        { "type": "text", "id": "feature_text", "label": "Texto", "default": "Pantalla AMOLED" }
      ]
    }
  ],
  "presets": [
