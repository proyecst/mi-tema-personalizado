<section class="marquee-feat-section" style="background: {{ section.settings.bg_color }};">
  <div class="marquee-feat-wrapper">
    
    <h2 class="marquee-feat-title">
      {{ section.settings.section_title }}
    </h2>

    <div class="marquee-feat-container" style="border-top: 1px solid {{ section.settings.accent_color }}44; border-bottom: 1px solid {{ section.settings.accent_color }}44;">
      <div class="marquee-feat-content">
        {% for i in (1..3) %}
          {% for block in section.blocks %}
            
            {%- capture item_content -%}
              <div class="feat-icon-box">
                {% if block.settings.feature_icon != blank %}
                  <img src="{{ block.settings.feature_icon | image_url: width: 50 }}" class="feat-custom-icon">
                {% else %}
                  {%- assign text_down = block.settings.feature_text | downcase -%}
                  {%- if text_down contains 'salud' or text_down contains 'corazón' or text_down contains 'ritmo' -%}
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="feat-svg-icon"><path d="M22 12h-4l-3 9L9 3l-3 9H2"></path></svg>
                  {%- elsif text_down contains 'gym' or text_down contains 'deporte' or text_down contains 'entrenamiento' -%}
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="feat-svg-icon"><path d="M6 7.5l-2 2V13l2 2m12-7.5l2 2V13l2 2M12 7v10M8 7v10m8-10v10"></path></svg>
                  {%- elsif text_down contains 'batería' or text_down contains 'carga' -%}
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="feat-svg-icon"><rect x="2" y="7" width="16" height="10" rx="2" ry="2"></rect><line x1="22" y1="11" x2="22" y2="13"></line></svg>
                  {%- elsif text_down contains 'agua' or text_down contains 'ip68' -%}
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="feat-svg-icon"><path d="M12 2.69l5.66 5.66a8 8 0 1 1-11.31 0z"></path></svg>
                  {%- else -%}
                    <span class="feat-dot">●</span>
                  {%- endif -%}
                {% endif %}
              </div>
              <span class="feat-text-futuristic">{{ block.settings.feature_text }}</span>
            {%- endcapture -%}

            <div class="marquee-feat-item" style="color: {{ section.settings.accent_color }};">
              {% if block.settings.feature_link != blank %}
                <a href="{{ block.settings.feature_link }}" class="feat-link" {% if block.settings.open_new_tab %}target="_blank"{% endif %}>
                  {{ item_content }}
                </a>
              {% else %}
                {{ item_content }}
              {% endif %}
            </div>

          {% endfor %}
        {% endfor %}
      </div>
    </div>

  </div>
</section>

<style>
  @font-face {
    font-family: 'Ethnocentric';
    src: url('https://db.onlinewebfonts.com/t/625330384ef8f0607921389809635532.woff2') format('woff2');
  }

  .marquee-feat-section { padding: 50px 0; overflow: hidden; width: 100%; }

  .marquee-feat-title {
    font-family: 'Ethnocentric', sans-serif !important;
    font-size: clamp(1rem, 3vw, 1.5rem);
    color: #ffffff;
    margin-bottom: 30px;
    text-transform: uppercase;
    letter-spacing: 3px;
    text-align: center;
  }

  .marquee-feat-container {
    display: flex;
    overflow: hidden;
    white-space: nowrap;
    background: rgba(0, 242, 255, 0.03);
    padding: 25px 0;
  }

  .marquee-feat-content {
    display: inline-block;
    white-space: nowrap;
    animation: scrollLinear {{ section.settings.speed }}s linear infinite;
  }

  .marquee-feat-item {
    font-family: 'Ethnocentric', sans-serif !important;
    font-size: 0.9rem;
    display: inline-flex;
    align-items: center;
    padding: 0 50px;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .feat-link {
    text-decoration: none;
    color: inherit;
    display: flex;
    align-items: center;
  }

  .feat-svg-icon {
    width: 24px;
    height: 24px;
    stroke: {{ section.settings.accent_color }};
    filter: drop-shadow(0 0 8px {{ section.settings.accent_color }});
    margin-right: 12px;
  }

  @keyframes scrollLinear {
    from { transform: translateX(0); }
    to { transform: translateX(-33.33%); }
  }

  .marquee-feat-container:hover .marquee-feat-content { animation-play-state: paused; }

  @media (max-width: 768px) {
    .marquee-feat-item { font-size: 0.7rem; padding: 0 25px; }
  }
</style>

{% schema %}
{
  "name": "Tech Scroll",
  "settings": [
    { "type": "color", "id": "bg_color", "label": "Fondo", "default": "#000000" },
    { "type": "color", "id": "accent_color", "label": "Color Neón", "default": "#00f2ff" },
    { "type": "text", "id": "section_title", "label": "Título", "default": "KIESLECT TECH" },
    { "type": "range", "id": "speed", "min": 10, "max": 60, "step": 5, "unit": "s", "label": "Velocidad", "default": 25 }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Item",
      "settings": [
        { "type": "text", "id": "feature_text", "label": "Texto (Salud, Gym...)", "default": "SALUD" },
        { "type": "image_picker", "id": "feature_icon", "label": "Icono Imagen" },
        { "type": "url", "id": "feature_link", "label": "Link" },
        { "type": "checkbox", "id": "open_new_tab", "label": "Nueva Pestaña", "default": false }
      ]
    }
  ],
  "presets": [
    {
      "name": "Tech Scroll",
      "blocks": [
        { "type": "feature", "settings": { "feature_text": "SALUD" } },
        { "type": "feature", "settings": { "feature_text": "GYM" } }
      ]
    }
  ]
}
{% endschema %}