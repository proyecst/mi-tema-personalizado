<section class="marquee-feat-section" style="background: {{ section.settings.bg_color }};">
  <div class="marquee-feat-wrapper">
    
    <h2 class="marquee-feat-title">
      {{ section.settings.section_title }}
    </h2>

    <div class="marquee-feat-container" style="border-top: 1px solid {{ section.settings.accent_color }}44; border-bottom: 1px solid {{ section.settings.accent_color }}44;">
      <div class="marquee-feat-content">
        {%- comment -%} Repetimos el bucle 3 veces para que no haya huecos en el movimiento {%- endcomment -%}
        {% for i in (1..3) %}
          {% for block in section.blocks %}
            <span class="marquee-feat-item" style="color: {{ section.settings.accent_color }};" {{ block.shopify_attributes }}>
              <span class="feat-dot">●</span> {{ block.settings.feature_text }}
            </span>
          {% endfor %}
        {% endfor %}
      </div>
    </div>

  </div>
</section>

<style>
  @font-face {
    font-family: 'Ethnocentric';
    src: url('https://db.onlinewebfonts.com/t/625330384ef8f0607921389809635532.woff2') format('woff2');
  }

  .marquee-feat-section {
    padding: 60px 0;
    overflow: hidden;
    width: 100%;
  }

  .marquee-feat-wrapper {
    width: 100%;
    text-align: center;
  }

  /* TÍTULO PRINCIPAL CON ETHNOCENTRIC */
  .marquee-feat-title {
    font-family: 'Ethnocentric', sans-serif;
    font-size: clamp(1.2rem, 3vw, 2rem);
    color: #ffffff;
    margin-bottom: 40px;
    text-transform: uppercase;
    letter-spacing: 3px;
    padding: 0 5%;
  }

  /* CONTENEDOR DEL MOVIMIENTO */
  .marquee-feat-container {
    display: flex;
    overflow: hidden;
    white-space: nowrap;
    background: rgba(255, 255, 255, 0.02);
    padding: 20px 0;
    position: relative;
  }

  .marquee-feat-content {
    display: inline-block;
    white-space: nowrap;
    animation: scrollLinear {{ section.settings.speed }}s linear infinite;
  }

  .marquee-feat-item {
    font-family: 'Ethnocentric', sans-serif;
    font-size: 1.1rem;
    display: inline-block;
    padding: 0 40px;
    text-transform: uppercase;
    letter-spacing: 1px;
    transition: 0.3s;
  }

  .feat-dot {
    margin-right: 15px;
    font-size: 0.8rem;
    vertical-align: middle;
    filter: drop-shadow(0 0 5px currentColor);
  }

  /* ANIMACIÓN DE DESPLAZAMIENTO */
  @keyframes scrollLinear {
    from { transform: translateX(0); }
    to { transform: translateX(-33.33%); }
  }

  /* Pausar al pasar el mouse */
  .marquee-feat-container:hover .marquee-feat-content {
    animation-play-state: paused;
  }

  @media (max-width: 768px) {
    .marquee-feat-item { font-size: 0.9rem; padding: 0 25px; }
  }
</style>

{% schema %}
{
  "name": "Características Scroll",
  "settings": [
    { "type": "color", "id": "bg_color", "label": "Fondo", "default": "#000000" },
    { "type": "color", "id": "accent_color", "label": "Color Neón", "default": "#00f2ff" },
    { "type": "text", "id": "section_title", "label": "Título Sección", "default": "Especificaciones 8K" },
    { "type": "range", "id": "speed", "min": 10, "max": 60, "step": 5, "unit": "s", "label": "Velocidad (Segundos)", "default": 20 }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Punto",
      "settings": [
        { "type": "text", "id": "feature_text", "label": "Característica", "default": "Pantalla AMOLED" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Características Scroll",
      "blocks": [
        { "type": "feature", "settings": { "feature_text": "Pantallas AMOLED curvas" } },
        { "type": "feature", "settings": { "feature_text": "Llamadas Bluetooth ultra claras" } },
        { "type": "feature", "settings": { "feature_text": "Monitoreo de salud 24/7" } },
        { "type": "feature", "settings": { "feature_text": "100+ modos deportivos" } },
        { "type": "feature", "settings": { "feature_text": "Compatibles con iPhone y Android" } }
      ]
    }
  ]
}
{% endschema %}