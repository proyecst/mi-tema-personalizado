<section class="cat-grid section-{{ section.id }} page-width">
  <div class="cat-grid__wrapper">
    {% for block in section.blocks %}
      <a href="{{ block.settings.link }}" class="cat-item">
        <div class="cat-item__image">
          {% if block.settings.image != blank %}
            {{ block.settings.image | image_url: width: 300 | image_tag: loading: 'lazy' }}
          {% else %}
            {{ 'product-1' | placeholder_svg_tag }}
          {% endif %}
        </div>
        <div class="cat-item__title">
          {{ block.settings.title }}
        </div>
      </a>
    {% endfor %}
  </div>
</section>

<style>
  .cat-grid { padding: 50px 0; }
  .cat-grid__wrapper {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 15px;
  }
  
  @media (min-width: 750px) {
    .cat-grid__wrapper { grid-template-columns: repeat(4, 1fr); }
  }
  
  @media (min-width: 1200px) {
    .cat-grid__wrapper { grid-template-columns: repeat(6, 1fr); }
  }

  .cat-item { 
    text-decoration: none; 
    text-align: center; 
    transition: 0.3s ease; 
    background: #fdfdfd; 
    border: 1px solid #f0f0f0;
    border-radius: 12px;
    padding: 20px;
  }
  .cat-item:hover { border-color: #000; transform: scale(1.02); }
  .cat-item__image { margin-bottom: 10px; }
  .cat-item__image img { width: 100%; height: auto; max-width: 120px; mix-blend-mode: multiply; }
  .cat-item__title { font-weight: 600; color: #000; font-size: 13px; text-transform: uppercase; }
</style>

{% schema %}
{
  "name": "Grid de Categorías",
  "blocks": [
    {
      "type": "category",
      "name": "Categoría",
      "settings": [
        { "type": "image_picker", "id": "image", "label": "Imagen" },
        { "type": "text", "id": "title", "label": "Nombre", "default": "Categoría" },
        { "type": "url", "id": "link", "label": "Enlace" }
      ]
    }
  ],
  "presets": [{ "name": "Grid de Categorías" }]
}
{% endschema %}