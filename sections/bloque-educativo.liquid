{%- style -%}
  #shopify-section-{{ section.id }} {
    background-color: {{ section.settings.bg_color }};
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }

  .edu-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .edu-header {
    text-align: center;
    margin-bottom: 40px;
  }

  /* Estilo para las Guías Destacadas */
  .edu-featured-guides {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 20px;
    margin-bottom: 50px;
  }

  .edu-guide-card {
    background: #000;
    color: #fff;
    padding: 30px 20px;
    border-radius: 12px;
    text-decoration: none;
    text-align: center;
    transition: transform 0.3s ease;
    display: flex;
    flex-direction: column;
    justify-content: center;
    min-height: 150px;
  }

  .edu-guide-card:hover {
    transform: translateY(-5px);
    background: #222;
  }

  .edu-guide-card h3 {
    font-size: 1.2rem;
    margin: 0;
    line-height: 1.4;
  }

  /* Estilo para los Artículos del Blog */
  .edu-blog-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 30px;
  }

  .edu-blog-item {
    text-decoration: none;
    color: inherit;
  }

  .edu-blog-image {
    aspect-ratio: 16/9;
    background: #eee;
    border-radius: 8px;
    overflow: hidden;
    margin-bottom: 15px;
  }

  .edu-blog-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .edu-blog-title {
    font-size: 1rem;
    font-weight: bold;
    margin-bottom: 8px;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .edu-cta-wrapper {
    text-align: center;
    margin-top: 50px;
  }

  .edu-btn {
    display: inline-block;
    padding: 12px 40px;
    border: 2px solid #000;
    color: #000;
    text-decoration: none;
    font-weight: bold;
    border-radius: 4px;
    transition: all 0.3s;
  }

  .edu-btn:hover {
    background: #000;
    color: #fff;
  }

  @media screen and (max-width: 749px) {
    .edu-featured-guides {
      grid-template-columns: 1fr;
    }
    .edu-blog-grid {
      grid-template-columns: 1fr;
    }
  }
{%- endstyle -%}

<div class="edu-container">
  <div class="edu-header">
    <h2>{{ section.settings.title }}</h2>
  </div>

  <div class="edu-featured-guides">
    {% for block in section.blocks %}
      {% if block.type == 'guide' %}
        <a href="{{ block.settings.link }}" class="edu-guide-card">
          <h3>{{ block.settings.title }}</h3>
          <span style="font-size: 0.8rem; margin-top: 10px; opacity: 0.8;">Leer guía →</span>
        </a>
      {% endif %}
    {% endfor %}
  </div>

  <div class="edu-blog-grid">
    {% assign blog_handle = section.settings.blog_id %}
    {% for article in blogs[blog_handle].articles limit: section.settings.post_limit %}
      <a href="{{ article.url }}" class="edu-blog-item">
        <div class="edu-blog-image">
          {% if article.image %}
            <img src="{{ article.image | image_url: width: 500 }}" alt="{{ article.title }}" loading="lazy">
          {% endif %}
        </div>
        <h4 class="edu-blog-title">{{ article.title }}</h4>
        <span style="font-size: 0.85rem; color: #666;">{{ article.published_at | date: "%d %b, %Y" }}</span>
      </a>
    {% endfor %}
  </div>

  <div class="edu-cta-wrapper">
    <a href="{{ blogs[blog_handle].url }}" class="edu-btn">
      {{ section.settings.cta_text }}
    </a>
  </div>
</div>

{% schema %}
{
  "name": "Bloque Educativo",
  "settings": [
    { "type": "text", "id": "title", "label": "Título", "default": "Aprende más sobre tu Smartwatch" },
    { "type": "blog", "id": "blog_id", "label": "Seleccionar Blog" },
    { "type": "range", "id": "post_limit", "min": 2, "max": 4, "step": 1, "label": "Cantidad de posts", "default": 3 },
    { "type": "text", "id": "cta_text", "label": "Texto Botón", "default": "Leer el Blog" },
    { "type": "color", "id": "bg_color", "label": "Fondo", "default": "#ffffff" },
    { "type": "range", "id": "padding_top", "min": 0, "max": 100, "default": 50, "unit": "px", "label": "Padding Superior" },
    { "type": "range", "id": "padding_bottom", "min": 0, "max": 100, "default": 50, "unit": "px", "label": "Padding Inferior" }
  ],
  "blocks": [
    {
      "type": "guide",
      "name": "Guía Rápida",
      "limit": 3,
      "settings": [
        { "type": "text", "id": "title", "label": "Título", "default": "Cómo Elegir el Smartwatch Ideal" },
        { "type": "url", "id": "link", "label": "Enlace a la Guía" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Bloque Educativo",
      "blocks": [
        { "type": "guide", "settings": { "title": "Cómo Elegir el Smartwatch Ideal" } },
        { "type": "guide", "settings": { "title": "Guía de Cuidado del Smartwatch" } },
        { "type": "guide", "settings": { "title": "Trucos de KieslectOS 2.0" } }
      ]
    }
  ]
}
{% endschema %}