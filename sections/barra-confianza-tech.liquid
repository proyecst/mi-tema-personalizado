<script>
  // Función para manejar los desplegables
  function toggleTrust(element) {
    const wrapper = element.parentElement;
    const isActive = wrapper.classList.contains('is-active');
    document.querySelectorAll('.trust-item-wrapper').forEach(w => w.classList.remove('is-active'));
    if (!isActive) wrapper.classList.add('is-active');
  }

  // Función para rastreo de pedidos
  function trackOrder() {
    const orderId = document.getElementById('trackInput').value;
    if(orderId) {
      window.location.href = `/account/orders`; // O tu app de rastreo específica
    } else {
      alert("Por favor ingresa tu número de pedido");
    }
  }

  // Función para simular registro de Garantía
  function registerSN() {
    const sn = document.getElementById('snInput').value;
    if(sn.length > 5) {
      alert("SISTEMA: El número de serie " + sn + " ha sido enviado para validación.");
    } else {
      alert("Ingresa un número de serie válido.");
    }
  }

  // FUNCIÓN MAESTRA PARA ABRIR EL CHAT IA
  function openAIChat() {
    // Intenta detectar los widgets de chat más comunes en Shopify
    const shopifyInbox = window.ShopifyChat;
    const tidio = window.tidioChatApi;
    const chatra = window.Chatra;

    if (shopifyInbox) {
      shopifyInbox.show();
    } else if (tidio) {
      tidio.show();
      tidio.open();
    } else if (chatra) {
      chatra('openChat', true);
    } else {
      // Si no hay app instalada, busca el botón flotante genérico y hazle click
      const genericChat = document.querySelector('[aria-label="Chat"]' ) || document.querySelector('#shopify-chat');
      if (genericChat) {
        genericChat.click();
      } else {
        alert("Iniciando Asistente IA... (Asegúrate de tener Shopify Inbox o un Chat instalado)");
      }
    }
  }
</script>

