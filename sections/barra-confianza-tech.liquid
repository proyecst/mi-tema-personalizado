<<style>
  :root { --k-cyan: #00D1FF; --k-dark: #050505; }
  .trust-bar-section { background-color: #000; padding: 40px 0; border-top: 1px solid #1a1a1a; font-family: 'Inter', sans-serif; }
  .trust-bar-grid { 
    display: grid; 
    grid-template-columns: repeat(4, 1fr); 
    gap: 15px; 
    max-width: 1400px; 
    margin: 0 auto; 
    padding: 0 20px; 
  }
  .trust-item-wrapper { background: var(--k-dark); border-radius: 12px; border: 1px solid #1a1a1a; transition: 0.3s; overflow: hidden; }
  .trust-item-wrapper:hover { border-color: var(--k-cyan); }
  .trust-item-wrapper.is-active { border-color: var(--k-cyan); box-shadow: 0 0 15px rgba(0, 209, 255, 0.1); }
  
  .trust-header { display: flex; align-items: center; gap: 10px; padding: 15px; cursor: pointer; }
  .trust-icon-wrapper { width: 24px; color: var(--k-cyan); display: flex; align-items: center; }
  .trust-text { display: flex; flex-direction: column; }
  .trust-title { color: #fff; font-weight: 700; font-size: 11px; text-transform: uppercase; display: block; }
  .trust-subtitle { color: #666; font-size: 10px; }
  
  .trust-content { max-height: 0; overflow: hidden; transition: 0.3s ease-out; background: #080808; padding: 0 15px; }
  .trust-item-wrapper.is-active .trust-content { max-height: 600px; padding: 15px; border-top: 1px solid #1a1a1a; }
  
  /* BLOQUES DE CONTENIDO ADICIONAL (Add Content) */
  .add-content-box { background: #111; padding: 12px; border-radius: 8px; margin-bottom: 10px; border-left: 2px solid var(--k-cyan); }
  .add-content-box h4 { color: var(--k-cyan); font-size: 10px; margin: 0 0 5px 0; text-transform: uppercase; }
  .add-content-box p { color: #888; font-size: 9px; margin: 0; line-height: 1.3; }

  /* RASTREADOR TIEMPO REAL */
  .tracking-status { display: flex; justify-content: space-between; margin-top: 10px; position: relative; padding-bottom: 20px; }
  .step { font-size: 8px; color: #444; text-align: center; flex: 1; }
  .step.active { color: var(--k-cyan); font-weight: bold; }
  .progress-line { height: 2px; background: #222; position: absolute; top: 15px; left: 10%; right: 10%; z-index: 0; }
  .progress-fill { height: 100%; background: var(--k-cyan); width: 65%; }

  .trust-form { display: flex; flex-direction: column; gap: 8px; }
  .trust-input { background: #111; border: 1px solid #222; color: #fff; padding: 8px; border-radius: 4px; font-size: 10px; outline: none; width: 100%; }
  
