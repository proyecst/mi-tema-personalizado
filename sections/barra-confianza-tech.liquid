{%- style -%}
  :root { --k-cyan: #00D1FF; --k-dark: #050505; }
  .trust-bar-section { background-color: #000; padding: 40px 0; border-top: 1px solid #1a1a1a; }
  .trust-bar-grid { display: grid; grid-template-columns: repeat(4, 1fr); gap: 15px; max-width: 1400px; margin: 0 auto; padding: 0 20px; }
  .trust-item-wrapper { background: var(--k-dark); border-radius: 12px; border: 1px solid #1a1a1a; transition: 0.3s; overflow: hidden; }
  .trust-item-wrapper.is-active { border-color: var(--k-cyan); box-shadow: 0 0 15px rgba(0, 209, 255, 0.1); }
  .trust-header { display: flex; align-items: center; gap: 10px; padding: 15px; cursor: pointer; }
  .trust-icon-wrapper { width: 24px; color: var(--k-cyan); }
  .trust-title { color: #fff; font-weight: 700; font-size: 11px; text-transform: uppercase; display: block; }
  .trust-subtitle { color: #666; font-size: 10px; }
  .trust-content { max-height: 0; overflow: hidden; transition: 0.3s ease-out; background: #080808; padding: 0 15px; }
  .trust-item-wrapper.is-active .trust-content { max-height: 300px; padding: 10px 15px 20px 15px; border-top: 1px solid #1a1a1a; }
  .trust-btn { background: var(--k-cyan); color: #000; border: none; width: 100%; padding: 10px; border-radius: 5px; font-weight: 800; font-size: 10px; cursor: pointer; margin-top: 10px; }
  @media (max-width: 800px) { .trust-bar-grid { grid-template-columns: 1fr 1fr; } }
{%- endstyle -%}

<section class="trust-bar-section">
  <div class="trust-bar-grid">
    
    <div class="trust-item-wrapper">
      <div class="trust-header" onclick="toggleTrust(this)">
        <div class="trust-icon-wrapper"><svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M21 10H3M21 6H3M21 14H3M21 18H3"></path></svg></div>
        <div class="trust-text">
          <span class="trust-title">Mis Pedidos</span>
          <span class="trust-subtitle">{% if customer %}Tienes {{ customer.orders_count }} órdenes{% else %}Rastrear envío{% endif %}</span>
        </div>
      </div>
      <div class="trust-content">
        <button class="trust-btn" onclick="location.href='/account'">Ver Historial</button>
      </div>
    </div>

    <div class="trust-item-wrapper">
      <div class="trust-header" onclick="toggleTrust(this)">
        <div class="trust-icon-wrapper"><svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"></circle><path d="M12 16v-4M12 8h.01"></path></svg></div>
        <div class="trust-text">
          <span class="trust-title">Kieslect IA</span>
          <span class="trust-subtitle">{% if customer %}Hola, {{ customer.first_name }}{% else %}Soporte Inteligente{% endif %}</span>
        </div>
      </div>
      <div class="trust-content">
        <button class="trust-btn" onclick="openAIChat()">Consultar a la IA</button>
      </div>
    </div>

    </div>
</section>

<script>
 function openAIChat() {
  let mensaje = "Hola " + shopifyUserData.name + ". ";
  
  if (shopifyUserData.totalOrders > 0) {
    mensaje += "Veo que tienes " + shopifyUserData.totalOrders + " pedidos con nosotros. ¿Deseas ayuda con tu última compra (" + shopifyUserData.lastOrder + ")?";
  } else {
    mensaje += "Soy el asistente de Kieslect. ¿En qué sección de la tienda necesitas ayuda hoy? (Soporte, Garantías o Envíos)";
  }
  
  alert(mensaje); // Esto es una simulación. Aquí es donde se abriría tu ventana de chat real.
} 
  
</script>

