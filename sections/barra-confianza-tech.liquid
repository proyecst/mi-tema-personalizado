{%- style -%}
  :root {
    --k-cyan: #00D1FF;
    --k-dark: #050505;
    --k-gray: #111111;
  }

  .trust-bar-section {
    background-color: #000;
    padding: 60px 0;
    border-top: 1px solid #1a1a1a;
  }

  .trust-bar-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 15px;
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .trust-item-wrapper {
    position: relative;
    background: var(--k-dark);
    border-radius: 15px;
    border: 1px solid #1a1a1a;
    transition: 0.3s;
    overflow: hidden;
  }

  .trust-item-wrapper.is-active {
    border-color: var(--k-cyan);
    box-shadow: 0 0 20px rgba(0, 209, 255, 0.1);
  }

  .trust-header {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 20px;
    cursor: pointer;
  }

  .trust-icon-wrapper { width: 28px; height: 28px; color: var(--k-cyan); flex-shrink: 0; }
  .trust-title { color: #fff; font-weight: 800; font-size: 12px; text-transform: uppercase; display: block; }
  .trust-subtitle { color: #555; font-size: 10px; }

  /* CONTENIDO DESPLEGABLE */
  .trust-content {
    max-height: 0;
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    background: #0a0a0a;
    padding: 0 20px;
  }

  .trust-item-wrapper.is-active .trust-content {
    max-height: 400px;
    padding: 10px 20px 25px 20px;
    border-top: 1px solid #1a1a1a;
  }

  /* ESTILOS DE FORMULARIO INTERNO */
  .trust-input-group {
    margin-top: 15px;
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .trust-input {
    background: #151515;
    border: 1px solid #222;
    padding: 10px;
    border-radius: 5px;
    color: #fff;
    font-size: 12px;
    outline: none;
  }

  .trust-input:focus { border-color: var(--k-cyan); }

  .trust-btn {
    background: var(--k-cyan);
    color: #000;
    border: none;
    padding: 10px;
    border-radius: 5px;
    font-weight: 700;
    font-size: 11px;
    cursor: pointer;
    text-transform: uppercase;
    transition: 0.3s;
  }

  .trust-btn:hover { opacity: 0.9; transform: translateY(-2px); }

  @media (max-width: 1024px) { .trust-bar-grid { grid-template-columns: repeat(2, 1fr); } }
  @media (max-width: 650px) { .trust-bar-grid { grid-template-columns: 1fr; } }
{%- endstyle -%}

<section class="trust-bar-section">
