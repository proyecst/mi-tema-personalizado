<style>
  :root { --k-cyan: #00D1FF; --k-dark: #050505; }
  .trust-bar-section { background-color: #000; padding: 40px 0; border-top: 1px solid #1a1a1a; font-family: sans-serif; }
  .trust-bar-grid { 
    display: grid; 
    grid-template-columns: repeat(4, 1fr); 
    gap: 15px; 
    max-width: 1400px; 
    margin: 0 auto; 
    padding: 0 20px; 
  }
  .trust-item-wrapper { background: var(--k-dark); border-radius: 12px; border: 1px solid #1a1a1a; overflow: hidden; }
  .trust-item-wrapper.is-active { border-color: var(--k-cyan); }
  
  .trust-header { display: flex; align-items: center; gap: 10px; padding: 15px; cursor: pointer; }
  .trust-icon-wrapper { width: 24px; color: var(--k-cyan); }
  .trust-title { color: #fff; font-weight: 700; font-size: 11px; text-transform: uppercase; display: block; }
  .trust-subtitle { color: #666; font-size: 10px; }
  
  /* Contenido expandible */
  .trust-content { display: none; background: #080808; padding: 15px; border-top: 1px solid #1a1a1a; }
  .is-active .trust-content { display: block; }

  /* Bloque de Contenido Adicional (Add Block) */
  .add-block { background: #111; padding: 10px; border-radius: 6px; margin-bottom: 10px; border-left: 3px solid var(--k-cyan); }
  .add-block p { color: #ccc; font-size: 10px; margin: 0; }

  /* Rastreador visual */
  .tracker-ui { margin: 10px 0; padding: 5px; }
  .tracker-line { height: 4px; background: #222; border-radius: 2px; position: relative; margin-bottom: 10px; }
  .tracker-fill { height: 100%; width: 60%; background: var(--k-cyan); border-radius: 2px; }
  .tracker-steps { display: flex; justify-content: space-between; color: #555; font-size: 8px; }
  .tracker-steps span.done { color: var(--k-cyan); font-weight: bold; }

  /* Inputs y Botones */
  .trust-input { background: #111; border: 1px solid #333; color: #fff; padding: 8px; border-radius: 4px; font-size: 10px; width: 100%; margin-bottom: 8px; box-sizing: border-box; }
  .trust-btn { 
    background: var(--k-cyan); color: #000; border: none; width: 100%; padding: 10px; 
    border-radius: 5px; font-weight: 800; font-size: 10px; cursor: pointer; 
    text-transform: uppercase; text-decoration: none; display: block; text-align: center;
  }
  .trust-btn:hover { background: #fff; }

  @media (max-width: 900px) { .trust-bar-grid { grid-template-columns: 1fr 1fr; } }
  @media (max-width: 600px) { .trust-bar-grid { grid-template-columns: 1fr; } }
</style>

