{%- style -%}
  :root {
    --k-cyan: #00D1FF;
    --k-dark: #050505;
    --k-gray: #111111;
  }

  .trust-bar-section {
    background-color: #000;
    padding: 60px 0;
    border-top: 1px solid #1a1a1a;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
  }

  .trust-bar-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 15px;
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .trust-item-wrapper {
    position: relative;
    background: var(--k-dark);
    border-radius: 15px;
    border: 1px solid #1a1a1a;
    transition: all 0.3s ease;
    overflow: hidden;
  }

  .trust-item-wrapper.is-active {
    border-color: var(--k-cyan);
    box-shadow: 0 0 25px rgba(0, 209, 255, 0.15);
    transform: translateY(-5px);
  }

  .trust-header {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 20px;
    cursor: pointer;
    user-select: none;
  }

  .trust-icon-wrapper { width: 28px; height: 28px; color: var(--k-cyan); flex-shrink: 0; }
  .trust-icon-wrapper svg { width: 100%; height: 100%; }

  .trust-text { display: flex; flex-direction: column; }
  .trust-title { color: #fff; font-weight: 800; font-size: 12px; text-transform: uppercase; letter-spacing: 0.5px; }
  .trust-subtitle { color: #555; font-size: 10px; margin-top: 2px; }

  /* CONTENIDO DESPLEGABLE */
  .trust-content {
    max-height: 0;
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    background: #0a0a0a;
    padding: 0 20px;
  }

  .trust-item-wrapper.is-active .trust-content {
    max-height: 400px;
    padding: 10px 20px 25px 20px;
    border-top: 1px solid #1a1a1a;
  }

  /* FORMULARIOS E INPUTS */
  .trust-input-group {
    margin-top: 15px;
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .trust-input {
    background: #151515;
    border: 1px solid #222;
    padding: 12px;
    border-radius: 8px;
    color: #fff;
    font-size: 12px;
    outline: none;
    transition: 0.3s;
  }

  .trust-input:focus { border-color: var(--k-cyan); background: #1a1a1a; }

  .trust-btn {
    background: var(--k-cyan);
    color: #000;
    border: none;
    padding: 12px;
    border-radius: 8px;
    font-weight: 800;
    font-size: 11px;
    cursor: pointer;
    text-transform: uppercase;
    transition: 0.3s;
    letter-spacing: 1px;
  }

  .trust-btn:hover { 
    filter: brightness(1.2);
    box-shadow: 0 0 15px var(--k-cyan);
  }

  .trust-description { color: #888; font-size: 11px; line-height: 1.4; margin: 0; }

  @media (max-width: 1024px) { .trust-bar-grid { grid-template-columns: repeat(2, 1fr); } }
  @media (max-width: 650px) { 
    .trust-bar-grid { grid-template-columns: 1fr; }
    .trust-bar-section { padding: 30px 0; }
  }
{%- endstyle -%}

