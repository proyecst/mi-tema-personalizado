<style>
  :root {
    --k-cyan: #00D1FF;
    --k-dark: #0a0a0a;
    --k-gray: #1a1a1a;
  }

  .trust-bar-section {
    background-color: var(--k-dark);
    padding: 30px 0;
    border-top: 1px solid #222;
    border-bottom: 1px solid #222;
    overflow: hidden;
  }

  .trust-bar-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .trust-bar-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 20px;
  }

  .trust-item {
    display: flex;
    align-items: center;
    gap: 15px;
    padding: 15px;
    border-radius: 15px;
    transition: all 0.3s ease;
    cursor: default;
    border: 1px solid transparent;
  }

  .trust-item:hover {
    background: var(--k-gray);
    border-color: var(--k-cyan);
    box-shadow: 0 0 20px rgba(0, 209, 255, 0.15);
    transform: translateY(-3px);
  }

  .trust-icon-wrapper {
    position: relative;
    width: 45px;
    height: 45px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--k-cyan);
    flex-shrink: 0;
  }

  .trust-icon-wrapper svg {
    width: 26px;
    height: 26px;
    z-index: 2;
    transition: transform 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  }

  .trust-item:hover svg {
    transform: rotate(-10deg) scale(1.1);
  }

  .icon-pulse {
    position: absolute;
    width: 100%;
    height: 100%;
    background: var(--k-cyan);
    border-radius: 50%;
    opacity: 0.1;
    transition: 0.3s;
  }

  .trust-item:hover .icon-pulse {
    animation: k-ping 1.5s infinite ease-out;
  }

  @keyframes k-ping {
    0% { transform: scale(1); opacity: 0.3; }
    100% { transform: scale(1.8); opacity: 0; }
  }

  .trust-text {
    display: flex;
    flex-direction: column;
  }

  .trust-title {
    color: #fff;
    font-weight: 700;
    font-size: 15px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .trust-subtitle {
    color: #888;
    font-size: 12px;
    margin-top: 2px;
  }

  /* Responsive Móvil */
  @media (max-width: 1024px) {
    .trust-bar-grid { grid-template-columns: repeat(2, 1fr); }
  }

  @media (max-width: 600px) {
    .trust-bar-grid { grid-template-columns: 1fr; gap: 10px; }
    .trust-item { padding: 10px; }
    .trust-bar-section { padding: 20px 0; }
  }
</style>

