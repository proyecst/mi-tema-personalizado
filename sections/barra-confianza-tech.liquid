        <p style="color: #888; font-size: 11px;">¿Tienes un problema técnico?</p>
        <div class="trust-input-group">
          <a href="https://wa.me/TUNUMERO" class="trust-btn" style="text-align:center; text-decoration:none;">Iniciar Chat</a>
        </div>
      </div>
    </div>

  </div>
</section>

<script>
  function toggleTrust(element) {
    const wrapper = element.parentElement;
    const isActive = wrapper.classList.contains('is-active');
    
    document.querySelectorAll('.trust-item-wrapper').forEach(w => w.classList.remove('is-active'));
    
    if (!isActive) {
      wrapper.classList.add('is-active');
    }
  }

  function trackOrder() {
    const orderId = event.target.previousElementSibling.value;
    if(orderId) {
      // Redirige a la página de rastreo nativa de Shopify o de tu transportista
      window.location.href = `/apps/track-order?id=${orderId}`;
    } else {
      alert("Por favor ingresa un número de pedido");
    }
  }
</script>