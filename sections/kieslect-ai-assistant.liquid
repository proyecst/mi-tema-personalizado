<div class="asistente-container" style="padding: 20px; border: 1px solid #ccc; border-radius: 8px; text-align: center;">
  <h3>Asistente de Dispositivos</h3>
  <p id="status-text">Presiona el bot칩n para buscar tu reloj inteligente.</p>
  
  <div style="margin-bottom: 20px;">
    <button id="btn-scan" style="background-color: #000; color: #fff; padding: 10px 20px; cursor: pointer;">
      游댌 Escanear Reloj
    </button>
  </div>

  <div id="tareas-basicas" style="display:none; border-top: 1px solid #eee; pt: 15px;">
    <h4>Tareas R치pidas</h4>
    <button onclick="ejecutarTarea('hora')">Ver Hora</button>
    <button onclick="ejecutarTarea('soporte')">Pedir Ayuda</button>
    <p id="respuesta-logica" style="font-weight: bold; margin-top: 10px; color: #2c3e50;"></p>
  </div>
</div>

<script>
  const btnScan = document.getElementById('btn-scan');
  const statusText = document.getElementById('status-text');
  const tareasDiv = document.getElementById('tareas-basicas');
  const respuestaLogica = document.getElementById('respuesta-logica');

  // Funci칩n para "Escanear" mediante Bluetooth Web
  btnScan.addEventListener('click', async () => {
    try {
      statusText.innerText = "Buscando dispositivos...";
      
      // Busca dispositivos que emitan servicios de "Battery" o "Heart Rate" (comunes en relojes)
      const device = await navigator.bluetooth.requestDevice({
        acceptAllDevices: true,
        optionalServices: ['battery_service', 'heart_rate']
      });

      statusText.innerText = "Reloj ubicado: " + device.name;
      statusText.style.color = "green";
      tareasDiv.style.display = "block";
      
    } catch (error) {
      console.log(error);
      statusText.innerText = "Escaneo cancelado o no soportado.";
      statusText.style.color = "red";
    }
  });

  // L칩gica de tareas b치sicas
  function ejecutarTarea(tipo) {
    if (tipo === 'hora') {
      const ahora = new Date().toLocaleTimeString();
      respuestaLogica.innerText = "La hora local es: " + ahora;
    } else if (tipo === 'soporte') {
      respuestaLogica.innerText = "Enviando ticket a soporte t칠cnico... (Simulado)";
    }
  }
</script>