{%- style -%}
  .k-footer {
    background-color: {{ section.settings.bg_color }};
    color: {{ section.settings.text_color }};
    padding: 60px 0 30px 0;
    font-family: 'Inter', sans-serif;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .footer-container {
    max-width: 95%; 
    margin: 0 auto;
    padding: 0 40px;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    gap: 30px;
  }

  .footer-column {
    flex: 1;
    min-width: 180px;
  }

  .footer-column h3 {
    font-size: 0.8rem; 
    font-weight: 700;
    text-transform: uppercase;
    margin-bottom: 20px;
    color: {{ section.settings.accent_color }};
    letter-spacing: 1px;
  }

  .footer-list { list-style: none; padding: 0; margin: 0; }
  .footer-list li { 
    margin-bottom: 12px; 
    display: flex; 
    align-items: center; 
    line-height: 1.4;
  } 
  
  .footer-list li::before {
    content: "●";
    font-size: 6px;
    margin-right: 10px;
    color: {{ section.settings.accent_color }};
    opacity: 0.6;
  }

  .footer-list a {
    text-decoration: none;
    color: {{ section.settings.text_color }};
    opacity: 0.7;
    font-size: 0.75rem; 
    transition: 0.2s;
  }

  .footer-list a:hover { 
    opacity: 1; 
    padding-left: 5px;
  }

  .footer-bottom {
    max-width: 95%;
    margin: 50px auto 0;
    padding: 20px 40px;
    border-top: 1px solid rgba(255, 255, 255, 0.05);
    display: flex;
    justify-content: space-between;
    font-size: 0.7rem;
    opacity: 0.5;
  }

  .social-icons-box { display: flex; gap: 10px; margin-top: 15px; }
  .social-icon { 
    color: {{ section.settings.text_color }}; 
    text-decoration: none; 
    font-size: 0.65rem; 
    border: 1px solid rgba(255,255,255,0.1);
    padding: 6px 12px;
    border-radius: 4px;
    transition: 0.3s;
  }

  .social-icon:hover {
    background: {{ section.settings.accent_color }};
    color: #000;
  }

  @media (max-width: 768px) {
    .footer-container { flex-direction: column; }
    .footer-column { min-width: 100%; }
  }
{%- endstyle -%}

<footer class="k-footer">
  <div class="footer-container">
    
    {%- for block in section.blocks -%}
      <div class="footer-column" {{ block.shopify_attributes }}>
        
        {%- case block.type -%}
          {%- when 'menu' -%}
            <h3>{{ block.settings.title }}</h3>
            <ul class="footer-list">
              {%- for link in block.settings.menu.links -%}
                <li><a href="{{ link.url }}">{{ link.title }}</a></li>
              {%- endfor -%}
            </ul>

          {%- when 'brand' -%}
            {% if block.settings.image != blank %}
              <img src="{{ block.settings.image | img_url: '200x' }}" style="margin-bottom: 15px; max-width: 150px;">
            {% endif %}
            <h3>{{ block.settings.title }}</h3>
            <p style="font-size: 0.75rem; opacity: 0.6;">{{ block.settings.text }}</p>

          {%- when 'social' -%}
            <h3>{{ block.settings.title }}</h3>
            <div class="social-icons-box">
               <a href="{{ settings.social_instagram_link }}" class="social-icon">INSTAGRAM</a>
               <a href="{{ settings.social_facebook_link }}" class="social-icon">FACEBOOK</a>
               <a href="{{ settings.social_tiktok_link }}" class="social-icon">TIKTOK</a>
            </div>
        {%- endcase -%}

      </div>
    {%- endfor -%}

  </div>

  <div class="footer-bottom">
    <div>&copy; {{ 'now' | date: "%Y" }} {{ section.settings.copyright_text }}</div>
    <div>Kieslect Official</div>
  </div>
</footer>

{% schema %}
{
  "name": "Kieslect Footer Slim",
  "max_blocks": 8,
  "settings": [
    { "type": "color", "id": "bg_color", "label": "Fondo", "default": "#000000" },
    { "type": "color", "id": "text_color", "label": "Texto", "default": "#ffffff" },
    { "type": "color", "id": "accent_color", "label": "Color Acento", "default": "#00D1FF" },
    { "type": "text", "id": "copyright_text", "label": "Copyright", "default": "Kieslect" }
  ],
  "blocks": [
    {
      "type": "menu",
      "name": "Columna de Links",
      "settings": [
        { "type": "text", "id": "title", "label": "Título de Columna", "default": "Menú" },
        { "type": "link_list", "id": "menu", "label": "Seleccionar Menú" }
      ]
    },
    {
      "type": "brand",
      "name": "Logo/Info",
      "settings": [
        { "type": "image_picker", "id": "image", "label": "Logo" },
        { "type": "text", "id": "title", "label": "Título", "default": "KIESLECT" },
        { "type": "textarea", "id": "text", "label": "Descripción" }
      ]
    },
    {
      "type": "social",
      "name": "Redes Sociales",
      "limit": 1,
      "settings": [
        { "type": "text", "id": "title", "label": "Título", "default": "Síguenos" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Kieslect Footer Slim",
      "blocks": [
        { "type": "menu", "settings": { "title": "Compañía" } },
        { "type": "menu", "settings": { "title": "Atención al Cliente" } },
        { "type": "menu", "settings": { "title": "Tienda" } },
        { "type": "social" }
      ]
    }
  ]
}
{% endschema %}