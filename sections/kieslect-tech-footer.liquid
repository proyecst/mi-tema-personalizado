{%- style -%}
  .k-footer {
    background-color: {{ section.settings.bg_color }};
    color: {{ section.settings.text_color }};
    padding: 60px 0 30px 0;
    font-family: 'Inter', sans-serif;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .footer-container {
    max-width: 95%; 
    margin: 0 auto;
    padding: 0 40px;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    gap: 30px;
  }

  .footer-column {
    flex: 1;
    min-width: 180px;
  }

  .footer-column h3 {
    font-size: 0.8rem; 
    font-weight: 700;
    text-transform: uppercase;
    margin-bottom: 20px;
    color: {{ section.settings.accent_color }};
    letter-spacing: 1px;
  }

  .footer-list { list-style: none; padding: 0; margin: 0; }
  .footer-list li { 
    margin-bottom: 12px; 
    display: flex; 
    align-items: center; 
  } 
  
  .footer-list li::before {
    content: "●";
    font-size: 6px;
    margin-right: 10px;
    color: {{ section.settings.accent_color }};
    opacity: 0.6;
  }

  .footer-list a {
    text-decoration: none;
    color: {{ section.settings.text_color }};
    opacity: 0.7;
    font-size: 0.75rem; 
    transition: 0.2s;
  }

  .footer-list a:hover { 
    opacity: 1; 
    padding-left: 5px;
  }

  .footer-bottom {
    max-width: 95%;
    margin: 50px auto 0;
    padding: 20px 40px;
    border-top: 1px solid rgba(255, 255, 255, 0.05);
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 0.7rem;
    opacity: 0.5;
  }

  .social-icons-box { display: flex; gap: 10px; margin-top: 15px; }
  .social-icon { 
    color: {{ section.settings.text_color }}; 
    text-decoration: none; 
    font-size: 0.65rem; 
    border: 1px solid rgba(255,255,255,0.1);
    padding: 6px 12px;
    border-radius: 4px;
    transition: 0.3s;
  }

  .social-icon:hover {
    background: {{ section.settings.accent_color }};
    color: #000;
  }

  @media (max-width: 768px) {
    .footer-container { flex-direction: column; }
    .footer-bottom { flex-direction: column; gap: 10px; text-align: center; }
  }
{%- endstyle -%}

<footer class="k-footer">
  <div class="footer-container">
    {%- for block in section.blocks -%}
      <div class="footer-column" {{ block.shopify_attributes }}>
        
        {%- case block.type -%}
          {%- when 'menu' -%}
            {%- if block.settings.title != blank -%}
              <h3>{{ block.settings.title }}</h3>
            {%- endif -%}
            <ul class="footer-list">
              {%- for link in block.settings.menu.links -%}
                <li><a href="{{ link.url }}">{{ link.title }}</a></li>
              {%- endfor -%}
            </ul>

          {%- when 'text' -%}
            {%- if block.settings.title != blank -%}
              <h3>{{ block.settings.title }}</h3>
            {%- endif -%}
            <div style="font-size: 0.75rem; opacity: 0.7; line-height: 1.6;">
              {{ block.settings.content }}
            </div>
            {%- if block.settings.link_text != blank -%}
              <a href="{{ block.settings.link_url }}" style="color: {{ section.settings.accent_color }}; text-decoration: none; font-size: 0.75rem; margin-top: 10px; display: inline-block;">
                {{ block.settings.link_text }} →
              </a>
            {%- endif -%}

          {%- when 'social' -%}
            {%- if block.settings.title != blank -%}
              <h3>{{ block.settings.title }}</h3>
            {%- endif -%}
            <div class="social-icons-box">
              {%- if settings.social_facebook_link != blank -%}<a href="{{ settings.social_facebook_link }}" class="social-icon">FACEBOOK</a>{%- endif -%}
              {%- if settings.social_instagram_link != blank -%}<a href="{{ settings.social_instagram_link }}" class="social-icon">INSTAGRAM</a>{%- endif -%}
              {%- if settings.social_tiktok_link != blank -%}<a href="{{ settings.social_tiktok_link }}" class="social-icon">TIKTOK</a>{%- endif -%}
            </div>
        {%- endcase -%}

      </div>
    {%- endfor -%}
  </div>

  <div class="footer-bottom">
    <div>&copy; {{ 'now' | date: "%Y" }} {{ section.settings.copyright_text }}</div>
    <div style="display: flex; gap: 20px;">
        <a href="{{ section.settings.bottom_link_url }}" style="color: inherit; text-decoration: none;">{{ section.settings.bottom_link_text }}</a>
        <span>Kieslect Official</span>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Kieslect Footer Pro",
  "max_blocks": 5,
  "settings": [
    { "type": "color", "id": "bg_color", "label": "Fondo", "default": "#000000" },
    { "type": "color", "id": "text_color", "label": "Texto", "default": "#ffffff" },
    { "type": "color", "id": "accent_color", "label": "Color Acento", "default": "#00D1FF" },
    { "type": "text", "id": "copyright_text", "label": "Texto Copyright", "default": "Kieslect" },
    { "type": "text", "id": "bottom_link_text", "label": "Link inferior (ej. Privacidad)", "default": "Términos y Condiciones" },
    { "type": "url", "id": "bottom_link_url", "label": "URL Link inferior" }
  ],
  "blocks": [
    {
      "type": "menu",
      "name": "Menú de Navegación",
      "settings": [
        { "type": "text", "id": "title", "label": "Título", "default": "Menú" },
        { "type": "link_list", "id": "menu", "label": "Seleccionar Menú" }
      ]
    },
    {
      "type": "text",
      "name": "Bloque de Texto/Link",
      "settings": [
        { "type": "text", "id": "title", "label": "Título", "default": "Sobre Nosotros" },
        { "type": "richtext", "id": "content", "label": "Contenido", "default": "<p>Escribe aquí tu información de marca.</p>" },
        { "type": "text", "id": "link_text", "label": "Texto del botón", "default": "Saber más" },
        { "type": "url", "id": "link_url", "label": "Enlace del botón" }
      ]
    },
    {
      "type": "social",
      "name": "Redes Sociales",
      "limit": 1,
      "settings": [
        { "type": "text", "id": "title", "label": "Título", "default": "Síguenos" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Kieslect Footer Pro",
      "blocks": [
        { "type": "menu" },
        { "type": "menu" },
        { "type": "text" },
        { "type": "social" }
      ]
    }
  ]
}
{% endschema %}