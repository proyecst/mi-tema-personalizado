<style>
  @import url('https://fonts.googleapis.com/css2?family=Michroma&display=swap');
</style>

{%- style -%}
  .k-footer {
    background-color: {{ section.settings.bg_color | default: '#000000' }};
    color: {{ section.settings.text_color | default: '#ffffff' }};
    padding: 100px 0 40px 0;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    --k-cyan: {{ section.settings.accent_color | default: '#00D1FF' }};
  }

  .footer-container {
    max-width: 1400px; 
    margin: 0 auto;
    padding: 0 40px;
    display: grid;
    grid-template-columns: repeat(5, 1fr); 
    gap: 40px;
  }

  /* --- TÍTULOS DE COLUMNA (ESTILO ETHNOCENTRIC) --- */
  .footer-column h3 {
    font-family: 'Michroma', sans-serif !important;
    font-size: 11px; 
    font-weight: 700;
    text-transform: uppercase;
    margin-bottom: 35px;
    letter-spacing: 3px;
    line-height: 1.4;
    
    /* Efecto Shine */
    background: linear-gradient(120deg, rgba(255,255,255,0.1) 30%, var(--k-cyan) 50%, rgba(255,255,255,0.1) 70%);
    background-size: 200% 100%;
    -webkit-background-clip: text;
    background-clip: text;
    color: rgba(255, 255, 255, 0.9);
    animation: footerTitleShine 6s infinite linear;
  }

  @keyframes footerTitleShine {
    0% { background-position: 200% 0; }
    100% { background-position: -200% 0; }
  }

  .footer-list { list-style: none; padding: 0; margin: 0; }
  .footer-list li { 
    margin-bottom: 15px; 
    display: flex; 
    align-items: center; 
  } 
  
  /* Indicador Técnico */
  .footer-list li::before {
    content: "";
    width: 8px;
    height: 1px;
    margin-right: 12px;
    background-color: var(--k-cyan);
    box-shadow: 0 0 8px var(--k-cyan);
    opacity: 0.8;
  }

  .footer-list a {
    text-decoration: none;
    color: {{ section.settings.text_color | default: '#ffffff' }};
    opacity: 0.5;
    font-size: 0.8rem; 
    font-family: sans-serif;
    transition: all 0.3s ease;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .footer-list a:hover { 
    opacity: 1; 
    color: var(--k-cyan);
    transform: translateX(8px);
    display: inline-block;
  }

  /* --- BOTTOM BAR --- */
  .footer-bottom {
    max-width: 1400px;
    margin: 80px auto 0;
    padding: 30px 40px;
    border-top: 1px solid rgba(255, 255, 255, 0.05);
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-family: 'Michroma', sans-serif !important;
    font-size: 8px;
    opacity: 0.5;
    letter-spacing: 2px;
  }

  .footer-tagline {
    color: var(--k-cyan);
    font-weight: bold;
  }

  @media (max-width: 1024px) {
    .footer-container { grid-template-columns: repeat(3, 1fr); }
  }

  @media (max-width: 768px) {
    .footer-container { grid-template-columns: 1fr 1fr; gap: 40px 20px;}
    .footer-bottom { flex-direction: column; gap: 20px; text-align: center; }
  }
{%- endstyle -%}

