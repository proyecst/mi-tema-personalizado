{%- style -%}
  .k-footer {
    background-color: {{ section.settings.bg_color }};
    color: {{ section.settings.text_color }};
    padding: 30px 0 15px 0; /* Antes 60px/30px */
    font-family: 'Inter', sans-serif;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .footer-container {
    max-width: 1100px; /* Más estrecho */
    margin: 0 auto;
    padding: 0 20px;
    display: grid;
    grid-template-columns: repeat(4, 1fr) 1.2fr;
    gap: 20px; /* Menos espacio entre columnas */
  }

  .footer-column h3 {
    font-size: 0.75rem; /* Más pequeño */
    font-weight: 700;
    text-transform: uppercase;
    margin-bottom: 12px; /* Menos margen */
    color: {{ section.settings.accent_color }};
    letter-spacing: 0.5px;
  }

  .footer-list { list-style: none; padding: 0; margin: 0; }
  .footer-list li { margin-bottom: 6px; display: flex; align-items: center; } /* Interlineado compacto */
  
  .footer-list li::before {
    content: "●";
    font-size: 6px; /* Punto más pequeño */
    margin-right: 8px;
    color: {{ section.settings.accent_color }};
    opacity: 0.6;
  }

  .footer-list a {
    text-decoration: none;
    color: {{ section.settings.text_color }};
    opacity: 0.7;
    font-size: 0.75rem; /* Texto pequeño */
    transition: 0.2s;
  }

  .footer-list a:hover { opacity: 1; }

  .footer-bottom {
    max-width: 1100px;
    margin: 25px auto 0;
    padding: 15px 20px;
    border-top: 1px solid rgba(255, 255, 255, 0.05);
    display: flex;
    justify-content: space-between;
    font-size: 0.65rem; /* Copyright extra pequeño */
    opacity: 0.4;
  }

  .social-icons-box { display: flex; gap: 10px; margin-top: 10px; }
  .social-icon { 
    color: {{ section.settings.text_color }}; 
    text-decoration: none; 
    font-size: 0.7rem; /* Iconos pequeños */
    border: 1px solid rgba(255,255,255,0.1);
    padding: 4px 8px;
    border-radius: 4px;
  }

  @media (max-width: 768px) {
    .footer-container { grid-template-columns: 1fr 1fr; gap: 15px; }
    .k-footer { padding: 20px 0; }
  }
{%- endstyle -%}

<footer class="k-footer">
  <div class="footer-container">
    
    <div class="footer-column">
      <h3>Compañía</h3>
      <ul class="footer-list">
        <li><a href="/pages/sobre-kieslect">Sobre Kieslect</a></li>
        <li><a href="/pages/contacto">Contacto</a></li>
        <li><a href="/pages/empleos">Empleos</a></li>
      </ul>
    </div>

    <div class="footer-column">
      <h3>Soporte</h3>
      <ul class="footer-list">
        <li><a href="/pages/faq">FAQ</a></li>
        <li><a href="/pages/envios">Envíos</a></li>
        <li><a href="/pages/devoluciones">Devoluciones</a></li>
        <li><a href="/pages/garantia">Garantía</a></li>
      </ul>
    </div>

    <div class="footer-column">
      <h3>Tienda</h3>
      <ul class="footer-list">
        <li><a href="/collections/smartwatches">Smartwatches</a></li>
        <li><a href="/collections/accesorios">Accesorios</a></li>
        <li><a href="/collections/novedades">Novedades</a></li>
      </ul>
    </div>

    <div class="footer-column">
      <h3>Legal</h3>
      <ul class="footer-list">
        <li><a href="/pages/politica-privacidad">Privacidad</a></li>
        <li><a href="/pages/terminos-condiciones">Términos</a></li>
      </ul>
    </div>

    <div class="footer-column">
      {% for block in section.blocks %}
        <div style="margin-bottom: 15px;" {{ block.shopify_attributes }}>
          <h3>{{ block.settings.title }}</h3>
          {% if block.settings.text != blank %}
            <p style="font-size: 0.7rem; opacity: 0.6; line-height: 1.4; margin: 0;">{{ block.settings.text }}</p>
          {% endif %}
          {% if block.type == 'social' %}
             <div class="social-icons-box">
               <a href="{{ settings.social_instagram_link }}" class="social-icon">INSTAGRAM</a>
               <a href="{{ settings.social_facebook_link }}" class="social-icon">FACEBOOK</a>
             </div>
          {% endif %}
        </div>
      {% endfor %}
    </div>

  </div>

  <div class="footer-bottom">
    <div>&copy; {{ 'now' | date: "%Y" }} {{ section.settings.copyright_text }}</div>
    <div>Kieslect Official</div>
  </div>
</footer>

{% schema %}
{
  "name": "Kieslect Footer Slim",
  "max_blocks": 8,
  "settings": [
    { "type": "color", "id": "bg_color", "label": "Fondo", "default": "#000000" },
    { "type": "color", "id": "text_color", "label": "Texto", "default": "#ffffff" },
    { "type": "color", "id": "accent_color", "label": "Color Acento", "default": "#00D1FF" },
    { "type": "text", "id": "copyright_text", "label": "Copyright", "default": "Kieslect" }
  ],
  "blocks": [
    {
      "type": "brand",
      "name": "Logo y Descripción",
      "settings": [
        { "type": "text", "id": "title", "label": "Título", "default": "KIESLECT" },
        { "type": "textarea", "id": "description", "label": "Descripción" }
      ]
    },
    {
      "type": "menu",
      "name": "Menú",
      "settings": [
        { "type": "text", "id": "title", "label": "Título", "default": "Menú" },
        { "type": "link_list", "id": "menu", "label": "Seleccionar Menú" }
      ]
    },
    {
      "type": "image_link",
      "name": "Imagen con Link",
      "settings": [
        { "type": "text", "id": "title", "label": "Título", "default": "Imagen" },
        { "type": "image_picker", "id": "image", "label": "Seleccionar Imagen" },
        { "type": "url", "id": "link", "label": "Enlace de Imagen" }
      ]
    },
    {
      "type": "text_block",
      "name": "Texto",
      "settings": [
        { "type": "text", "id": "title", "label": "Título", "default": "Blog" },
        { "type": "textarea", "id": "text", "label": "Contenido" }
      ]
    },
    {
      "type": "social",
      "name": "Redes",
      "limit": 1,
      "settings": [
        { "type": "text", "id": "title", "label": "Título", "default": "Sigue" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Kieslect Footer Slim",
      "blocks": [
        { "type": "brand" },
        { "type": "menu" },
        { "type": "image_link" },
        { "type": "social" }
      ]
    }
  ]
}
{% endschema %}