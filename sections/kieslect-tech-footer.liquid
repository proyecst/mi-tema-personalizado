{%- style -%}
  .k-footer {
    background-color: {{ section.settings.bg_color }};
    color: {{ section.settings.text_color }};
    padding: 60px 0 30px 0;
    font-family: 'Inter', sans-serif;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .footer-container {
    max-width: 95%; 
    margin: 0 auto;
    padding: 0 40px;
    display: grid;
    /* 5 columnas para que todo quepa a lo ancho */
    grid-template-columns: repeat(5, 1fr); 
    gap: 20px;
  }

  .footer-column h3 {
    font-size: 0.8rem; 
    font-weight: 700;
    text-transform: uppercase;
    margin-bottom: 20px;
    color: {{ section.settings.accent_color }};
    letter-spacing: 1px;
    min-height: 40px; /* Alinea los títulos */
  }

  .footer-list { list-style: none; padding: 0; margin: 0; }
  .footer-list li { 
    margin-bottom: 15px; 
    display: flex; 
    align-items: center; 
  } 
  
  .footer-list li::before {
    content: "●";
    font-size: 6px;
    margin-right: 12px;
    color: {{ section.settings.accent_color }};
    opacity: 0.8;
  }

  .footer-list a {
    text-decoration: none;
    color: {{ section.settings.text_color }};
    opacity: 0.7;
    font-size: 0.75rem; 
    transition: 0.2s;
  }

  .footer-list a:hover { opacity: 1; padding-left: 5px; }

  .social-icons-box { display: flex; flex-direction: column; gap: 10px; }
  .social-link {
    text-decoration: none;
    color: {{ section.settings.text_color }};
    font-size: 0.75rem;
    opacity: 0.7;
  }
  .social-link:hover { opacity: 1; }

  .footer-bottom {
    max-width: 95%;
    margin: 50px auto 0;
    padding: 20px 40px;
    border-top: 1px solid rgba(255, 255, 255, 0.05);
    display: flex;
    justify-content: space-between;
    font-size: 0.7rem;
    opacity: 0.4;
  }

  @media (max-width: 1024px) {
    .footer-container { grid-template-columns: repeat(3, 1fr); }
  }

  @media (max-width: 768px) {
    .footer-container { grid-template-columns: 1fr 1fr; }
  }
{%- endstyle -%}

