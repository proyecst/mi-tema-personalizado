{%- style -%}
  .k-footer {
    background-color: {{ section.settings.bg_color }};
    color: {{ section.settings.text_color }};
    padding: 80px 0 40px 0;
    font-family: 'Inter', sans-serif;
    border-top: 1px solid rgba(255, 255, 255, 0.05);
    position: relative;
    overflow: hidden;
  }

  /* Línea de luz superior */
  .k-footer::before {
    content: "";
    position: absolute;
    top: 0; left: 10%; width: 80%; height: 1px;
    background: linear-gradient(90deg, transparent, {{ section.settings.accent_color }}, transparent);
    opacity: 0.5;
  }

  .footer-container {
    max-width: 1300px;
    margin: 0 auto;
    padding: 0 25px;
    display: grid;
    grid-template-columns: 2fr repeat(3, 1fr);
    gap: 50px;
  }

  .footer-brand h2 {
    font-size: 1.8rem;
    font-weight: 900;
    letter-spacing: -1px;
    margin: 0 0 20px 0;
    text-transform: uppercase;
  }

  .footer-brand p {
    font-size: 0.95rem;
    line-height: 1.7;
    opacity: 0.6;
    max-width: 320px;
  }

  .footer-column h3 {
    font-size: 0.85rem;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 2px;
    margin-bottom: 25px;
    color: {{ section.settings.accent_color }};
  }

  .footer-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-list li {
    margin-bottom: 14px;
  }

  .footer-list a {
    text-decoration: none;
    color: {{ section.settings.text_color }};
    opacity: 0.5;
    font-size: 0.9rem;
    transition: all 0.3s ease;
    display: inline-block;
    position: relative;
  }

  .footer-list a::after {
    content: "";
    position: absolute;
    bottom: -2px; left: 0; width: 0; height: 1px;
    background: {{ section.settings.accent_color }};
    transition: width 0.3s;
  }

  .footer-list a:hover {
    opacity: 1;
    transform: translateX(5px);
  }

  .footer-list a:hover::after {
    width: 100%;
  }

  /* Bottom Bar */
  .footer-bottom {
    max-width: 1300px;
    margin: 60px auto 0 auto;
    padding: 30px 25px 0 25px;
    border-top: 1px solid rgba(255, 255, 255, 0.05);
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .footer-copyright {
    font-size: 0.75rem;
    opacity: 0.4;
    letter-spacing: 1px;
  }

  .footer-payment-icons {
    display: flex;
    gap: 10px;
    filter: grayscale(1) brightness(2);
    opacity: 0.5;
    transition: 0.3s;
  }

  .footer-payment-icons:hover {
    filter: grayscale(0) brightness(1);
    opacity: 1;
  }

  .footer-payment-icons svg, .footer-payment-icons img {
    width: 38px;
    height: auto;
  }

  /* Social Icons */
  .footer-socials {
    display: flex;
    gap: 20px;
    margin-top: 25px;
  }

  .footer-social-link {
    width: 35px;
    height: 35px;
    border: 1px solid rgba(255,255,255,0.1);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: 0.3s;
    color: {{ section.settings.text_color }};
  }

  .footer-social-link:hover {
    background: {{ section.settings.accent_color }};
    border-color: {{ section.settings.accent_color }};
    color: #000;
    transform: translateY(-3px);
  }

  @media screen and (max-width: 1024px) {
    .footer-container { grid-template-columns: 1fr 1fr; }
  }

  @media screen and (max-width: 600px) {
    .footer-container { grid-template-columns: 1fr; text-align: center; }
    .footer-brand p { margin: 0 auto; }
    .footer-bottom { flex-direction: column; gap: 25px; }
    .footer-socials { justify-content: center; }
  }
{%- endstyle -%}

