<style>
  @import url('https://fonts.googleapis.com/css2?family=Michroma&display=swap');
</style>

{%- style -%}
  :root { 
    --k-cyan: {{ section.settings.accent_color | default: '#00D1FF' }}; 
    --k-dark: #0a0a0a; 
    --font-futurista: 'Michroma', sans-serif;
  }

  .trust-bar-section { 
    background-color: #000; 
    padding: 80px 0; 
    border-top: 1px solid #1a1a1a; 
    border-bottom: 1px solid #1a1a1a;
  }

  .trust-bar-grid { 
    display: grid; 
    grid-template-columns: repeat(4, 1fr); 
    gap: 20px; 
    max-width: 1400px; 
    margin: 0 auto; 
    padding: 0 20px; 
  }

  .trust-item-wrapper { 
    background: var(--k-dark); 
    border-radius: 2px;
    border: 1px solid #1a1a1a; 
    transition: all 0.4s ease; 
    overflow: hidden; 
    position: relative; 
  }

  .trust-item-wrapper:hover { 
    border-color: var(--k-cyan); 
    box-shadow: 0 0 15px {{ section.settings.accent_color | color_modify: 'alpha', 0.2 }};
  }

  .trust-item-wrapper.is-active { 
    border-color: var(--k-cyan); 
    background: #000;
  }
  
  .trust-header { 
    display: flex; 
    align-items: center; 
    gap: 20px; 
    padding: 30px 25px; 
    cursor: pointer; 
  }

  /* ICONOS LUMINOSOS */
  .trust-icon-wrapper { 
    width: 24px; 
    height: 24px;
    color: var(--k-cyan); 
    display: flex; 
    align-items: center; 
    justify-content: center;
    border: 1px solid var(--k-cyan);
    padding: 10px;
    position: relative;
    box-shadow: 0 0 10px var(--k-cyan), inset 0 0 5px var(--k-cyan);
    animation: neonPulse 2s infinite alternate;
  }

  @keyframes neonPulse {
    from { opacity: 0.8; box-shadow: 0 0 8px var(--k-cyan); }
    to { opacity: 1; box-shadow: 0 0 18px var(--k-cyan); }
  }
  
  .trust-text { display: flex; flex-direction: column; }
  
  /* TÍTULOS MÁS GRANDES Y GRISES */
  .trust-title { 
    color: #ffffff; 
    font-family: var(--font-futurista) !important;
    font-size: 11px; /* Aumentado de 9px */
    letter-spacing: 2px;
    text-transform: uppercase; 
    display: block; 
    margin-bottom: 4px;
  }

  .trust-subtitle { 
    color: #888888; /* Gris tecnológico */
    font-size: 11px; /* Aumentado de 10px */
    text-transform: uppercase;
    letter-spacing: 1px;
    font-family: 'Orbitron', sans-serif;
  }
  
  .trust-content { 
    max-height: 0; 
    overflow: hidden; 
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1); 
    background: #050505; 
    padding: 0 25px; 
  }

  .trust-item-wrapper.is-active .trust-content { 
    max-height: 600px; 
    padding: 20px 25px 35px 25px; 
    border-top: 1px solid rgba(255, 255, 255, 0.05); 
  }
  
  .trust-input { 
    background: #000; 
    border: 1px solid #333; 
    color: #fff; 
    padding: 14px; 
    font-size: 13px; 
    outline: none; 
    width: 100%; 
    box-sizing: border-box;
    transition: 0.3s;
  }

  .trust-input:focus { border-color: var(--k-cyan); box-shadow: 0 0 10px {{ section.settings.accent_color | color_modify: 'alpha', 0.3 }}; }

  .trust-btn { 
    font-family: var(--font-futurista) !important;
    background: var(--k-cyan); 
    color: #000; 
    border: none; 
    width: 100%; 
    padding: 18px; 
    font-size: 10px; 
    font-weight: bold;
    cursor: pointer; 
    transition: 0.3s; 
    text-transform: uppercase; 
    display: block; 
    text-align: center;
    letter-spacing: 1px;
  }

  .trust-btn:hover { background: #fff; transform: scale(1.02); }

  .add-block-info p { 
    font-size: 12px; 
    color: #777; 
    line-height: 1.6; 
    margin-bottom: 20px;
  }

  @media (max-width: 1100px) { .trust-bar-grid { grid-template-columns: 1fr 1fr; } }
  @media (max-width: 650px) { .trust-bar-grid { grid-template-columns: 1fr; } }
{%- endstyle -%}

<section class="trust-bar-section">
  <div class="trust-bar-grid">
    
    <div class="trust-item-wrapper">
      <div class="trust-header" onclick="toggleTrust(this)">
        <div class="trust-icon-wrapper">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5"><path d="M5 11l4 4L19 7"></path></svg>
        </div>
        <div class="trust-text">
          <span class="trust-title">{{ section.settings.title_1 }}</span>
          <span class="trust-subtitle">{{ section.settings.sub_1 }}</span>
        </div>
      </div>
      <div class="trust-content">
        <form id="rea-form" class="trust-form" style="display: flex; flex-direction: column; gap: 12px;">
          <input type="text" name="contact[name]" placeholder="NOMBRE COMPLETO" class="trust-input" required>
          <input type="email" name="contact[email]" placeholder="EMAIL DE CONTACTO" class="trust-input" required>
          <input type="text" name="contact[address]" placeholder="DIRECCIÓN DE DESPACHO" class="trust-input" required>
          <button type="submit" class="trust-btn" id="btn-envio-rea">ENVIAR REGISTRO</button>
        </form>
        <div id="rea-mensaje" style="font-size: 11px; margin-top: 15px; display: none; color: var(--k-cyan); font-family: var(--font-futurista);"></div>
      </div>
    </div>

    <div class="trust-item-wrapper">
      <div class="trust-header" onclick="toggleTrust(this)">
        <div class="trust-icon-wrapper">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5"><rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect><path d="M7 11V7a5 5 0 0110 0v4"></path></svg>
        </div>
        <div class="trust-text">
          <span class="trust-title">{{ section.settings.title_2 }}</span>
          <span class="trust-subtitle">{{ section.settings.sub_2 }}</span>
        </div>
      </div>
      <div class="trust-content">
        <div class="add-block-info">
          <p>{{ section.settings.info_2 }}</p>
        </div>
        <a href="{{ section.settings.link_2 }}" class="trust-btn">MÉTODOS DE PAGO</a>
      </div>
    </div>

    <div class="trust-item-wrapper">
      <div class="trust-header" onclick="toggleTrust(this)">
        <div class="trust-icon-wrapper">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5"><rect x="1" y="3" width="15" height="13"></rect><polygon points="16 8 20 8 23 11 23 16 16 16 16 8"></polygon><circle cx="5.5" cy="18.5" r="2.5"></circle><circle cx="18.5" cy="18.5" r="2.5"></circle></svg>
        </div>
        <div class="trust-text">
          <span class="trust-title">{{ section.settings.title_3 }}</span>
          <span class="trust-subtitle">{{ section.settings.sub_3 }}</span>
        </div>
      </div>
      <div class="trust-content">
        <form action="{{ section.settings.link_tracking }}" method="get" class="trust-form" style="display: flex; flex-direction: column; gap: 12px;">
          <input type="text" class="trust-input" placeholder="NÚMERO DE RASTREO" required>
          <button type="submit" class="trust-btn">LOCALIZAR PEDIDO</button>
        </form>
      </div>
    </div>

    <div class="trust-item-wrapper">
      <div class="trust-header" onclick="toggleTrust(this)">
        <div class="trust-icon-wrapper">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5"><path d="M21 11.5a8.38 8.38 0 01-.9 3.8 8.5 8.5 0 01-7.6 4.7 8.38 8.38 0 01-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 01-.9-3.8 8.5 8.5 0 014.7-7.6 8.38 8.38 0 013.8-.9h.5a8.48 8.48 0 018 8v.5z"></path></svg>
        </div>
        <div class="trust-text">
          <span class="trust-title">{{ section.settings.title_4 }}</span>
          <span class="trust-subtitle">{{ section.settings.sub_4 }}</span>
        </div>
      </div>
      <div class="trust-content">
        <div class="add-block-info">
          <p>{{ section.settings.info_4 }}</p>
        </div>
        <a href="https://wa.me/TUNUMERO" class="trust-btn">CONTACTAR SOPORTE</a>
      </div>
    </div>

  </div>
</section>

<script>
function toggleTrust(element) {
  const wrapper = element.closest('.trust-item-wrapper');
  const isActive = wrapper.classList.contains('is-active');
  document.querySelectorAll('.trust-item-wrapper').forEach(item => item.classList.remove('is-active'));
  if (!isActive) wrapper.classList.add('is-active');
}

document.getElementById('rea-form')?.addEventListener('submit', function(e) {
  e.preventDefault();
  const btn = document.getElementById('btn-envio-rea');
  const msg = document.getElementById('rea-mensaje');
  btn.innerText = 'CONECTANDO...';
  
  setTimeout(() => {
    msg.style.display = 'block';
    msg.innerHTML = '>>>> ENLACE ESTABLECIDO // DATOS ENCRIPTADOS';
    btn.innerText = 'ENVIADO';
    this.reset();
  }, 1500);
});
</script>

