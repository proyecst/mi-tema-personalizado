<style>
  @import url('https://fonts.cdnfonts.com/css/futura-pt'); 

  .luxury-section-wrapper {
    background-color: #000000;
    color: #ffffff;
    padding: 80px 5%;
    font-family: 'Futura PT', 'Futura', sans-serif;
    display: flex;
    justify-content: center;
    overflow: hidden;
  }

  .luxury-container {
    max-width: 1200px;
    width: 100%;
    display: flex;
    align-items: flex-start;
    gap: 50px;
  }

  /* CONTENIDO PRINCIPAL (IZQUIERDA) */
  .luxury-content-main {
    flex: 1.5;
    text-align: left;
  }

  .luxury-glow-title {
    font-size: clamp(2.2rem, 5vw, 3.8rem);
    text-transform: uppercase;
    font-weight: 800;
    line-height: 1.1;
    margin: 0 0 25px 0;
    color: #ffffff;
    text-shadow: 0 0 10px #00d4ff, 0 0 30px rgba(0, 212, 255, 0.6);
    letter-spacing: -1px;
  }

  .luxury-intro-text {
    font-size: 1.2rem;
    color: #e0e0e0;
    line-height: 1.6;
    margin-bottom: 40px;
  }

  /* --- EL ADD BLOCK (ANUNCIO DERECHA) --- */
  .cyber-add-block {
    flex: 0.8;
    background: rgba(20, 20, 20, 0.8);
    border: 1px solid #ff00ff;
    padding: 30px;
    position: relative;
    box-shadow: 0 0 15px rgba(255, 0, 255, 0.3);
    border-radius: 4px;
    animation: flicker-border 2s infinite secondary;
  }

  .add-block-header {
    background: #ff00ff;
    color: #000;
    font-weight: 900;
    font-size: 0.7rem;
    padding: 3px 10px;
    position: absolute;
    top: -12px;
    left: 20px;
    text-transform: uppercase;
  }

  .add-block-content {
    font-family: monospace;
    color: #ff00ff;
    text-align: center;
  }

  .add-block-content h4 {
    font-size: 1.5rem;
    margin: 0 0 10px 0;
    color: #fff;
    text-shadow: 0 0 10px #ff00ff;
  }

  .add-block-price {
    font-size: 2.5rem;
    font-weight: bold;
    display: block;
    margin: 15px 0;
  }

  /* ESTILO DE CÓDIGO ROSADO */
  .code-highlight {
    color: #ff00ff;
    font-family: monospace;
    text-shadow: 0 0 5px rgba(255, 0, 255, 0.5);
    font-weight: bold;
    font-size: 0.9rem;
  }

  .luxury-grid-features {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 30px;
  }

  .feature-item {
    border-left: 2px solid #00d4ff;
    padding-left: 15px;
  }

  .feature-item h3 {
    font-size: 1rem;
    text-transform: uppercase;
    margin: 0 0 8px 0;
    color: #ffffff;
  }

  .luxury-btn-hombre {
    display: inline-block;
    margin-top: 40px;
    padding: 15px 45px;
    background-color: transparent;
    color: #00d4ff;
    border: 2px solid #00d4ff;
    text-decoration: none;
    font-weight: bold;
    text-transform: uppercase;
    transition: 0.3s;
  }

  .luxury-btn-hombre:hover {
    background-color: #00d4ff;
    color: #000;
    box-shadow: 0 0 25px #00d4ff;
  }

  /* ANIMACIONES */
  @keyframes flicker-border {
    0%, 100% { border-color: #ff00ff; box-shadow: 0 0 15px rgba(255, 0, 255, 0.3); }
    50% { border-color: #fff; box-shadow: 0 0 25px rgba(255, 255, 255, 0.5); }
  }

  @media (max-width: 990px) {
    .luxury-container { flex-direction: column; }
    .cyber-add-block { width: 100%; margin-top: 40px; }
  }
</style>

<section class="luxury-section-wrapper">
  <div class="luxury-container">
    
    <div class="luxury-content-main">
      <h1 class="luxury-glow-title">Relojes Smartwatch Hombre – Potencia, Rendimiento y Estilo</h1>
      
      <p class="luxury-intro-text">
        <strong>Smartwatches hombre</strong> con batería de larga duración, GPS, llamadas Bluetooth, monitoreo deportivo y diseño resistente. Rendimiento extremo en cada aventura.
      </p>

      <div class="luxury-grid-features">
        <div class="feature-item">
          <h3>Potencia Extrema</h3>
          <p style="font-size: 0.9rem; color: #999;">Batería para uso profesional.</p>
        </div>
        <div class="feature-item">
          <h3>GPS Alta Precisión</h3>
          <p style="font-size: 0.9rem; color: #999;">Rastreo exacto en tiempo real.</p>
        </div>
      </div>

      {% if section.settings.link_hombre != blank %}
        <a href="{{ section.settings.link_hombre }}" class="luxury-btn-hombre">Explorar Colección</a>
      {% endif %}

      <div style="margin-top: 50px; border-top: 1px solid #222; padding-top: 20px;">
        <p class="code-highlight">
          SYSTEM_INDEX: smartwatch hombre, smartwatches hombre, reloj smartwatch hombre precio, smart watch hombre
        </p>
      </div>
    </div>

    <aside class="cyber-add-block">
      <div class="add-block-header">Offer_Available</div>
      <div class="add-block-content">
        <h4>LIMITED EDITION</h4>
        <p style="color: #888; font-size: 0.8rem;">Solo esta semana</p>
        <span class="add-block-price">-25% OFF</span>
        <p class="code-highlight">CODE: SMART_GEN_2026</p>
      </div>
    </aside>

  </div>
</section>

{% schema %}
{
  "name": "Luxury Smartwatch Hombre",
  "settings": [
    {
      "type": "url",
      "id": "link_hombre",
      "label": "Link de Colección Hombre"
    }
  ],
  "presets": [
    {
      "name": "Luxury Smartwatch Hombre"
    }
  ]
}
{% endschema %}