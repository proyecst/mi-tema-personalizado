<style>
  @import url('https://fonts.cdnfonts.com/css/futura-pt'); 

  .luxury-section-wrapper {
    background-color: #000000;
    color: #ffffff;
    padding: 80px 5%;
    font-family: 'Futura PT', 'Futura', sans-serif;
    display: flex;
    justify-content: center;
    overflow: hidden;
  }

  .luxury-container {
    max-width: 1200px;
    width: 100%;
    display: flex;
    align-items: center;
    gap: 40px;
  }

  /* --- CONTENIDO PRINCIPAL (IZQUIERDA) --- */
  .luxury-content-main {
    flex: 1.5;
    text-align: left;
  }

  .luxury-glow-title {
    font-size: clamp(2.2rem, 5vw, 3.8rem);
    text-transform: uppercase;
    font-weight: 800;
    line-height: 1.1;
    margin: 0 0 25px 0;
    color: #ffffff;
    text-shadow: 0 0 10px #00d4ff, 0 0 30px rgba(0, 212, 255, 0.6);
  }

  /* --- EL ADD BLOCK (ANUNCIO DERECHA) --- */
  .system-add-block {
    flex: 0.8;
    background: rgba(255, 0, 255, 0.03);
    border: 2px solid #ff00ff;
    padding: 40px 20px;
    text-align: center;
    position: relative;
    box-shadow: 0 0 20px rgba(255, 0, 255, 0.2);
    /* Animación de parpadeo suave tipo Cyberpunk */
    animation: pulse-border 3s infinite;
  }

  .add-block-tag {
    position: absolute;
    top: -12px;
    left: 50%;
    transform: translateX(-50%);
    background: #ff00ff;
    color: #000;
    font-size: 0.7rem;
    padding: 2px 15px;
    font-weight: bold;
    text-transform: uppercase;
    white-space: nowrap;
  }

  .add-block-content h4 {
    color: #fff;
    font-size: 1.5rem;
    margin: 0 0 10px 0;
    font-family: monospace;
    text-shadow: 0 0 10px #ff00ff;
  }

  .add-block-promo {
    font-size: 2.5rem;
    font-weight: 900;
    color: #ff00ff;
    display: block;
    margin: 10px 0;
  }

  /* ESTILO CÓDIGO ROSADO */
  .code-pink {
    color: #ff00ff;
    font-family: monospace;
    text-transform: uppercase;
    font-weight: bold;
    text-shadow: 0 0 5px rgba(255, 0, 255, 0.5);
  }

  .luxury-grid-features {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 30px;
    margin-top: 30px;
  }

  .feature-item {
    border-left: 2px solid #00d4ff;
    padding-left: 15px;
  }

  .feature-item h3 {
    font-size: 1rem;
    margin: 0;
    color: #ffffff;
  }

  .luxury-btn-hombre {
    display: inline-block;
    margin-top: 40px;
    padding: 15px 45px;
    background-color: transparent;
    color: #00d4ff;
    border: 2px solid #00d4ff;
    text-decoration: none;
    font-weight: bold;
    text-transform: uppercase;
    transition: 0.3s;
  }

  .luxury-btn-hombre:hover {
    background-color: #00d4ff;
    color: #000;
    box-shadow: 0 0 25px #00d4ff;
  }

  @keyframes pulse-border {
    0%, 100% { border-color: #ff00ff; box-shadow: 0 0 20px rgba(255, 0, 255, 0.2); }
    50% { border-color: #ffffff; box-shadow: 0 0 30px rgba(255, 0, 255, 0.5); }
  }

  @media (max-width: 990px) {
    .luxury-container { flex-direction: column; }
    .system-add-block { width: 100%; margin-top: 50px; }
  }
</style>

<section class="luxury-section-wrapper">
  <div class="luxury-container">
    
    <div class="luxury-content-main">
      <h1 class="luxury-glow-title">Relojes Smartwatch Hombre – Potencia, Rendimiento y Estilo</h1>
      
      <p style="font-size: 1.2rem; line-height: 1.6; color: #ccc;">
        <strong>Smartwatches hombre</strong> con batería de larga duración, GPS, llamadas Bluetooth, monitoreo deportivo y diseño resistente. Rendimiento extremo.
      </p>

      <div class="luxury-grid-features">
        <div class="feature-item">
          <h3>BATERÍA 15 DÍAS</h3>
          <p style="font-size: 0.8rem; color: #888;">Optimización de energía.</p>
        </div>
        <div class="feature-item">
          <h3>SISTEMA GPS</h3>
          <p style="font-size: 0.8rem; color: #888;">Rastreo global preciso.</p>
        </div>
      </div>

      {% if section.settings.link_hombre != blank %}
        <a href="{{ section.settings.link_hombre }}" class="luxury-btn-hombre">Acceder a Catálogo</a>
      {% endif %}

      <div style="margin-top: 40px; border-top: 1px solid #222; padding-top: 20px;">
        <span class="code-pink" style="font-size: 0.8rem;">
          DATABASE_KEYWORDS: smartwatch hombre, smartwatches hombre, smart watch hombre
        </span>
      </div>
    </div>

    <div class="system-add-block">
      <div class="add-block-tag">Publicidad de Sistema</div>
      <div class="add-block-content">
        <h4>OFERTA_LIMITADA</h4>
        <span class="add-block-promo">-30% OFF</span>
        <p style="font-size: 0.9rem; color: #fff;">Solo por tiempo limitado en modelos seleccionados.</p>
        <p class="code-pink" style="margin-top: 20px;">CÓDIGO: HOMBRE_2026</p>
      </div>
    </div>

  </div>
</section>

{% schema %}
{
  "name": "Luxury Smartwatch Hombre",
  "settings": [
    {
      "type": "url",
      "id": "link_hombre",
      "label": "Enlace del Botón"
    }
  ],
  "presets": [
    {
      "name": "Luxury Smartwatch Hombre"
    }
  ]
}
{% endschema %}