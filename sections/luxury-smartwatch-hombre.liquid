<style>
  @import url('https://fonts.cdnfonts.com/css/futura-pt'); 

  .luxury-section-wrapper {
    background-color: #000000;
    color: #ffffff;
    padding: 80px 5%;
    font-family: 'Futura PT', 'Futura', sans-serif;
    display: flex;
    justify-content: center;
    overflow: hidden;
  }

  .luxury-container {
    max-width: 1200px;
    width: 100%;
    display: flex;
    align-items: center;
    gap: 40px;
  }

  /* --- CONTENIDO PRINCIPAL --- */
  .luxury-content-main {
    flex: 1.2;
    text-align: left;
  }

  .luxury-glow-title {
    font-size: clamp(2rem, 5vw, 3.5rem);
    text-transform: uppercase;
    font-weight: 800;
    line-height: 1.1;
    margin: 0 0 25px 0;
    color: #ffffff;
    text-shadow: 0 0 10px #00d4ff, 0 0 30px rgba(0, 212, 255, 0.6);
  }

  /* --- ADD BLOCK PARA IMÁGENES --- */
  .image-add-block {
    flex: 1;
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .image-container {
    position: relative;
    width: 100%;
    max-width: 450px;
    border: 2px solid #ff00ff; /* Borde rosado neón */
    padding: 10px;
    background: rgba(255, 0, 255, 0.02);
    box-shadow: 0 0 20px rgba(255, 0, 255, 0.3);
    transition: 0.5s;
  }

  .image-container:hover {
    box-shadow: 0 0 40px rgba(255, 0, 255, 0.6);
    transform: scale(1.02);
  }

  .image-container img {
    width: 100%;
    height: auto;
    display: block;
    filter: drop-shadow(0 0 10px rgba(255, 0, 255, 0.2));
  }

  .promo-badge {
    position: absolute;
    top: -15px;
    right: -15px;
    background: #ff00ff;
    color: #000;
    padding: 10px 15px;
    font-weight: 900;
    font-family: monospace;
    transform: rotate(5deg);
    box-shadow: 0 0 15px #ff00ff;
    z-index: 2;
  }

  /* ESTILO CÓDIGO ROSADO */
  .code-pink {
    color: #ff00ff;
    font-family: monospace;
    font-weight: bold;
    text-shadow: 0 0 5px rgba(255, 0, 255, 0.5);
  }

  .luxury-btn-hombre {
    display: inline-block;
    margin-top: 30px;
    padding: 15px 40px;
    border: 2px solid #00d4ff;
    color: #00d4ff;
    text-decoration: none;
    font-weight: bold;
    text-transform: uppercase;
    transition: 0.3s;
  }

  .luxury-btn-hombre:hover {
    background: #00d4ff;
    color: #000;
    box-shadow: 0 0 20px #00d4ff;
  }

  @media (max-width: 990px) {
    .luxury-container { flex-direction: column; text-align: center; }
    .image-add-block { margin-top: 50px; }
  }
</style>

<section class="luxury-section-wrapper">
  <div class="luxury-container">
    
    <div class="luxury-content-main">
      <h1 class="luxury-glow-title">Smartwatch Hombre: Potencia & Estilo</h1>
      <p style="font-size: 1.1rem; color: #ccc; margin-bottom: 30px;">
        Descubre la colección de <strong>smartwatches hombre</strong> con GPS, llamadas y batería de larga duración.
      </p>

      <div style="margin-bottom: 30px;">
        <p class="code-pink">> STATUS: HIGH_PERFORMANCE</p>
        <p class="code-pink">> BATERÍA: 15 DÍAS_ACTIVA</p>
      </div>

      {% if section.settings.link_hombre != blank %}
        <a href="{{ section.settings.link_hombre }}" class="luxury-btn-hombre">Ver Catálogo</a>
      {% endif %}
    </div>

    <div class="image-add-block">
      <div class="image-container">
        <div class="promo-badge">HOT DEAL</div>
        
        {% if section.settings.ad_image != blank %}
          <img src="{{ section.settings.ad_image | image_url: width: 800 }}" alt="Promo Smartwatch">
        {% else %}
          <img src="https://i.imgur.com/vHq0G6O.png" alt="Reloj Futurista">
        {% endif %}

        <div style="margin-top: 15px; text-align: center;">
          <p class="code-pink" style="font-size: 0.8rem;">[ SISTEMA_PROMO: {{ section.settings.promo_text }} ]</p>
        </div>
      </div>
    </div>

  </div>
</section>

{% schema %}
{
  "name": "Add Block con Imagen",
  "settings": [
    {
      "type": "url",
      "id": "link_hombre",
      "label": "Link del Botón"
    },
    {
      "type": "image_picker",
      "id": "ad_image",
      "label": "Imagen Publicitaria (Add Block)"
    },
    {
      "type": "text",
      "id": "promo_text",
      "label": "Texto de Código Rosado",
      "default": "ENVÍO_GRATIS_2026"
    }
  ],
  "presets": [
    {
      "name": "Add Block con Imagen"
    }
  ]
}
{% endschema %}