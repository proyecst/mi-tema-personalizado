{%- style -%}
  .hero-kieslect-{{ section.id }} {
    position: relative;
    width: 100%;
    height: {{ section.settings.height_desktop }}vh;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #000; /* Fondo negro elegante para resaltar relojes */
  }

  @media screen and (max-width: 749px) {
    .hero-kieslect-{{ section.id }} {
      height: {{ section.settings.height_mobile }}vh;
    }
  }

  .hero-bg-kieslect {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .hero-bg-kieslect img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 8s ease-out; /* Zoom suave de marca premium */
  }

  /* El efecto se activa al pasar el mouse o al cargar si prefieres, 
     aquí lo mantenemos al hover para interactividad */
  .hero-kieslect-{{ section.id }}:hover .hero-bg-kieslect img {
    transform: scale(1.08);
  }

  /* Overlay sutil para dar profundidad sin tapar el reloj */
  .hero-overlay-kieslect {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(circle, transparent 20%, rgba(0,0,0,0.4) 100%);
    z-index: 2;
    pointer-events: none;
  }

{%- endstyle -%}

<section class="hero-kieslect-{{ section.id }}">
  <div class="hero-bg-kieslect">
    {% if section.settings.image != blank %}
      {{ section.settings.image | image_url: width: 2500 | image_tag: 
        loading: 'eager', 
        alt: 'Reloj Kieslect Premium',
        class: 'kieslect-img' 
      }}
    {% else %}
      {{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder-svg' }}
    {% endif %}
  </div>
  
  <div class="hero-overlay-kieslect"></div>
</section>

{% schema %}
{
  "name": "Kieslect Product Banner",
  "settings": [
    { 
      "type": "image_picker", 
      "id": "image", 
      "label": "Imagen del Reloj (Kieslect)",
      "info": "Usa imágenes de alta resolución de relojes"
    },
    { 
      "type": "range", 
      "id": "height_desktop", 
      "min": 40, 
      "max": 100, 
      "step": 5, 
      "unit": "vh", 
      "label": "Altura Pantalla PC", 
      "default": 80 
    },
    { 
      "type": "range", 
      "id": "height_mobile", 
      "min": 30, 
      "max": 100, 
      "step": 5, 
      "unit": "vh", 
      "label": "Altura Pantalla Móvil", 
      "default": 60 
    }
  ],
  "presets": [
    {
      "name": "Kieslect Product Banner"
    }
  ]
}
{% endschema %}