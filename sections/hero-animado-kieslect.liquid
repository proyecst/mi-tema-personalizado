{%- style -%}
  .kieslect-wrapper-{{ section.id }} {
    position: relative;
    width: 100%;
    height: {{ section.settings.height_desktop }}vh;
    overflow: hidden;
    background-color: #000;
  }

  @media screen and (max-width: 749px) {
    .kieslect-wrapper-{{ section.id }} {
      height: {{ section.settings.height_mobile }}vh;
    }
  }

  .kieslect-slider-inner {
    display: flex;
    width: 100%;
    height: 100%;
    transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .kieslect-slide {
    min-width: 100%;
    height: 100%;
    position: relative;
  }

  .kieslect-slide img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  /* Flechas minimalistas */
  .kieslect-btn {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    z-index: 10;
    background: rgba(255, 255, 255, 0.15);
    border: none;
    width: 45px;
    height: 45px;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    backdrop-filter: blur(10px);
    color: white;
    transition: all 0.3s;
  }

  .kieslect-btn:hover {
    background: rgba(255, 255, 255, 0.3);
    scale: 1.1;
  }

  .kieslect-btn-prev { left: 20px; }
  .kieslect-btn-next { right: 20px; }

  .kieslect-btn svg {
    width: 24px;
    height: 24px;
    fill: none;
    stroke: currentColor;
    stroke-width: 2;
  }

  /* Overlay para que se vea Pro */
  .kieslect-vignette {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(circle, transparent 50%, rgba(0,0,0,0.4) 100%);
    z-index: 5;
    pointer-events: none;
  }
{%- endstyle -%}

<section class="kieslect-wrapper-{{ section.id }}" id="Slider-{{ section.id }}">
  <div class="kieslect-vignette"></div>

  <div class="kieslect-slider-inner" id="Track-{{ section.id }}">
    {%- for block in section.blocks -%}
      <div class="kieslect-slide" {{ block.shopify_attributes }}>
        {% if block.settings.image != blank %}
          {{ block.settings.image | image_url: width: 2500 | image_tag: loading: 'eager' }}
        {% else %}
          {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
        {% endif %}
      </div>
    {%- endfor -%}
  </div>

  {%- if section.blocks.size > 1 -%}
    <button class="kieslect-btn kieslect-btn-prev" aria-label="Anterior">
      <svg viewBox="0 0 24 24"><path d="M15 18l-6-6 6-6"/></svg>
    </button>
    <button class="kieslect-btn kieslect-btn-next" aria-label="Siguiente">
      <svg viewBox="0 0 24 24"><path d="M9 18l6-6-6-6"/></svg>
    </button>
  {%- endif -%}
</section>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const track = document.getElementById('Track-{{ section.id }}');
    const slides = track.querySelectorAll('.kieslect-slide');
    const nextBtn = document.querySelector('.kieslect-btn-next');
    const prevBtn = document.querySelector('.kieslect-btn-prev');
    
    let index = 0;
    const totalSlides = slides.length;

    function moveSlider() {
      track.style.transform = `translateX(-${index * 100}%)`;
    }

    function nextSlide() {
      index = (index + 1) % totalSlides;
      moveSlider();
    }

    function prevSlide() {
      index = (index - 1 + totalSlides) % totalSlides;
      moveSlider();
    }

    // Auto-play cada 4 segundos
    let autoPlay = setInterval(nextSlide, 4000);

    // Detener auto-play si el usuario hace clic
    if (nextBtn) {
      nextBtn.addEventListener('click', () => {
        clearInterval(autoPlay);
        nextSlide();
        autoPlay = setInterval(nextSlide, 4000); // Reiniciar timer
      });

      prevBtn.addEventListener('click', () => {
        clearInterval(autoPlay);
        prevSlide();
        autoPlay = setInterval(nextSlide, 4000); // Reiniciar timer
      });
    }
  });
</script>

