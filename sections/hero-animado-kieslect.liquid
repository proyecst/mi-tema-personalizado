{%- style -%}
  .hero-animado-{{ section.id }} {
    position: relative;
    width: 100%;
    height: {{ section.settings.height_desktop }}vh;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: {{ section.settings.text_alignment }};
  }

  @media screen and (max-width: 749px) {
    .hero-animado-{{ section.id }} {
      height: {{ section.settings.height_mobile }}vh;
    }
  }

  .hero-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .hero-bg img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 10s ease-out; /* Animación de zoom lento */
  }

  .hero-animado-{{ section.id }}:hover .hero-bg img {
    transform: scale(1.1);
  }

  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(to right, rgba(0,0,0,0.6), transparent);
    z-index: 2;
  }

  .hero-content {
    position: relative;
    z-index: 3;
    max-width: 600px;
    padding: 0 50px;
    color: #ffffff;
    opacity: 0;
    transform: translateY(30px);
    animation: fadeInUp 1s forwards 0.5s; /* El texto entra después */
  }

  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .hero-title {
    font-size: clamp(2.5rem, 5vw, 4.5rem);
    font-weight: 800;
    margin: 0 0 20px 0;
    line-height: 1.1;
    text-transform: uppercase;
  }

  .hero-subtitle {
    font-size: 1.2rem;
    margin-bottom: 30px;
    opacity: 0.9;
  }

  .hero-btn {
    display: inline-block;
    padding: 15px 40px;
    background: {{ section.settings.btn_color }};
    color: white;
    text-decoration: none;
    font-weight: bold;
    border-radius: 50px;
    transition: all 0.3s;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .hero-btn:hover {
    background: #ffffff;
    color: #000000;
    transform: translateY(-3px);
  }
{%- endstyle -%}

<section class="hero-animado-{{ section.id }}">
  <div class="hero-bg">
    {% if section.settings.image != blank %}
      {{ section.settings.image | image_url: width: 2000 | image_tag: loading: 'eager' }}
    {% else %}
      {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
    {% endif %}
  </div>
  
  <div class="hero-overlay"></div>

  <div class="hero-content">
    <h1 class="hero-title">{{ section.settings.title }}</h1>
    <p class="hero-subtitle">{{ section.settings.subtitle }}</p>
    {% if section.settings.btn_link != blank %}
      <a href="{{ section.settings.btn_link }}" class="hero-btn">{{ section.settings.btn_text }}</a>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Banner Animado Pro",
  "settings": [
    { "type": "image_picker", "id": "image", "label": "Imagen de Fondo" },
    { "type": "text", "id": "title", "label": "Título", "default": "Kieslect KS3" },
    { "type": "textarea", "id": "subtitle", "label": "Subtítulo", "default": "El futuro de la tecnología con pantalla AMOLED y doble núcleo." },
    { "type": "text", "id": "btn_text", "label": "Texto del Botón", "default": "Comprar Ahora" },
    { "type": "url", "id": "btn_link", "label": "Enlace del Botón" },
    { "type": "color", "id": "btn_color", "label": "Color Botón", "default": "#e62e04" },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Alineación del texto",
      "options": [
        { "value": "flex-start", "label": "Izquierda" },
        { "value": "center", "label": "Centro" },
        { "value": "flex-end", "label": "Derecha" }
      ],
      "default": "flex-start"
    },
    { "type": "range", "id": "height_desktop", "min": 50, "max": 100, "step": 5, "unit": "vh", "label": "Altura PC", "default": 80 },
    { "type": "range", "id": "height_mobile", "min": 40, "max": 100, "step": 5, "unit": "vh", "label": "Altura Móvil", "default": 60 }
  ],
  "presets": [
    {
      "name": "Banner Animado Pro"
    }
  ]
}
{% endschema %}