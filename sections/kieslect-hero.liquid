{%- style -%}
  .k-hero-{{ section.id }} {
    background: #000;
    min-height: 600px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    position: relative;
    font-family: sans-serif;
  }
  .k-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 20px;
    z-index: 2;
  }
  .k-txt { color: #fff; display: flex; flex-direction: column; justify-content: center; }
  .k-title { font-size: 80px; font-weight: 900; line-height: 0.8; margin: 0; text-transform: uppercase; }
  .k-accent { color: {{ section.settings.c }}; }
  .k-img img { width: 100%; height: auto; filter: drop-shadow(0 0 20px {{ section.settings.c }}); }
  
  @media (max-width: 768px) {
    .k-grid { grid-template-columns: 1fr; text-align: center; }
    .k-title { font-size: 40px; }
  }
{%- endstyle -%}

<div class="k-hero-{{ section.id }}">
  <div class="k-grid">
    <div class="k-txt">
      <h1 class="k-title">KIESLECT <span class="k-accent">{{ section.settings.t }}</span></h1>
      <p style="color: #888;">{{ section.settings.st }}</p>
    </div>
    <div class="k-img">
      {% if section.settings.i != blank %}
        {{ section.settings.i | image_url: width: 1000 | image_tag: loading: 'eager' }}
      {% else %}
        <div style="background: #222; padding: 100px; border: 1px dashed #444;">Sube tu imagen PNG aqu√≠</div>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Hero K",
  "settings": [
    { "type": "text", "id": "t", "label": "Modelo", "default": "KS3 PRO" },
    { "type": "text", "id": "st", "label": "Sub", "default": "Dual Core Tech" },
    { "type": "image_picker", "id": "i", "label": "Imagen" },
    { "type": "color", "id": "c", "label": "Color", "default": "#e62e04" }
  ],
  "presets": [{ "name": "Hero K" }]
}
{% endschema %}