{%- style -%}
  #shopify-section-{{ section.id }} {
    background-color: {{ section.settings.bg_color }};
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    color: {{ section.settings.text_color }};
    --k-cyan: #00D1FF;
    --k-border: rgba(255, 255, 255, 0.1);
  }

  .edu-container { max-width: 1200px; margin: 0 auto; padding: 0 20px; font-family: 'Inter', sans-serif; }
  
  .edu-header { text-align: center; margin-bottom: 50px; }
  .edu-header h2 { font-size: 2.8rem; font-weight: 900; text-transform: uppercase; letter-spacing: -1px; margin: 0; }
  .k-line { width: 60px; height: 3px; background: var(--k-cyan); margin: 15px auto; box-shadow: 0 0 15px var(--k-cyan); }

  /* FORMULARIO DE CREACIÓN */
  .edu-creator-box {
    max-width: 600px;
    margin: 0 auto 60px auto;
    background: #0a0a0a;
    padding: 35px;
    border-radius: 24px;
    border: 1px solid var(--k-border);
    box-shadow: 0 20px 40px rgba(0,0,0,0.4);
  }
  .edu-creator-box h4 { margin-top: 0; color: var(--k-cyan); text-transform: uppercase; font-size: 14px; letter-spacing: 2px; text-align: center; }

  .edu-form { display: flex; flex-direction: column; gap: 15px; }
  .edu-form input {
    background: #000;
    border: 1px solid #222;
    padding: 15px;
    border-radius: 12px;
    color: #fff;
    outline: none;
    transition: 0.3s;
  }
  .edu-form input:focus { border-color: var(--k-cyan); }

  .edu-btn-submit {
    background: var(--k-cyan);
    color: #000;
    border: none;
    padding: 18px;
    border-radius: 12px;
    font-weight: 900;
    text-transform: uppercase;
    cursor: pointer;
    transition: 0.3s;
  }
  .edu-btn-submit:hover { transform: scale(1.02); box-shadow: 0 0 20px rgba(0, 209, 255, 0.4); }

  /* GRID DE TARJETAS (GUÍAS) */
  .edu-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 25px;
  }

  .edu-card {
    background: #0a0a0a;
    border: 1px solid var(--k-border);
    padding: 35px;
    border-radius: 20px;
    text-decoration: none;
    transition: all 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    min-height: 200px;
  }

  .edu-card:hover {
    transform: translateY(-10px);
    border-color: var(--k-cyan);
    background: #111;
  }

  .edu-card h3 { color: #fff; margin: 0; font-size: 1.4rem; font-weight: 800; line-height: 1.3; }
  
  .edu-card .card-footer {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-top: 30px;
  }

  .badge-link {
    font-size: 10px;
    font-weight: 900;
    color: var(--k-cyan);
    text-transform: uppercase;
    letter-spacing: 1px;
    display: flex;
    align-items: center;
    gap: 5px;
  }

  @media (max-width: 900px) { .edu-grid { grid-template-columns: 1fr; } }
{%- endstyle -%}

<div class="edu-container">
  <div class="edu-header">
    <h2>{{ section.settings.title }}</h2>
    <div class="k-line"></div>
  </div>

  <div class="edu-creator-box">
    <h4>Publicar nueva opción</h4>
    <div class="edu-form">
      <input type="text" id="input-title" placeholder="Título de la guía (Ej: Manual KS Pro)">
      <input type="text" id="input-url" placeholder="Pega el Link aquí (https://...)">
      <button class="edu-btn-submit" id="btn-add-guide">Publicar en el sitio</button>
    </div>
  </div>

  <div id="guides-display" class="edu-grid">
    {% for block in section.blocks %}
      <a href="{{ block.settings.link_url }}" class="edu-card">
        <h3>{{ block.settings.guide_title }}</h3>
        <div class="card-footer">
          <span class="badge-link">IR AL SITIO →</span>
        </div>
      </a>
    {% endfor %}
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const btn = document.getElementById('btn-add-guide');
  const grid = document.getElementById('guides-display');

  // Función para crear la tarjeta física
  function createCard(title, url) {
    const card = document.createElement('a');
    card.href = url.startsWith('http') ? url : 'https://' + url;
    card.target = "_blank"; // Se abre en pestaña nueva
    card.className = 'edu-card';
    card.innerHTML = `
      <h3>${title.toUpperCase()}</h3>
      <div class="card-footer">
        <span class="badge-link">VISITAR SITIO →</span>
      </div>
    `;
    return card;
  }

  // 1. Cargar guías guardadas en el navegador
  const savedData = JSON.parse(localStorage.getItem('kieslect_guides_db') || '[]');
  savedData.forEach(item => {
    grid.prepend(createCard(item.t, item.u));
  });

  // 2. Guardar y Publicar
  btn.addEventListener('click', function() {
    const tVal = document.getElementById('input-title').value.trim();
    const uVal = document.getElementById('input-url').value.trim();

    if (tVal && uVal) {
      // Agregar al grid
      grid.prepend(createCard(tVal, uVal));

      // Guardar en memoria
      savedData.push({ t: tVal, u: uVal });
      localStorage.setItem('kieslect_guides_db', JSON.stringify(savedData));

      // Limpiar inputs
      document.getElementById('input-title').value = "";
      document.getElementById('input-url').value = "";
    } else {
      alert("Por favor rellena el título y el link");
    }
  });
});
</script>

{% schema %}
{
  "name": "Kieslect Academy Links",
  "settings": [
    { "type": "text", "id": "title", "label": "Título", "default": "Kieslect Academy" },
    { "type": "color", "id": "bg_color", "label": "Fondo", "default": "#000000" },
    { "type": "color", "id": "text_color", "label": "Texto", "default": "#ffffff" },
    { "type": "range", "id": "padding_top", "min": 0, "max": 100, "default": 80, "unit": "px", "label": "Padding Superior" },
    { "type": "range", "id": "padding_bottom", "min": 0, "max": 100, "default": 80, "unit": "px", "label": "Padding Inferior" }
  ],
  "blocks": [
    {
      "type": "manual_guide",
      "name": "Guía Estática",
      "settings": [
        { "type": "text", "id": "guide_title", "label": "Título", "default": "Manual Oficial" },
        { "type": "url", "id": "link_url", "label": "Link de la guía" }
      ]
    }
  ],
  "presets": [{ "name": "Kieslect Academy Links" }]
}
{% endschema %}