  "name": "Kieslect Academy Dynamic",
  "settings": [
    { "type": "text", "id": "title", "label": "Título Sección", "default": "Kieslect Academy" },
    { "type": "color", "id": "bg_color", "label": "Fondo", "default": "#000000" },
    { "type": "color", "id": "text_color", "label": "Texto", "default": "#ffffff" },
    { "type": "range", "id": "padding_top", "min": 0, "max": 100, "default": 80, "unit": "px", "label": "Padding Superior" },
    { "type": "range", "id": "padding_bottom", "min": 0, "max": 100, "default": 80, "unit": "px", "label": "Padding Inferior" }
  ],
  "blocks": [
    {
      "type": "guide",
      "name": "Guía Estática",
      "settings": [
        { "type": "text", "id": "title", "label": "Título", "default": "Configuración Inicial" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Kieslect Academy Dynamic",
      "blocks": [
        { "type": "guide", "settings": { "title": "Optimización Batería" } }
      ]
    }
  ]
}
