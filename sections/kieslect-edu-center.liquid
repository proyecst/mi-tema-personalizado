{%- style -%}
  #shopify-section-{{ section.id }} {
    background-color: {{ section.settings.bg_color }};
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    color: {{ section.settings.text_color }};
    --k-cyan: #00D1FF;
    --k-dark-card: #0a0a0a;
    --k-border: rgba(255, 255, 255, 0.08);
  }

  .edu-container { max-width: 1300px; margin: 0 auto; padding: 0 20px; }

  .edu-header { text-align: center; margin-bottom: 60px; }
  .edu-header h2 { font-size: clamp(2rem, 4vw, 2.8rem); font-weight: 900; text-transform: uppercase; letter-spacing: -1px; margin: 0; }
  .edu-header .k-line { width: 50px; height: 3px; background: var(--k-cyan); margin: 15px auto; box-shadow: 0 0 10px var(--k-cyan); }

  /* Grid de Guías */
  .edu-featured-guides {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 25px;
    margin-bottom: 50px;
  }

  .edu-guide-card {
    background: var(--k-dark-card);
    padding: 40px 30px;
    border-radius: 20px;
    text-decoration: none;
    border: 1px solid var(--k-border);
    transition: all 0.4s ease;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    min-height: 180px;
  }

  .edu-guide-card:hover { transform: translateY(-10px); border-color: var(--k-cyan); }
  .edu-guide-card h3 { font-size: 1.3rem; font-weight: 800; color: #fff; margin:0; }
  .read-more { font-size: 11px; font-weight: 900; color: var(--k-cyan); text-transform: uppercase; margin-top: 20px; display: flex; align-items: center; gap: 8px; }

  /* --- SECCIÓN DE ALMACENAMIENTO DE TEXTO (NUEVO) --- */
  .edu-storage-area {
    margin-top: 80px;
    background: rgba(255,255,255,0.02);
    padding: 40px;
    border-radius: 24px;
    border: 1px dashed var(--k-border);
  }

  .edu-input-group {
    display: flex;
    gap: 15px;
    margin-bottom: 30px;
  }

  .edu-input-group input {
    flex: 1;
    background: #000;
    border: 1px solid var(--k-border);
    padding: 15px;
    border-radius: 12px;
    color: #fff;
    outline: none;
  }

  .edu-input-group input:focus { border-color: var(--k-cyan); }

  .edu-save-btn {
    background: var(--k-cyan);
    color: #000;
    border: none;
    padding: 15px 30px;
    border-radius: 12px;
    font-weight: 900;
    cursor: pointer;
    text-transform: uppercase;
  }

  .edu-notes-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 20px;
  }

  .note-card {
    background: #000;
    padding: 20px;
    border-radius: 15px;
    border-left: 4px solid var(--k-cyan);
    animation: fadeIn 0.5s ease forwards;
  }

  .note-card p { margin: 0; font-size: 0.95rem; line-height: 1.5; opacity: 0.9; }
  .note-card small { display: block; margin-top: 10px; color: var(--k-cyan); font-weight: 700; font-size: 10px; }

  @keyframes fadeIn { from { opacity: 0; transform: translateY(10px); } to { opacity: 1; transform: translateY(0); } }

  @media screen and (max-width: 900px) {
    .edu-featured-guides { grid-template-columns: 1fr; }
    .edu-input-group { flex-direction: column; }
  }
{%- endstyle -%}

<div class="edu-container">
  <div class="edu-header">
    <span style="color:var(--k-cyan); letter-spacing:4px; font-weight:700; font-size:12px;">KIESLECT ACADEMY</span>
    <h2>{{ section.settings.title }}</h2>
    <div class="k-line"></div>
  </div>

  <div class="edu-featured-guides">
    {% for block in section.blocks %}
      <a href="{{ block.settings.link }}" class="edu-guide-card">
        <h3>{{ block.settings.title }}</h3>
        <span class="read-more">Ver Guía →</span>
      </a>
    {% endfor %}
  </div>

  <div class="edu-storage-area">
    <h4 style="text-transform: uppercase; margin-bottom: 20px; font-weight: 800; text-align: center;">
      ¿Algún consejo para la comunidad? <span style="color: var(--k-cyan);">Almacénalo aquí</span>
    </h4>
    
    <div class="edu-input-group">
      <input type="text" id="edu-note-input" placeholder="Escribe tu consejo o truco Kieslect...">
      <button class="edu-save-btn" id="edu-save-note">Publicar</button>
    </div>

    <div id="edu-notes-display" class="edu-notes-grid">
      </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const input = document.getElementById('edu-note-input');
  const saveBtn = document.getElementById('edu-save-note');
  const display = document.getElementById('edu-notes-display');

  // Función para crear el HTML de la nota
  function createNoteElement(text, date) {
    const card = document.createElement('div');
    card.className = 'note-card';
    card.innerHTML = `
      <p>"${text}"</p>
      <small>PUBLICADO EL ${date}</small>
    `;
    return card;
  }

  // Cargar notas guardadas en el navegador
  const savedNotes = JSON.parse(localStorage.getItem('kieslect_academy_notes') || '[]');
  savedNotes.forEach(note => {
    display.appendChild(createNoteElement(note.text, note.date));
  });

  // Guardar nueva nota
  saveBtn.addEventListener('click', function() {
    const text = input.value.trim();
    if (text === "") return;

    const now = new Date();
    const dateStr = now.toLocaleDateString('es-ES', { day: '2-digit', month: 'short', year: 'numeric' }).toUpperCase();

    // Guardar en Array y LocalStorage
    const newNote = { text: text, date: dateStr };
    savedNotes.push(newNote);
    localStorage.setItem('kieslect_academy_notes', JSON.stringify(savedNotes));

    // Mostrar en pantalla
    display.prepend(createNoteElement(text, dateStr));
    
    // Limpiar input
    input.value = "";
  });
});
</script>

