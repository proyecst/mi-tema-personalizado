{%- style -%}
  #shopify-section-{{ section.id }} {
    background-color: {{ section.settings.bg_color }};
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    color: {{ section.settings.text_color }};
    --k-cyan: #00D1FF;
    --k-dark-card: #0a0a0a;
    --k-border: rgba(255, 255, 255, 0.08);
  }

  .edu-container { max-width: 1300px; margin: 0 auto; padding: 0 20px; }

  .edu-header { text-align: center; margin-bottom: 60px; }
  .edu-header h2 { font-size: clamp(2rem, 4vw, 2.8rem); font-weight: 900; text-transform: uppercase; letter-spacing: -1px; margin: 0; }
  .edu-header .k-line { width: 50px; height: 3px; background: var(--k-cyan); margin: 15px auto; box-shadow: 0 0 10px var(--k-cyan); }

  /* Grid de Tarjetas (Donde se subirá el texto) */
  .edu-featured-guides {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 25px;
    margin-bottom: 50px;
  }

  /* El mismo diseño de tarjeta original */
  .edu-guide-card {
    background: var(--k-dark-card);
    padding: 40px 30px;
    border-radius: 20px;
    text-decoration: none;
    border: 1px solid var(--k-border);
    transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    min-height: 200px;
    position: relative;
    overflow: hidden;
  }

  .edu-guide-card:hover { transform: translateY(-10px); border-color: var(--k-cyan); box-shadow: 0 15px 30px rgba(0, 209, 255, 0.1); }
  .edu-guide-card h3 { font-size: 1.3rem; font-weight: 800; color: #fff; margin:0; line-height: 1.3; z-index: 1; }
  .read-more { font-size: 11px; font-weight: 900; color: var(--k-cyan); text-transform: uppercase; margin-top: 20px; display: flex; align-items: center; gap: 8px; }

  /* FORMULARIO DE SUBIDA */
  .edu-upload-box {
    background: #050505;
    padding: 40px;
    border-radius: 24px;
    border: 1px solid var(--k-cyan);
    margin-bottom: 40px;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .edu-upload-box h4 { text-align: center; text-transform: uppercase; margin-top: 0; color: var(--k-cyan); letter-spacing: 2px; }

  .input-flex { display: flex; flex-direction: column; gap: 15px; }
  
  .edu-input {
    background: #000;
    border: 1px solid #333;
    padding: 15px;
    border-radius: 12px;
    color: #fff;
    font-family: inherit;
    outline: none;
  }
  .edu-input:focus { border-color: var(--k-cyan); }

  .edu-submit-btn {
    background: var(--k-cyan);
    color: #000;
    border: none;
    padding: 18px;
    border-radius: 12px;
    font-weight: 900;
    text-transform: uppercase;
    cursor: pointer;
    transition: 0.3s;
  }
  .edu-submit-btn:hover { box-shadow: 0 0 20px var(--k-cyan); transform: scale(1.02); }

  @media screen and (max-width: 900px) {
    .edu-featured-guides { grid-template-columns: 1fr; }
  }
{%- endstyle -%}

<div class="edu-container">
  <div class="edu-header">
    <span style="color:var(--k-cyan); letter-spacing:4px; font-weight:700; font-size:12px;">CREAR CONTENIDO</span>
    <h2>{{ section.settings.title }}</h2>
    <div class="k-line"></div>
  </div>

  <div class="edu-upload-box">
    <h4>Agregar Nueva Guía</h4>
    <div class="input-flex">
      <input type="text" id="guide-title" class="edu-input" placeholder="Título de la guía (ej. Trucos de Pantalla)">
      <button id="add-guide-btn" class="edu-submit-btn">Publicar en Academy</button>
    </div>
  </div>

  <div id="guides-grid" class="edu-featured-guides">
    {% for block in section.blocks %}
      <div class="edu-guide-card" {{ block.shopify_attributes }}>
        <h3>{{ block.settings.title }}</h3>
        <span class="read-more">Guía Oficial <svg width="18" height="12" viewBox="0 0 18 12" fill="none"><path d="M12 1L17 6L12 11M1 6H17" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg></span>
      </div>
    {% endfor %}
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const btn = document.getElementById('add-guide-btn');
  const grid = document.getElementById('guides-grid');
  const titleInput = document.getElementById('guide-title');

  // Función para generar la tarjeta con el mismo diseño
  function createGuideCard(title, isUserGenerated = false) {
    const card = document.createElement('div');
    card.className = 'edu-guide-card';
    if(isUserGenerated) card.style.borderColor = '#00D1FF';

    card.innerHTML = `
      <h3>${title.toUpperCase()}</h3>
      <span class="read-more">Aporte Comunidad <svg width="18" height="12" viewBox="0 0 18 12" fill="none"><path d="M12 1L17 6L12 11M1 6H17" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg></span>
    `;
    return card;
  }

  // 1. Cargar del almacenamiento local al iniciar
  const savedGuides = JSON.parse(localStorage.getItem('kieslect_user_guides') || '[]');
  savedGuides.forEach(g => {
    grid.prepend(createGuideCard(g.title, true));
  });

  // 2. Evento para añadir nueva guía (Subir texto a la opción)
  btn.addEventListener('click', function() {
    const val = titleInput.value.trim();
    
    if(val !== "") {
      // Agregar visualmente
      grid.prepend(createGuideCard(val, true));

      // Guardar en memoria del navegador
      savedGuides.push({ title: val });
      localStorage.setItem('kieslect_user_guides', JSON.stringify(savedGuides));

      // Limpiar y feedback
      titleInput.value = "";
      alert("¡Guía publicada con éxito!");
    } else {
      alert("Por favor escribe un título.");
    }
  });
});
</script>

