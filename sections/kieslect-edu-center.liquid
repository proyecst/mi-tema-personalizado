<style>
  @import url('https://fonts.googleapis.com/css2?family=Michroma&display=swap');
</style>

{%- style -%}
  #shopify-section-{{ section.id }} {
    background-color: {{ section.settings.bg_color }};
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    color: {{ section.settings.text_color }};
    --k-cyan: #00D1FF;
    --k-border: rgba(255, 255, 255, 0.1);
    font-family: sans-serif;
  }

  .edu-container { max-width: 1400px; margin: 0 auto; padding: 0 20px; }
  
  .edu-header { text-align: center; margin-bottom: 60px; }

  /* --- TÍTULO CON ESTILO ETHNOCENTRIC --- */
  .edu-header h2 { 
    font-family: 'Michroma', sans-serif !important;
    font-size: clamp(1.5rem, 5vw, 2.5rem); 
    font-weight: 700; 
    text-transform: uppercase; 
    letter-spacing: 8px !important; 
    margin: 0;
    background: linear-gradient(120deg, rgba(255,255,255,0.1) 30%, {{ section.settings.text_color }} 50%, rgba(255,255,255,0.1) 70%);
    background-size: 200% 100%;
    -webkit-background-clip: text;
    background-clip: text;
    color: rgba(255, 255, 255, 0.9);
    animation: eduShineTitle 4s infinite linear;
  }

  @keyframes eduShineTitle {
    0% { background-position: 200% 0; }
    100% { background-position: -200% 0; }
  }

  .k-line { 
    width: 80px; height: 2px; 
    background: var(--k-cyan); 
    margin: 20px auto; 
    box-shadow: 0 0 15px var(--k-cyan); 
  }

  /* --- FORMULARIO DE CREACIÓN (LOOK INDUSTRIAL) --- */
  .edu-creator-box {
    max-width: 600px;
    margin: 0 auto 80px auto;
    background: #0a0a0a;
    padding: 40px;
    border-radius: 0px; /* Bordes rectos */
    border: 1px solid var(--k-border);
  }

  .edu-creator-box h4 { 
    font-family: 'Michroma', sans-serif !important;
    margin-top: 0; 
    color: var(--k-cyan); 
    text-transform: uppercase; 
    font-size: 10px; 
    letter-spacing: 2px; 
    text-align: center; 
    margin-bottom: 25px;
  }

  .edu-form { display: flex; flex-direction: column; gap: 15px; }
  .edu-form input {
    background: #000;
    border: 1px solid #222;
    padding: 15px;
    border-radius: 0px; 
    color: #fff;
    outline: none;
    font-size: 13px;
    transition: 0.3s;
  }
  .edu-form input:focus { border-color: var(--k-cyan); }

  .edu-btn-submit {
    font-family: 'Michroma', sans-serif !important;
    background: var(--k-cyan);
    color: #000;
    border: none;
    padding: 20px;
    font-size: 11px;
    font-weight: 700;
    text-transform: uppercase;
    cursor: pointer;
    letter-spacing: 1px;
    transition: 0.3s;
  }
  .edu-btn-submit:hover { background: #fff; transform: translateY(-3px); }

  /* --- GRID DE TARJETAS --- */
  .edu-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 30px;
  }

  .edu-card {
    background: #0a0a0a;
    border: 1px solid var(--k-border);
    padding: 40px;
    border-radius: 0px; /* Consistencia visual */
    text-decoration: none;
    transition: all 0.4s ease;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    min-height: 220px;
  }

  .edu-card:hover {
    transform: translateY(-10px);
    border-color: var(--k-cyan);
    background: #111;
  }

  .edu-card h3 { 
    font-family: 'Michroma', sans-serif !important;
    color: #fff; 
    margin: 0; 
    font-size: 14px; 
    font-weight: 400; 
    line-height: 1.6; 
    letter-spacing: 1px;
    text-transform: uppercase;
  }
  
  .badge-link {
    font-family: 'Michroma', sans-serif !important;
    font-size: 9px;
    font-weight: 700;
    color: var(--k-cyan);
    text-transform: uppercase;
    letter-spacing: 2px;
    display: flex;
    align-items: center;
    gap: 8px;
    margin-top: 30px;
  }

  @media (max-width: 768px) { 
    .edu-header h2 { letter-spacing: 3px !important; }
  }
{%- endstyle -%}

<div class="edu-container">
  <div class="edu-header">
    <h2>{{ section.settings.title }}</h2>
    <div class="k-line"></div>
  </div>

  <div class="edu-creator-box">
    <h4>Publicar nueva opción</h4>
    <div class="edu-form">
      <input type="text" id="input-title" placeholder="TÍTULO DE LA GUÍA (EJ: MANUAL KS PRO)">
      <input type="text" id="input-url" placeholder="PEGA EL LINK AQUÍ (HTTPS://...)">
      <button class="edu-btn-submit" id="btn-add-guide">Publicar en el sitio</button>
    </div>
  </div>

  <div id="guides-display" class="edu-grid">
    {% for block in section.blocks %}
      <a href="{{ block.settings.link_url }}" class="edu-card">
        <h3>{{ block.settings.guide_title }}</h3>
        <div class="card-footer">
          <span class="badge-link">IR AL SITIO →</span>
        </div>
      </a>
    {% endfor %}
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const btn = document.getElementById('btn-add-guide');
  const grid = document.getElementById('guides-display');

  function createCard(title, url) {
    const card = document.createElement('a');
    card.href = url.startsWith('http') ? url : 'https://' + url;
    card.target = "_blank";
    card.className = 'edu-card';
    card.innerHTML = `
      <h3>${title.toUpperCase()}</h3>
      <div class="card-footer">
        <span class="badge-link">VISITAR SITIO →</span>
      </div>
    `;
    return card;
  }

  const savedData = JSON.parse(localStorage.getItem('kieslect_guides_db') || '[]');
  savedData.forEach(item => {
    grid.prepend(createCard(item.t, item.u));
  });

  btn.addEventListener('click', function() {
    const tVal = document.getElementById('input-title').value.trim();
    const uVal = document.getElementById('input-url').value.trim();

    if (tVal && uVal) {
      grid.prepend(createCard(tVal, uVal));
      savedData.push({ t: tVal, u: uVal });
      localStorage.setItem('kieslect_guides_db', JSON.stringify(savedData));
      document.getElementById('input-title').value = "";
      document.getElementById('input-url').value = "";
    } else {
      alert("Por favor rellena el título y el link");
    }
  });
});
</script>

{% schema %}
{
  "name": "Kieslect Academy V3",
  "settings": [
    { "type": "text", "id": "title", "label": "Título", "default": "KIESLECT ACADEMY" },
    { "type": "color", "id": "bg_color", "label": "Fondo", "default": "#000000" },
    { "type": "color", "id": "text_color", "label": "Texto", "default": "#ffffff" },
    { "type": "range", "id": "padding_top", "min": 0, "max": 100, "default": 80, "unit": "px", "label": "Padding Superior" },
    { "type": "range", "id": "padding_bottom", "min": 0, "max": 100, "default": 80, "unit": "px", "label": "Padding Inferior" }
  ],
  "blocks": [
    {
      "type": "manual_guide",
      "name": "Guía Estática",
      "settings": [
        { "type": "text", "id": "guide_title", "label": "Título", "default": "Manual Oficial" },
        { "type": "url", "id": "link_url", "label": "Link de la guía" }
      ]
    }
  ],
  "presets": [{ "name": "Kieslect Academy V3" }]
}
{% endschema %}