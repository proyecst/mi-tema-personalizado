<style>
  /* Estenedor Principal del Anuncio */
  .ad-block-wrapper {
    background-color: {{ section.settings.bg_color }};
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 500px;
    padding: 60px 5%;
    overflow: hidden;
    font-family: "Futura", "Trebuchet MS", sans-serif;
  }

  .ad-block-container {
    max-width: 1200px;
    width: 100%;
    display: flex;
    align-items: center;
    gap: 40px;
  }

  /* BLOQUE IZQUIERDA: TEXTO */
  .ad-block-left {
    flex: 1.2;
    text-align: left;
    color: #ffffff;
    z-index: 2;
  }

  .ad-block-left h2 {
    font-size: clamp(2.5rem, 5vw, 4.5rem);
    line-height: 1;
    margin: 0;
    text-transform: uppercase;
    font-weight: 900;
    /* EFECTO GLOW EN LETRAS */
    text-shadow: 0 0 10px rgba(255,255,255,0.8), 0 0 20px rgba(255,255,255,0.3);
  }

  .ad-block-left p {
    font-size: 1.2rem;
    margin-top: 25px;
    color: #cccccc;
    max-width: 500px;
    line-height: 1.5;
    text-transform: none;
  }

  .ad-block-button {
    display: inline-block;
    margin-top: 35px;
    padding: 15px 45px;
    background-color: #ffffff;
    color: #000000;
    text-decoration: none;
    font-weight: bold;
    text-transform: uppercase;
    letter-spacing: 2px;
    transition: 0.3s;
    border-radius: 2px;
  }

  .ad-block-button:hover {
    background-color: #e0e0e0;
    box-shadow: 0 0 20px rgba(255,255,255,0.4);
    transform: scale(1.05);
  }

  /* BLOQUE DERECHA: IMAGEN */
  .ad-block-right {
    flex: 1;
    display: flex;
    justify-content: center;
    position: relative;
  }

  .ad-block-right img {
    width: 100%;
    max-width: 550px;
    height: auto;
    object-fit: contain;
    /* Resplandor sutil alrededor de la imagen */
    filter: drop-shadow(0 0 15px rgba(255,255,255,0.2));
  }

  /* RESPONSIVO MÓVIL */
  @media (max-width: 768px) {
    .ad-block-container {
      flex-direction: column;
      text-align: center;
    }
    .ad-block-left {
      text-align: center;
      order: 2;
    }
    .ad-block-right {
      order: 1;
      margin-bottom: 20px;
    }
    .ad-block-left p {
      margin-left: auto;
      margin-right: auto;
    }
  }
</style>

<section class="ad-block-wrapper">
  <div class="ad-block-container">
    
    <div class="ad-block-left">
      <h2>{{ section.settings.title }}</h2>
      <p>{{ section.settings.description }}</p>
      {% if section.settings.link != blank %}
        <a href="{{ section.settings.link }}" class="ad-block-button">
          {{ section.settings.btn_text }}
        </a>
      {% endif %}
    </div>

    <div class="ad-block-right">
      {% if section.settings.image != blank %}
        <img src="{{ section.settings.image | image_url: width: 800 }}" alt="{{ section.settings.title }}">
      {% else %}
        <img src="https://i.imgur.com/r62Kq3i.png" alt="Smartwatch Mujer">
      {% endif %}
    </div>

  </div>
</section>

{% schema %}
{
  "name": "Add Block Smartwatch",
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Color de Fondo",
      "default": "#000000"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Título",
      "default": "Smartwatch Mujer"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Texto Izquierda",
      "default": "Tecnología que se ajusta a tu estilo. Encuentra smartwatches con pantallas AMOLED y funciones de salud."
    },
    {
      "type": "image_picker",
      "id": "id_image",
      "label": "Imagen Publicitaria"
    },
    {
      "type": "text",
      "id": "btn_text",
      "label": "Texto del Botón",
      "default": "DESCUBRIR"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Enlace del Botón"
    }
  ],
  "presets": [
    {
      "name": "Add Block Smartwatch"
    }
  ]
}
{% endschema %}