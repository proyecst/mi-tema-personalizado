<style>
  .smartwatch-hero-section {
    background-color: {{ section.settings.bg_color }};
    color: {{ section.settings.text_color }};
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 60px 10%;
    font-family: "Futura", "Trebuchet MS", sans-serif;
    gap: 40px;
    overflow: hidden;
  }

  .smartwatch-hero-text-content {
    flex: 1;
    z-index: 2;
  }

  .smartwatch-hero-text-content h2 {
    font-size: clamp(2.5rem, 6vw, 4rem);
    color: {{ section.settings.heading_color }};
    text-transform: uppercase;
    margin: 0;
    line-height: 1;
    text-shadow: 0 0 15px rgba(255, 255, 255, 0.7), 0 0 30px rgba(255, 255, 255, 0.3);
  }

  .smartwatch-hero-text-content p {
    font-size: 1.2rem;
    color: {{ section.settings.paragraph_color }};
    margin-top: 20px;
    text-transform: none;
  }

  .smartwatch-hero-button {
    display: inline-block;
    background-color: {{ section.settings.button_bg_color }};
    color: {{ section.settings.button_text_color }};
    padding: 18px 35px;
    margin-top: 30px;
    text-decoration: none;
    text-transform: uppercase;
    font-weight: bold;
    border-radius: 2px;
    box-shadow: 0 0 15px {{ section.settings.button_bg_color | color_modify: 'alpha', 0.5 }};
  }

  .smartwatch-hero-image-block {
    flex: 1;
    display: flex;
    justify-content: center;
  }

  .smartwatch-hero-image-block img {
    width: 100%;
    max-width: 550px;
    height: auto;
    border-radius: 5px;
    box-shadow: 0 0 30px rgba(255,255,255,0.1);
  }

  @media (max-width: 768px) {
    .smartwatch-hero-section {
      flex-direction: column;
      text-align: center;
      padding: 40px 20px;
    }
  }
</style>

<div class="smartwatch-hero-section">
  <div class="smartwatch-hero-text-content">
    <h2>{{ section.settings.heading }}</h2>
    <p>{{ section.settings.subheading }}</p>
    {%- if section.settings.button_link != blank -%}
      <a href="{{ section.settings.button_link }}" class="smartwatch-hero-button">
        {{ section.settings.button_label }}
      </a>
    {%- endif -%}
  </div>

  <div class="smartwatch-hero-image-block">
    {%- if section.settings.image != blank -%}
      {{ section.settings.image | image_url: width: 800 | image_tag: loading: 'lazy' }}
    {%- else -%}
      <img src="https://i.imgur.com/r62Kq3i.png" alt="Smartwatch Mujer">
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "Smartwatch Hero Block",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Título Principal",
      "default": "Smartwatch Mujer"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Descripción",
      "default": "Tecnología que se ajusta a tu estilo."
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Imagen de la Modelo"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Texto del Botón",
      "default": "Comprar Ahora"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Enlace del Botón"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Color de Fondo",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Color del Título",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "paragraph_color",
      "label": "Color del Texto",
      "default": "#cccccc"
    },
    {
      "type": "color",
      "id": "button_bg_color",
      "label": "Fondo del Botón",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Texto del Botón",
      "default": "#000000"
    }
  ],
  "presets": [
    {
      "name": "Smartwatch Hero Block"
    }
  ]
}
{% endschema %}