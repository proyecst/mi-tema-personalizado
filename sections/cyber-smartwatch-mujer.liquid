<style>
  @import url('https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700;900&family=Montserrat:wght@300;400;700&display=swap');

  .ad-cyber-wrapper {
    background-color: #000;
    color: #fff;
    padding: 60px 5%;
    font-family: 'Montserrat', sans-serif;
  }

  .ad-block-item {
    max-width: 1100px;
    margin: 0 auto 100px auto;
    opacity: 0;
    transform: translateX(-50px);
    animation: slideIn 1s forwards ease-out;
  }

  .ad-block-item:last-child { margin-bottom: 0; }

  /* COLORES GLOW DIFERENCIADOS */
  .glow-mujer { color: #fff; text-shadow: 0 0 15px #ff00ff, 0 0 30px #ff00ff; border-left: 4px solid #ff00ff; }
  .glow-hombre { color: #fff; text-shadow: 0 0 15px #00d4ff, 0 0 30px #00d4ff; border-left: 4px solid #00d4ff; }

  .ad-title {
    font-family: 'Orbitron', sans-serif;
    font-size: clamp(1.8rem, 4vw, 3rem);
    margin: 0 0 20px 0;
