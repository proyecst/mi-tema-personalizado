    margin-top: 20px;
    margin-left: 24px;
    padding: 12px 35px;
    background: #fff;
    color: #000;
    text-decoration: none;
    font-weight: bold;
    text-transform: uppercase;
    font-size: 0.9rem;
    transition: 0.3s;
  }

  .ad-link:hover { transform: scale(1.05); box-shadow: 0 0 20px rgba(255,255,255,0.4); }

  .ad-keywords {
    font-size: 11px;
    color: #444;
    margin-top: 30px;
    padding-left: 24px;
    text-transform: uppercase;
  }

  @keyframes slideIn { to { opacity: 1; transform: translateX(0); } }

  @media (max-width: 768px) {
    .ad-title { font-size: 1.8rem; }
    .ad-features-grid { grid-template-columns: 1fr; }
  }
</style>

