  /* GRID DE SECCIONES DETALLADAS */
  .ad-features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 20px;
    margin: 30px 0;
    padding-left: 24px;
  }

  .feature-node {
    background: rgba(255, 255, 255, 0.03);
    padding: 15px;
    border: 1px solid #222;
    transition: 0.3s;
  }

  .feature-node:hover { background: rgba(255, 255, 255, 0.07); border-color: #444; }

  .feature-node h4 {
    font-family: 'Orbitron', sans-serif;
    font-size: 0.8rem;
    margin: 0 0 5px 0;
    letter-spacing: 1px;
  }

  .ad-link {
