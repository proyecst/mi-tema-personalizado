{%- style -%}
  @font-face {
    font-family: 'Ethnocentric';
    src: url('https://db.onlinewebfonts.com/t/625330384ef8f0607921389809635532.woff2') format('woff2');
    font-display: swap;
  }

  .feat-cats-{{ section.id }} {
    background-color: {{ section.settings.bg_color }};
    padding: 80px 4%;
    font-family: 'Ethnocentric', sans-serif !important;
  }

  .cats-split-layout {
    display: grid;
    grid-template-columns: 1fr 1.6fr;
    gap: 50px;
    max-width: 1400px;
    margin: 0 auto;
    align-items: center;
  }

  /* IZQUIERDA: CATEGORÍAS */
  .cats-left-list {
    display: flex;
    flex-direction: column;
    gap: 15px;
  }

  .cat-text-link {
    text-decoration: none;
    color: #ffffff;
    font-size: clamp(0.9rem, 2vw, 1.25rem);
    letter-spacing: 2px;
    text-transform: uppercase;
    padding: 20px 0;
    border-bottom: 1px solid rgba(0, 242, 255, 0.1);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .cat-text-link:hover {
    color: {{ section.settings.accent_color }};
    padding-left: 15px;
    text-shadow: 0 0 10px {{ section.settings.accent_color }};
    border-bottom-color: {{ section.settings.accent_color }};
  }

  .cat-text-link::after {
    content: '→';
    opacity: 0;
    transition: 0.3s;
  }

  .cat-text-link:hover::after {
    opacity: 1;
    transform: translateX(10px);
  }

  /* DERECHA: BANNER OFERTA */
  .offer-banner-right {
    position: relative;
    width: 100%;
    min-height: 500px;
    border: 2px solid {{ section.settings.accent_color }};
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    box-shadow: 0 0 30px {{ section.settings.accent_color | color_modify: 'alpha', 0.2 }};
  }

  .offer-bg-img {
    position: absolute;
    top: 0; left: 0; width: 100%; height: 100%;
    object-fit: cover;
    z-index: 1;
    opacity: 0.5;
    transition: 1s ease;
  }

  .offer-banner-right:hover .offer-bg-img {
    transform: scale(1.1);
    opacity: 0.7;
  }

  .offer-content {
    position: relative;
    z-index: 3;
    text-align: center;
    padding: 40px;
    background: rgba(0,0,0,0.4);
    backdrop-filter: blur(5px);
    border: 1px solid rgba(255,255,255,0.1);
    max-width: 80%;
  }

  .offer-badge {
    position: absolute;
    top: 20px;
    right: 20px;
    background: red;
    color: white;
    padding: 5px 15px;
    font-size: 0.7rem;
    z-index: 4;
    animation: pulse-red 2s infinite;
  }

  @keyframes pulse-red {
    0% { box-shadow: 0 0 0 0 rgba(255, 0, 0, 0.7); }
    70% { box-shadow: 0 0 0 15px rgba(255, 0, 0, 0); }
    100% { box-shadow: 0 0 0 0 rgba(255, 0, 0, 0); }
  }

  .offer-title {
    color: #fff;
    font-size: clamp(1.5rem, 4vw, 2.5rem);
    margin: 10px 0 25px 0;
    line-height: 1.2;
    text-shadow: 0 0 15px {{ section.settings.accent_color }};
  }

  /* BOTÓN LLAMADA A LA ACCIÓN */
  .offer-cta-btn {
    display: inline-block;
    background: transparent;
    color: {{ section.settings.accent_color }};
    border: 2px solid {{ section.settings.accent_color }};
    padding: 15px 35px;
    font-size: 0.8rem;
    letter-spacing: 2px;
    position: relative;
    overflow: hidden;
    transition: 0.3s;
  }

  .offer-cta-btn:hover {
    background: {{ section.settings.accent_color }};
    color: #000;
    box-shadow: 0 0 20px {{ section.settings.accent_color }};
  }

  /* MOBILE */
  @media (max-width: 900px) {
    .cats-split-layout { grid-template-columns: 1fr; }
    .offer-banner-right { min-height: 350px; order: -1; }
  }
{%- endstyle -%}

<section class="feat-cats-{{ section.id }}">
  <div class="cats-split-layout">
    
    <div class="cats-left-list">
      <h2 style="color:{{ section.settings.accent_color }}; font-size: 0.8rem; margin-bottom: 20px; opacity: 0.7;">// CATEGORÍAS_</h2>
      {% for block in section.blocks %}
        {% if block.type == 'category' %}
          <a href="{{ block.settings.link }}" class="cat-text-link" {{ block.shopify_attributes }}>
            {{ block.settings.title }}
          </a>
        {% endif %}
      {% endfor %}
    </div>

    {% for block in section.blocks %}
      {% if block.type == 'offer_block' %}
        <div class="offer-banner-right">
          <div class="offer-badge">OFERTA ACTIVA</div>
          {% if block.settings.image != blank %}
            <img src="{{ block.settings.image | image_url: width: 1400 }}" class="offer-bg-img" loading="lazy">
          {% endif %}
          <div class="offer-content">
            <span style="color: {{ section.settings.accent_color }}; font-size: 0.7rem;">{{ block.settings.tag }}</span>
            <h3 class="offer-title">{{ block.settings.offer_title }}</h3>
            <a href="{{ block.settings.link }}" class="offer-cta-btn">
              ADQUIRIR AHORA_
            </a>
          </div>
        </div>
      {% endif %}
    {% endfor %}

  </div>
</section>

{% schema %}
{
  "name": "Categorías Split Pro",
  "settings": [
    { "type": "color", "id": "bg_color", "label": "Fondo", "default": "#000000" },
    { "type": "color", "id": "accent_color", "label": "Color Neón", "default": "#00f2ff" }
  ],
  "blocks": [
    {
      "type": "category",
      "name": "Categoría (Texto)",
      "settings": [
        { "type": "text", "id": "title", "label": "Nombre", "default": "MUJER" },
        { "type": "url", "id": "link", "label": "Link" }
      ]
    },
    {
      "type": "offer_block",
      "name": "Banner Oferta",
      "limit": 1,
      "settings": [
        { "type": "image_picker", "id": "image", "label": "Imagen Banner" },
        { "type": "text", "id": "tag", "label": "Subtítulo", "default": "EDICIÓN LIMITADA" },
        { "type": "text", "id": "offer_title", "label": "Título Oferta", "default": "KIESLECT SMARTWATCHES -30%" },
        { "type": "url", "id": "link", "label": "Link Botón" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Categorías Split Pro",
      "blocks": [
        { "type": "category", "settings": { "title": "SMARTWATCH MUJER" } },
        { "type": "category", "settings": { "title": "SMARTWATCH HOMBRE" } },
        { "type": "offer_block" }
      ]
    }
  ]
}
{% endschema %}