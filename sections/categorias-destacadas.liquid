{%- style -%}
  /* 1. CARGA DE FUENTE FUTURISTA */
  @font-face {
    font-family: 'Ethnocentric';
    src: url('https://db.onlinewebfonts.com/t/625330384ef8f0607921389809635532.woff2') format('woff2');
    font-display: swap;
  }

  .feat-cats-{{ section.id }} {
    background-color: {{ section.settings.bg_color }};
    padding: 80px 4%;
    font-family: 'Ethnocentric', sans-serif !important;
  }

  .cats-split-layout {
    display: grid;
    grid-template-columns: 1fr 1.6fr;
    gap: 50px;
    max-width: 1400px;
    margin: 0 auto;
    align-items: center;
  }

  /* IZQUIERDA: LISTA DE TEXTOS */
  .cats-left-list {
    display: flex;
    flex-direction: column;
    gap: 15px;
  }

  .cat-text-link {
    font-family: 'Ethnocentric', sans-serif !important;
    text-decoration: none;
    color: #ffffff;
    font-size: clamp(0.9rem, 1.8vw, 1.1rem);
    letter-spacing: 2px;
    text-transform: uppercase;
    padding: 22px 0;
    border-bottom: 1px solid rgba(0, 242, 255, 0.15);
    transition: all 0.4s ease;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .cat-text-link:hover {
    color: {{ section.settings.accent_color }};
    padding-left: 20px;
    text-shadow: 0 0 12px {{ section.settings.accent_color }};
    border-bottom-color: {{ section.settings.accent_color }};
  }

  /* DERECHA: BANNER DE OFERTA */
  .offer-banner-right {
    position: relative;
    width: 100%;
    min-height: 550px;
    border: 1px solid {{ section.settings.accent_color }};
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
  }

  .offer-bg-img {
    position: absolute;
    top: 0; left: 0; width: 100%; height: 100%;
    object-fit: cover;
    z-index: 1;
    opacity: 0.45;
    transition: 1.2s cubic-bezier(0.2, 0.8, 0.2, 1);
  }

  .offer-banner-right:hover .offer-bg-img {
    transform: scale(1.1) rotate(0.5deg);
    opacity: 0.6;
  }

  .offer-badge {
    font-family: 'Ethnocentric', sans-serif !important;
    position: absolute;
    top: 25px;
    right: 25px;
    background: #ff0000;
    color: #fff;
    padding: 8px 18px;
    font-size: 0.6rem;
    z-index: 5;
    letter-spacing: 1px;
    box-shadow: 0 0 15px rgba(255,0,0,0.5);
    animation: blink-offer 1.5s infinite;
  }

  @keyframes blink-offer {
    0%, 100% { opacity: 1; transform: scale(1); }
    50% { opacity: 0.7; transform: scale(0.95); }
  }

  .offer-content {
    position: relative;
    z-index: 3;
    text-align: center;
    padding: 50px 30px;
    background: rgba(0, 0, 0, 0.65);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(0, 242, 255, 0.2);
    width: 85%;
  }

  .offer-tag {
    font-family: 'Ethnocentric', sans-serif !important;
    color: {{ section.settings.accent_color }};
    font-size: 0.7rem;
    display: block;
    margin-bottom: 15px;
    letter-spacing: 3px;
  }

  .offer-title {
    font-family: 'Ethnocentric', sans-serif !important;
    color: #fff;
    font-size: clamp(1.4rem, 4.5vw, 2.4rem);
    margin: 0 0 35px 0;
    line-height: 1.3;
    text-transform: uppercase;
    letter-spacing: 2px;
    text-shadow: 0 0 20px {{ section.settings.accent_color }};
  }

  .offer-cta-btn {
    font-family: 'Ethnocentric', sans-serif !important;
    display: inline-block;
    background: transparent;
    color: #fff;
    border: 1px solid #fff;
    padding: 18px 45px;
    font-size: 0.7rem;
    letter-spacing: 3px;
    text-decoration: none;
    transition: 0.4s;
  }

  .offer-cta-btn:hover {
    background: {{ section.settings.accent_color }};
    color: #000;
    border-color: {{ section.settings.accent_color }};
    box-shadow: 0 0 30px {{ section.settings.accent_color }};
  }

  /* MÓVIL */
  @media (max-width: 900px) {
    .cats-split-layout { grid-template-columns: 1fr; gap: 30px; }
    .offer-banner-right { min-height: 400px; order: -1; }
  }
{%- endstyle -%}

<section class="feat-cats-{{ section.id }}">
  <div class="cats-split-layout">
    
    <div class="cats-left-list">
      <p style="color: {{ section.settings.accent_color }}; font-size: 0.6rem; letter-spacing: 4px; margin-bottom: 10px;">// ACCESO_CATEGORÍAS</p>
      {% for block in section.blocks %}
        {% if block.type == 'category' %}
          <a href="{{ block.settings.link }}" class="cat-text-link" {{ block.shopify_attributes }}>
            {{ block.settings.title }}
          </a>
        {% endif %}
      {% endfor %}
    </div>

    {% for block in section.blocks %}
      {% if block.type == 'offer_block' %}
        <div class="offer-banner-right">
          <div class="offer-badge">OFERTA_ACTIVA</div>
          
          {% if block.settings.image != blank %}
            <img src="{{ block.settings.image | image_url: width: 1500 }}" class="offer-bg-img" loading="lazy">
          {% else %}
            <div class="offer-bg-img" style="background: #111;"></div>
          {% endif %}

          <div class="offer-content">
            <span class="offer-tag">{{ block.settings.tag }}</span>
            <h3 class="offer-title">{{ block.settings.offer_title }}</h3>
            <a href="{{ block.settings.link }}" class="offer-cta-btn">
              VER_OFERTA_AHORA
            </a>
          </div>
        </div>
      {% endif %}
    {% endfor %}

  </div>
</section>

{% schema %}
{
  "name": "Categorías Split Pro",
  "settings": [
    { "type": "color", "id": "bg_color", "label": "Color de Fondo", "default": "#000000" },
    { "type": "color", "id": "accent_color", "label": "Color Neón", "default": "#00f2ff" }
  ],
  "blocks": [
    {
      "type": "category",
      "name": "Categoría (Texto)",
      "settings": [
        { "type": "text", "id": "title", "label": "Nombre de la Categoría", "default": "MUJER" },
        { "type": "url", "id": "link", "label": "Enlace de la Categoría" }
      ]
    },
    {
      "type": "offer_block",
      "name": "Banner de Oferta",
      "limit": 1,
      "settings": [
        { "type": "image_picker", "id": "image", "label": "Imagen del Banner" },
        { "type": "text", "id": "tag", "label": "Etiqueta superior", "default": "EDICIÓN LIMITADA" },
        { "type": "text", "id": "offer_title", "label": "Título de la Oferta", "default": "KIESLECT SERIES -40% DTO" },
        { "type": "url", "id": "link", "label": "Enlace de Oferta" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Categorías Split Pro",
      "blocks": [
        { "type": "category", "settings": { "title": "SMARTWATCH MUJER" } },
        { "type": "category", "settings": { "title": "SMARTWATCH HOMBRE" } },
        { "type": "category", "settings": { "title": "ACCESORIOS PREMIUM" } },
        { "type": "offer_block" }
      ]
    }
  ]
}
{% endschema %}