{%- style -%}
  @font-face {
    font-family: 'Ethnocentric';
    src: url('https://db.onlinewebfonts.com/t/625330384ef8f0607921389809635532.woff2') format('woff2');
    font-display: swap;
  }

  .feat-cats-{{ section.id }} {
    background-color: {{ section.settings.bg_color }};
    padding: 60px 4%;
    font-family: 'Ethnocentric', sans-serif !important;
  }

  /* CONTENEDOR PRINCIPAL: SPLIT DESIGN */
  .cats-split-layout {
    display: grid;
    grid-template-columns: 1fr 1.5fr; /* Izquierda texto, derecha banner */
    gap: 40px;
    max-width: 1400px;
    margin: 0 auto;
    align-items: center;
  }

  /* COLUMNA IZQUIERDA: SOLO TEXTOS */
  .cats-left-list {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .cat-text-link {
    text-decoration: none;
    color: #ffffff;
    font-size: clamp(1rem, 2vw, 1.4rem);
    letter-spacing: 2px;
    text-transform: uppercase;
    padding: 15px 0;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
  }

  .cat-text-link:hover {
    color: {{ section.settings.accent_color }};
    padding-left: 15px;
    text-shadow: 0 0 10px {{ section.settings.accent_color }};
    border-bottom-color: {{ section.settings.accent_color }};
  }

  /* COLUMNA DERECHA: BANNER DE OFERTA */
  .offer-banner-right {
    position: relative;
    width: 100%;
    min-height: 450px;
    border: 1px solid {{ section.settings.accent_color }};
    overflow: hidden;
    display: flex;
    align-items: flex-end; /* Texto abajo */
    text-decoration: none;
    box-shadow: 0 0 20px {{ section.settings.accent_color | color_modify: 'alpha', 0.2 }};
  }

  .offer-bg-img {
    position: absolute;
    top: 0; left: 0; width: 100%; height: 100%;
    object-fit: cover;
    z-index: 1;
    opacity: 0.6;
    transition: 0.6s ease;
  }

  .offer-banner-right:hover .offer-bg-img {
    transform: scale(1.05);
    opacity: 0.8;
  }

  .offer-content {
    position: relative;
    z-index: 2;
    padding: 40px;
    background: linear-gradient(0deg, rgba(0,0,0,0.8) 0%, transparent 100%);
    width: 100%;
  }

  .offer-tag {
    font-size: 0.7rem;
    color: {{ section.settings.accent_color }};
    margin-bottom: 10px;
    display: block;
  }

  .offer-title {
    color: #fff;
    font-size: clamp(1.2rem, 3vw, 2rem);
    margin: 0;
    letter-spacing: 2px;
  }

  /* MOBILE */
  @media (max-width: 900px) {
    .cats-split-layout {
      grid-template-columns: 1fr;
    }
    .offer-banner-right {
      min-height: 300px;
      order: -1; /* Banner arriba en móvil */
    }
  }
{%- endstyle -%}

<section class="feat-cats-{{ section.id }}">
  <div class="cats-split-layout">
    
    <div class="cats-left-list">
      {% for block in section.blocks %}
        {% if block.type == 'category' %}
          <a href="{{ block.settings.link }}" class="cat-text-link" {{ block.shopify_attributes }}>
            {{ block.settings.title }}
          </a>
        {% endif %}
      {% endfor %}
    </div>

    {% for block in section.blocks %}
      {% if block.type == 'offer_block' %}
        <a href="{{ block.settings.link }}" class="offer-banner-right" {{ block.shopify_attributes }}>
          {% if block.settings.image != blank %}
            <img src="{{ block.settings.image | image_url: width: 1200 }}" class="offer-bg-img" loading="lazy">
          {% endif %}
          <div class="offer-content">
            <span class="offer-tag">{{ block.settings.tag }}</span>
            <h3 class="offer-title">{{ block.settings.offer_title }}</h3>
          </div>
        </a>
      {% endif %}
    {% endfor %}

  </div>
</section>

{% schema %}
{
  "name": "Categorías Split",
  "settings": [
    { "type": "color", "id": "bg_color", "label": "Fondo", "default": "#000000" },
    { "type": "color", "id": "accent_color", "label": "Color Neón", "default": "#00f2ff" }
  ],
  "blocks": [
    {
      "type": "category",
      "name": "Categoría (Texto)",
      "settings": [
        { "type": "text", "id": "title", "label": "Nombre de Categoría", "default": "MUJER" },
        { "type": "url", "id": "link", "label": "Link" }
      ]
    },
    {
      "type": "offer_block",
      "name": "Banner Oferta (Derecha)",
      "limit": 1,
      "settings": [
        { "type": "image_picker", "id": "image", "label": "Imagen Banner" },
        { "type": "text", "id": "tag", "label": "Etiqueta", "default": "EXCLUSIVE DEALS" },
        { "type": "text", "id": "offer_title", "label": "Título", "default": "KIESLECT LADY SERIES" },
        { "type": "url", "id": "link", "label": "Link" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Categorías Split",
      "blocks": [
        { "type": "category", "settings": { "title": "SMARTWATCH MUJER" } },
        { "type": "category", "settings": { "title": "SMARTWATCH HOMBRE" } },
        { "type": "category", "settings": { "title": "PREMIUM TECH" } },
        { "type": "offer_block" }
      ]
    }
  ]
}
{% endschema %}