{%- style -%}
  #shopify-section-{{ section.id }} {
    background-color: {{ section.settings.bg_color }};
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }

  :root {
    --k-neon: #00D1FF;
    --k-dark: #0a0a0a;
    --k-glass: rgba(255, 255, 255, 0.03);
  }

  .news-promo-container {
    max-width: 900px;
    margin: 0 auto;
    padding: 60px 40px;
    background: var(--k-dark);
    border-radius: 30px;
    text-align: center;
    position: relative;
    overflow: hidden;
    border: 1px solid rgba(255, 255, 255, 0.1);
    box-shadow: 0 30px 60px rgba(0,0,0,0.5);
  }

  /* Efecto de luz ambiental en las esquinas */
  .news-promo-container::after {
    content: "";
    position: absolute;
    top: -50%; left: -50%; width: 200%; height: 200%;
    background: radial-gradient(circle at center, rgba(0, 209, 255, 0.05) 0%, transparent 50%);
    pointer-events: none;
  }

  .news-promo-badge {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    background: rgba(0, 209, 255, 0.1);
    color: var(--k-neon);
    padding: 8px 20px;
    border-radius: 50px;
    font-size: 11px;
    font-weight: 900;
    margin-bottom: 25px;
    text-transform: uppercase;
    letter-spacing: 2px;
    border: 1px solid var(--k-neon);
    box-shadow: 0 0 15px rgba(0, 209, 255, 0.2);
  }

  .news-promo-title {
    font-size: clamp(1.8rem, 5vw, 3rem);
    font-weight: 900;
    margin-bottom: 15px;
    color: #fff;
    text-transform: uppercase;
    letter-spacing: -1px;
    line-height: 1;
  }

  .news-promo-subtitle {
    font-size: 1.1rem;
    color: #888;
    margin-bottom: 40px;
    max-width: 550px;
    margin-left: auto;
    margin-right: auto;
    line-height: 1.6;
  }

  .news-promo-form-wrapper {
    max-width: 550px;
    margin: 0 auto;
    position: relative;
    z-index: 2;
  }

  .news-promo-form {
    display: flex;
    background: rgba(255,255,255,0.05);
    padding: 8px;
    border-radius: 100px;
    border: 1px solid rgba(255,255,255,0.1);
    transition: all 0.3s ease;
  }

  .news-promo-form:focus-within {
    border-color: var(--k-neon);
    box-shadow: 0 0 20px rgba(0, 209, 255, 0.15);
    background: rgba(255,255,255,0.08);
  }

  .news-promo-input {
    flex-grow: 1;
    padding: 15px 25px;
    background: transparent;
    border: none;
    outline: none;
    font-size: 1rem;
    color: #fff;
    font-family: inherit;
  }

  .news-promo-input::placeholder {
    color: #555;
  }

  .news-promo-submit {
    padding: 15px 35px;
    background: var(--k-neon);
    color: #000;
    border: none;
    border-radius: 100px;
    font-weight: 900;
    text-transform: uppercase;
    letter-spacing: 1px;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .news-promo-submit:hover {
    transform: scale(1.05);
    box-shadow: 0 0 25px var(--k-neon);
  }

  .news-promo-submit svg {
    transition: transform 0.3s ease;
  }

  .news-promo-submit:hover svg {
    transform: translateX(5px);
  }

  .news-promo-success {
    color: var(--k-neon);
    background: rgba(0, 209, 255, 0.1);
    padding: 20px;
    border-radius: 15px;
    font-weight: 700;
    margin-top: 0;
    border: 1px dashed var(--k-neon);
  }

  @media screen and (max-width: 650px) {
    .news-promo-container { padding: 40px 20px; border-radius: 20px; }
    .news-promo-form { flex-direction: column; background: transparent; border: none; padding: 0; gap: 15px; }
    .news-promo-input { 
      background: rgba(255,255,255,0.05); 
      border-radius: 100px; 
      border: 1px solid rgba(255,255,255,0.1); 
      width: 100%;
    }
    .news-promo-submit { width: 100%; justify-content: center; }
  }
{%- endstyle -%}

<div class="page-width">
  <div class="news-promo-container">
    {% if section.settings.badge_text != blank %}
      <span class="news-promo-badge">
        <span class="pulse-dot"></span>
        {{ section.settings.badge_text }}
      </span>
    {% endif %}

    <h2 class="news-promo-title">{{ section.settings.title }}</h2>
    <p class="news-promo-subtitle">{{ section.settings.subtitle }}</p>

    <div class="news-promo-form-wrapper">
      {% form 'customer', class: 'news-promo-form' %}
        <input type="hidden" name="contact[tags]" value="newsletter, primer-descuento">
        
        {% if form.posted_successfully? %}
          <div class="news-promo-success">
            <p>SISTEMA ACTUALIZADO: Revisa tu bandeja de entrada para activar tu cupón.</p>
          </div>
        {% else %}
          <input
            type="email"
            name="contact[email]"
            class="news-promo-input"
            value="{{ form.email }}"
            placeholder="Introduce tu e-mail"
            required
          >
          <button type="submit" class="news-promo-submit">
            <span>{{ section.settings.btn_text }}</span>
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"><line x1="5" y1="12" x2="19" y2="12"></line><polyline points="12 5 19 12 12 19"></polyline></svg>
          </button>
        {% endif %}

        {% if form.errors %}
          <p style="color: #ff4d4d; margin-top: 15px; font-weight: bold; font-size: 13px;">
            ERROR: {{ form.errors | default_errors | strip_html }}
          </p>
        {% endif %}
      {% endform %}
    </div>
  </div>
</div>

<style>
  .pulse-dot {
    width: 6px; height: 6px; background: var(--k-neon); border-radius: 50%;
    box-shadow: 0 0 8px var(--k-neon);
    animation: k-pulse 1.5s infinite;
  }
  @keyframes k-pulse {
    0% { transform: scale(1); opacity: 1; }
    50% { transform: scale(1.5); opacity: 0.5; }
    100% { transform: scale(1); opacity: 1; }
  }
</style>

{% schema %}
{
  "name": "Kieslect Tech Newsletter",
  "settings": [
    { "type": "text", "id": "badge_text", "label": "Etiqueta superior", "default": "Exclusive Access" },
    { "type": "text", "id": "title", "label": "Título", "default": "Kieslect Insider" },
    { "type": "textarea", "id": "subtitle", "label": "Subtítulo", "default": "Únete a la vanguardia. Recibe actualizaciones de firmware, lanzamientos exclusivos y un 15% en tu primera compra." },
    { "type": "text", "id": "btn_text", "label": "Texto del botón", "default": "Unirme ahora" },
    { "type": "color", "id": "bg_color", "label": "Color de fondo sección", "default": "#000000" },
    { "type": "range", "id": "padding_top", "min": 0, "max": 100, "default": 80, "unit": "px", "label": "Padding Superior" },
    { "type": "range", "id": "padding_bottom", "min": 0, "max": 100, "default": 80, "unit": "px", "label": "Padding Inferior" }
  ],
  "presets": [
    {
      "name": "Kieslect Tech Newsletter"
    }
  ]
}
{% endschema %}