<section class="hero-8k-{{ section.id }}">
  <div class="particles"></div>

  <div class="hero-8k-container">
    <div class="hero-8k-content">
      <div class="hero-8k-badge" data-aos="fade-down">{{ section.settings.badge }}</div>
      
      <h1 class="hero-8k-title" data-aos="fade-right">
        {{ section.settings.title_main }}
      </h1>
      
      <h2 class="hero-8k-subtitle" data-aos="fade-right" data-aos-delay="200">
        {{ section.settings.subtitle }}
      </h2>
      
      <p class="hero-8k-description" data-aos="fade-up" data-aos-delay="400">
        {{ section.settings.description }}
      </p>

      <div class="hero-8k-actions" data-aos="zoom-in" data-aos-delay="600">
        <a href="{{ section.settings.button_link }}" class="btn-8k">
          <span>{{ section.settings.button_label }}</span>
        </a>
      </div>
      
      <p class="hero-8k-slogan">{{ section.settings.slogan }}</p>
    </div>

    <div class="hero-8k-image" data-aos="fade-left" data-aos-delay="300">
      {% if section.settings.product_image != blank %}
        <img src="{{ section.settings.product_image | image_url: width: 1200 }}" alt="Smartwatch 8K" class="img-main">
      {% else %}
        {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
      {% endif %}
      <div class="image-glow"></div>
    </div>
  </div>
</section>

<style>
  /* Importación de fuente similar a Ethnocentric / Tech futurista */
  @import url('https://fonts.googleapis.com/css2?family=Orbitron:wght@400;900&family=Rajdhani:wght@300;600&display=swap');

  .hero-8k-{{ section.id }} {
    position: relative;
    background: radial-gradient(circle at center, #1a1c2c 0%, #050505 100%);
    min-height: 90vh;
    display: flex;
    align-items: center;
    overflow: hidden;
    color: #ffffff;
    font-family: 'Rajdhani', sans-serif;
  }

  /* Título con estilo Ethnocentric */
  .hero-8k-title {
    font-family: 'Orbitron', sans-serif; /* Lo más parecido a Ethnocentric */
    font-size: clamp(2.5rem, 6vw, 5rem);
    text-transform: uppercase;
    letter-spacing: 4px;
    line-height: 0.9;
    margin: 15px 0;
    background: linear-gradient(180deg, #fff 30%, {{ section.settings.accent_color }});
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    filter: drop-shadow(0 0 15px {{ section.settings.accent_color }}55);
  }

  .hero-8k-container {
    width: 90%;
    max-width: 1400px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 1fr;
    align-items: center;
    z-index: 2;
  }

  .hero-8k-badge {
    background: {{ section.settings.accent_color }};
    color: white;
    padding: 5px 20px;
    font-family: 'Orbitron', sans-serif;
    font-size: 0.7rem;
    display: inline-block;
    clip-path: polygon(10% 0, 100% 0, 90% 100%, 0 100%);
    margin-bottom: 10px;
  }

  .hero-8k-subtitle {
    font-size: 1.8rem;
    font-weight: 300;
    text-transform: uppercase;
    letter-spacing: 2px;
    color: {{ section.settings.accent_color }};
    margin-bottom: 20px;
  }

  .hero-8k-description {
    font-size: 1.2rem;
    max-width: 500px;
    opacity: 0.8;
    line-height: 1.6;
  }

  /* Botón Futurista */
  .btn-8k {
    position: relative;
    display: inline-block;
    padding: 20px 50px;
    color: #fff;
    text-decoration: none;
    font-family: 'Orbitron', sans-serif;
    font-weight: bold;
    border: 1px solid {{ section.settings.accent_color }};
    overflow: hidden;
    transition: 0.5s;
    background: transparent;
  }

  .btn-8k:hover {
    background: {{ section.settings.accent_color }};
    box-shadow: 0 0 40px {{ section.settings.accent_color }};
  }

  /* Animación de la Imagen */
  .hero-8k-image { position: relative; }
  .img-main {
    width: 100%;
    filter: drop-shadow(0 0 50px {{ section.settings.accent_color }}44);
    animation: floating 6s ease-in-out infinite;
  }

  @keyframes floating {
    0%, 100% { transform: translateY(0) rotate(0deg); }
    50% { transform: translateY(-25px) rotate(2deg); }
  }

  .image-glow {
    position: absolute;
    top: 50%; left: 50%;
    transform: translate(-50%, -50%);
    width: 300px; height: 300px;
    background: {{ section.settings.accent_color }};
    filter: blur(150px);
    opacity: 0.3;
    z-index: -1;
  }

  @media (max-width: 990px) {
    .hero-8k-container { grid-template-columns: 1fr; text-align: center; }
    .hero-8k-description { margin: 0 auto 30px; }
  }
</style>

{% schema %}
{
  "name": "Hero 8K Futurista",
  "settings": [
    { "type": "color", "id": "accent_color", "label": "Color Neón / Acento", "default": "#00f2ff" },
    { "type": "text", "id": "badge", "label": "Etiqueta", "default": "NEXT GEN TECHNOLOGY" },
    { "type": "text", "id": "title_main", "label": "Título", "default": "Relojes Smartwatch" },
    { "type": "text", "id": "subtitle", "label": "Subtítulo", "default": "Tecnología Premium 8K" },
    { "type": "textarea", "id": "description", "label": "Descripción", "default": "Pantallas AMOLED, batería de larga duración y monitoreo de salud 24/7." },
    { "type": "text", "id": "button_label", "label": "Botón", "default": "ADQUIRIR AHORA" },
    { "type": "url", "id": "button_link", "label": "Enlace" },
    { "type": "text", "id": "slogan", "label": "Eslogan", "default": "// TU ESTILO, TU SMARTWATCH" },
    { "type": "image_picker", "id": "product_image", "label": "Imagen del Producto" }
  ],
  "presets": [{ "name": "Hero 8K Futurista" }]
}
{% endschema %}