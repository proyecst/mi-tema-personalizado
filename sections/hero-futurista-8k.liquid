
<section class="h-fut" style="background:#000;color:#fff;padding:60px 20px;text-align:center;">
  <div style="max-width:1100px;margin:0 auto;">
    <h1 style="font-family:sans-serif;font-size:40px;color:{{ section.settings.accent }};">
      {{ section.settings.title }}
    </h1>
    <p style="font-size:18px;opacity:0.8;">{{ section.settings.subtitle }}</p>
    
    <div style="margin:30px 0;">
      {% if section.settings.image != blank %}
        <img src="{{ section.settings.image | image_url: width: 600 }}" style="max-width:100%;height:auto;animation:pulse 3s infinite;">
      {% endif %}
    </div>

    <a href="{{ section.settings.link }}" style="background:{{ section.settings.accent }};color:#000;padding:15px 30px;text-decoration:none;font-weight:bold;border-radius:4px;">
      {{ section.settings.btn_label }}
    </a>
  </div>
</section>

<style>
@keyframes pulse {
  0% { transform: scale(1); filter: brightness(1); }
  50% { transform: scale(1.02); filter: brightness(1.2); }
  100% { transform: scale(1); filter: brightness(1); }
}
</style>

{% schema %}
{
  "name": "Test Hero",
  "settings": [
    { "type": "color", "id": "accent", "label": "Color", "default": "#00f2ff" },
    { "type": "text", "id": "title", "label": "Titulo", "default": "Relojes Smartwatch" },
    { "type": "text", "id": "subtitle", "label": "Subtitulo", "default": "Tecnolog√≠a Premium para tu Estilo" },
    { "type": "text", "id": "btn_label", "label": "Boton", "default": "COMPRAR AHORA" },
    { "type": "url", "id": "link", "label": "Link" },
    { "type": "image_picker", "id": "image", "label": "Imagen" }
  ],
  "presets": [
    { "name": "Test Hero" }
  ]
}
{% endschema %}