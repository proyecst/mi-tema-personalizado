<section class="hero-8k-final">
  <div class="hero-8k-container">
    <div class="hero-8k-text">
      <span class="badge-8k">{{ section.settings.badge }}</span>
      <h1 class="title-8k">{{ section.settings.title_main }}</h1>
      <h2 class="subtitle-8k">{{ section.settings.subtitle }}</h2>
      <p class="desc-8k">{{ section.settings.description }}</p>
      
      <div class="actions-8k">
        <a href="{{ section.settings.button_link }}" class="btn-8k">
          {{ section.settings.button_label }}
        </a>
      </div>
      
      <p class="slogan-8k"><span>//</span> {{ section.settings.slogan }}</p>
    </div>

    <div class="hero-8k-visual">
      {% if section.settings.product_image != blank %}
        <img src="{{ section.settings.product_image | image_url: width: 1000 }}" class="img-8k">
      {% else %}
        {{ 'product-1' | placeholder_svg_tag: 'placeholder-8k' }}
      {% endif %}
      <div class="glow-8k"></div>
      <div class="scan-line"></div>
    </div>
  </div>
</section>

<style>
  @import url('https://fonts.cdnfonts.com/css/ethnocentric');
  @import url('https://fonts.googleapis.com/css2?family=Rajdhani:wght@400;700&display=swap');

  .hero-8k-final {
    background: #000;
    color: #fff;
    padding: 100px 5%;
    font-family: 'Rajdhani', sans-serif;
    overflow: hidden;
    position: relative;
  }

  .hero-8k-container {
    max-width: 1300px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 1fr;
    align-items: center;
    gap: 50px;
  }

  .title-8k {
    font-family: 'ethnocentric', sans-serif;
    font-size: clamp(2rem, 5vw, 4rem);
    line-height: 1;
    margin: 20px 0;
    background: linear-gradient(to bottom, #fff, {{ section.settings.accent_color }});
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .badge-8k {
    font-family: 'ethnocentric', sans-serif;
    color: {{ section.settings.accent_color }};
    font-size: 0.7rem;
    letter-spacing: 3px;
  }

  .subtitle-8k {
    font-size: 1.5rem;
    text-transform: uppercase;
    margin-bottom: 15px;
    color: #eee;
  }

  .desc-8k {
    font-size: 1.1rem;
    color: #aaa;
    max-width: 500px;
    margin-bottom: 40px;
  }

  .btn-8k {
    display: inline-block;
    font-family: 'ethnocentric', sans-serif;
    padding: 20px 40px;
    border: 1px solid {{ section.settings.accent_color }};
    color: #fff;
    text-decoration: none;
    font-size: 0.8rem;
    transition: 0.4s;
    box-shadow: 0 0 15px {{ section.settings.accent_color }}44;
  }

  .btn-8k:hover {
    background: {{ section.settings.accent_color }};
    color: #000;
    box-shadow: 0 0 30px {{ section.settings.accent_color }};
  }

  .slogan-8k {
    margin-top: 40px;
    font-style: italic;
    opacity: 0.6;
  }

  .slogan-8k span { color: {{ section.settings.accent_color }}; }

  .hero-8k-visual { position: relative; text-align: center; }
  
  .img-8k {
    width: 100%;
    max-width: 500px;
    animation: float 5s ease-in-out infinite;
    filter: drop-shadow(0 0 30px {{ section.settings.accent_color }}33);
  }

  .scan-line {
    position: absolute;
    top: 0; left: 10%; width: 80%; height: 2px;
    background: {{ section.settings.accent_color }};
    box-shadow: 0 0 15px {{ section.settings.accent_color }};
    animation: scan 4s linear infinite;
    opacity: 0.5;
  }

  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-20px); }
  }

  @keyframes scan {
    0% { top: 0%; }
    100% { top: 100%; }
  }

  @media (max-width: 768px) {
    .hero-8k-container { grid-template-columns: 1fr; text-align: center; }
    .desc-8k { margin: 0 auto 30px; }
  }
</style>

{% schema %}
{
  "name": "Hero 8K Futurista",
  "settings": [
    { "type": "color", "id": "accent_color", "label": "Color Neón", "default": "#00f2ff" },
    { "type": "text", "id": "badge", "label": "Tag Superior", "default": "PREMIUM TECH" },
    { "type": "text", "id": "title_main", "label": "Título", "default": "Relojes Smartwatch" },
    { "type": "text", "id": "subtitle", "label": "Subtítulo", "default": "Tecnología Premium para tu Estilo" },
    { "type": "textarea", "id": "description", "label": "Descripción", "default": "Descubre smartwatches diseñados para tu día a día: pantallas AMOLED, batería de larga duración, llamadas Bluetooth y monitoreo de salud 24/7." },
    { "type": "text", "id": "button_label", "label": "Texto Botón", "default": "COMPRAR AHORA" },
    { "type": "url", "id": "button_link", "label": "Link Botón" },
    { "type": "text", "id": "slogan", "label": "Eslogan", "default": "Tu estilo, tu reloj inteligente." },
    { "type": "image_picker", "id": "product_image", "label": "Imagen del Producto" }
  ],
  "presets": [{ "name": "Hero 8K Futurista" }]
}
{% endschema %}