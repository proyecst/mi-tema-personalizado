<section class="hero-smart-v2" style="background: {{ section.settings.bg_color }}; color: {{ section.settings.txt_color }};">
  <div class="hero-wrapper-v2">
    
    <div class="hero-content-v2">
      <h1 class="hero-title-v2">
        {{ section.settings.title_main }}
      </h1>
      
      <h2 class="hero-subtitle-v2">
        {{ section.settings.subtitle }}
      </h2>
      
      <p class="hero-desc-v2">
        {{ section.settings.description }}
      </p>

      <div class="hero-actions-v2">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'button' %}
              {% if block.settings.btn_link != blank %}
                <a href="{{ block.settings.btn_link }}" 
                   class="hero-btn-v2 {% if block.settings.style == 'primary' %}main-btn{% else %}secondary-btn{% endif %}" 
                   {{ block.shopify_attributes }}>
                  {{ block.settings.btn_label }}
                </a>
              {% endif %}
          {% endcase %}
        {% endfor %}
      </div>
      
      <p class="hero-slogan-v2">
        {{ section.settings.slogan }}
      </p>
    </div>

    <div class="hero-image-v2">
      {% if section.settings.image != blank %}
        <img src="{{ section.settings.image | image_url: width: 800 }}" alt="Smartwatch">
      {% else %}
        {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
      {% endif %}
    </div>

  </div>
</section>

<style>
  @font-face {
    font-family: 'Ethnocentric';
    src: url('https://db.onlinewebfonts.com/t/625330384ef8f0607921389809635532.woff2') format('woff2');
  }

  .hero-smart-v2 {
    padding: 60px 5%;
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 600px;
    overflow: hidden;
  }
  .hero-wrapper-v2 {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 40px;
  }

  .hero-title-v2 {
    font-family: 'Ethnocentric', sans-serif;
    font-size: clamp(1.8rem, 4vw, 3.5rem);
    line-height: 1.1;
    margin-bottom: 20px;
    text-transform: uppercase;
    /* Efecto modificado a escala de grises y blanco */
    background: linear-gradient(90deg, #888888, #ffffff, #888888);
    background-size: 200% auto;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    animation: shineNeonV2 3s linear infinite;
  }

  @keyframes shineNeonV2 {
    to { background-position: 200% center; }
  }

  .hero-subtitle-v2 {
    font-size: 1.4rem;
    /* Cambiado de azul a gris claro */
    color: #cccccc; 
    margin-bottom: 15px;
    font-weight: 700;
  }

  .hero-desc-v2 { font-size: 1.1rem; margin-bottom: 30px; opacity: 0.8; }

  .hero-actions-v2 {
    display: flex;
    gap: 15px;
    flex-wrap: wrap;
    margin-bottom: 30px;
  }

  .hero-btn-v2 {
    display: inline-block;
    padding: 15px 35px;
    border-radius: 4px;
    text-decoration: none;
    font-weight: bold;
    text-transform: uppercase;
    transition: 0.3s ease;
    font-size: 0.9rem;
    text-align: center;
  }

  .main-btn {
    /* El botón mantiene su lógica de color neón del panel, o puedes cambiarlo a gris en el panel de Shopify */
    background-color: {{ section.settings.accent_color }};
    color: #000;
    border: 2px solid {{ section.settings.accent_color }};
  }

  .secondary-btn {
    background-color: transparent;
    color: #fff;
    border: 2px solid #fff;
  }

  .hero-btn-v2:hover {
    transform: translateY(-3px);
    box-shadow: 0 0 20px {{ section.settings.accent_color }};
  }

  .hero-slogan-v2 {
    margin-top: 25px;
    font-style: italic;
    /* Borde cambiado a gris */
    border-left: 3px solid #888888; 
    padding-left: 15px;
    color: #cccccc;
  }

  .hero-image-v2 img {
    max-width: 100%;
    height: auto;
    filter: drop-shadow(0 0 25px {{ section.settings.accent_color }}44);
  }

  @media (max-width: 768px) {
    .hero-wrapper-v2 { flex-direction: column; text-align: center; }
    .hero-actions-v2 { justify-content: center; }
    .hero-slogan-v2 { border-left: none; padding-left: 0; }
  }
</style>

{% schema %}
{
  "name": "A-Hero Futurista",
  "settings": [
    { "type": "color", "id": "bg_color", "label": "Fondo", "default": "#000000" },
    { "type": "color", "id": "txt_color", "label": "Texto", "default": "#ffffff" },
    { "type": "color", "id": "accent_color", "label": "Color Neon Botón", "default": "#00f2ff" },
    { "type": "text", "id": "title_main", "label": "Titulo", "default": "Relojes Smartwatch" },
    { "type": "text", "id": "subtitle", "label": "Subtitulo", "default": "Tecnología Premium" },
    { "type": "textarea", "id": "description", "label": "Info", "default": "Pantallas AMOLED de alta resolución." },
    { "type": "text", "id": "slogan", "label": "Eslogan", "default": "Tu estilo, tu reloj." },
    { "type": "image_picker", "id": "image", "label": "Imagen" }
  ],
  "blocks": [
    {
      "type": "button",
      "name": "Botón",
      "settings": [
        { "type": "text", "id": "btn_label", "label": "Texto del Botón", "default": "VER MÁS" },
        { "type": "url", "id": "btn_link", "label": "Enlace" },
        {
          "type": "select",
          "id": "style",
          "label": "Estilo",
          "options": [
            { "value": "primary", "label": "Color Neón" },
            { "value": "secondary", "label": "Borde Blanco" }
          ],
          "default": "primary"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "A-Hero Futurista",
      "blocks": [
        { "type": "button", "settings": { "btn_label": "COMPRAR", "style": "primary" } },
        { "type": "button", "settings": { "btn_label": "VER MÁS", "style": "secondary" } }
      ]
    }
  ]
}
{% endschema %}