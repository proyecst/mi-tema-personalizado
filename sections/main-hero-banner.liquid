<section class="hero-smart-v" style="background: {{ section.settings.background_color }}; color: {{ section.settings.text_color }};">
  <div class="hero-container-v">
    
    <div class="hero-content-v">
      <h1 class="hero-title-animado">
        {{ section.settings.title_main }}
      </h1>
      
      <h2 class="hero-subtitle-v">
        {{ section.settings.subtitle }}
      </h2>
      
      <p class="hero-desc-v">
        {{ section.settings.description }}
      </p>

      <div class="hero-actions-v">
        {% if section.settings.button_link != blank %}
          <a href="{{ section.settings.button_link }}" class="hero-btn-v">
            {{ section.settings.button_label }}
          </a>
        {% endif %}
      </div>
      
      <p class="hero-slogan-v">
        {{ section.settings.slogan }}
      </p>
    </div>

    <div class="hero-image-v">
      {% if section.settings.product_image != blank %}
        <img src="{{ section.settings.product_image | image_url: width: 800 }}" alt="Smartwatch">
      {% else %}
        {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
      {% endif %}
    </div>

  </div>
</section>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Orbitron:wght@900&display=swap');

  .hero-smart-v {
    padding: 80px 5%;
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 600px;
    overflow: hidden;
  }
  .hero-container-v {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 50px;
  }
  .hero-content-v {
    flex: 1;
    min-width: 320px;
  }

  /* EFECTO FUTURISTA ANIMADO */
  .hero-title-animado {
    font-family: 'Orbitron', sans-serif;
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 900;
    line-height: 1.1;
    margin-bottom: 20px;
    text-transform: uppercase;
    background: linear-gradient(90deg, #ffffff, {{ section.settings.accent_color }}, #ffffff);
    background-size: 200% auto;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    animation: shine-text 3s linear infinite;
  }

  @keyframes shine-text {
    to { background-position: 200% center; }
  }

  .hero-subtitle-v {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 20px;
    color: {{ section.settings.accent_color }};
  }
  .hero-desc-v {
    font-size: 1.1rem;
    line-height: 1.6;
    margin-bottom: 30px;
    opacity: 0.9;
  }
  .hero-btn-v {
    display: inline-block;
    background-color: {{ section.settings.accent_color }};
    color: #fff;
    padding: 15px 40px;
    border-radius: 5px;
    text-decoration: none;
    font-weight: bold;
    transition: all 0.3s ease;
    text-transform: uppercase;
  }
  .hero-btn-v:hover {
    transform: scale(1.05);
    box-shadow: 0 0 20px {{ section.settings.accent_color }};
  }
  .hero-slogan-v {
    margin-top: 25px;
    font-style: italic;
    border-left: 3px solid {{ section.settings.accent_color }};
    padding-left: 15px;
  }
  .hero-image-v {
    flex: 1;
    min-width: 320px;
    text-align: center;
  }
  .hero-image-v img {
    max-width: 100%;
    height: auto;
    filter: drop-shadow(0 0 30px {{ section.settings.accent_color }}55);
  }
  @media (max-width: 768px) {
    .hero-container-v { flex-direction: column; text-align: center; }
    .hero-slogan-v { border-left: none; }
  }
</style>

{% schema %}
{
  "name": "Hero Premium Animado",
  "settings": [
    { "type": "color", "id": "background_color", "label": "Fondo", "default": "#000000" },
    { "type": "color", "id": "text_color", "label": "Texto", "default": "#ffffff" },
    { "type": "color", "id": "accent_color", "label": "Acento", "default": "#00f2ff" },
    { "type": "text", "id": "title_main", "label": "Titulo", "default": "Smartwatches" },
    { "type": "text", "id": "subtitle", "label": "Subtitulo", "default": "Tecnologia Premium" },
    { "type": "textarea", "id": "description", "label": "Info", "default": "Pantallas AMOLED y monitoreo de salud 24/7." },
    { "type": "text", "id": "slogan", "label": "Eslogan", "default": "Tu estilo, tu reloj." },
    { "type": "text", "id": "button_label", "label": "Boton", "default": "Ver Coleccion" },
    { "type": "url", "id": "button_link", "label": "Link" },
    { "type": "image_picker", "id": "product_image", "label": "Imagen" }
  ],
  "presets": [
    { "name": "Hero Premium Animado" }
  ]
}
{% endschema %}