{%- style -%}
  .hero-id-{{ section.id }} {
    position: relative;
    width: 100%;
    height: {{ section.settings.height_desktop }}vh;
    background-color: #000;
    display: flex;
    align-items: center;
    overflow: hidden;
    color: #fff;
  }

  /* Fondo con sutil textura técnica (Lineas de circuito/grid) */
  .hero-id-{{ section.id }}::before {
    content: '';
    position: absolute;
    top: 0; left: 0; width: 100%; height: 100%;
    background-image: radial-gradient(circle at 2px 2px, #1a1a1a 1px, transparent 0);
    background-size: 40px 40px;
    opacity: 0.5;
    z-index: 1;
  }

  .hero-id-container {
    width: 100%;
    max-width: 1300px;
    margin: 0 auto;
    padding: 0 40px;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
    position: relative;
    z-index: 2;
  }

  .hero-id-content {
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .brand-badge {
    color: {{ section.settings.accent_color }};
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 4px;
    margin-bottom: 10px;
    font-size: 0.9rem;
    display: block;
    animation: slideRight 0.8s ease-out;
  }

  .hero-id-title {
    font-size: clamp(3.5rem, 7vw, 6rem);
    font-weight: 900;
    line-height: 0.85;
    margin: 0;
    text-transform: uppercase;
    color: #ffffff;
    letter-spacing: -2px;
  }

  .hero-id-subtitle {
    margin: 25px 0;
    font-size: 1.2rem;
    line-height: 1.5;
    color: #cccccc;
    max-width: 480px;
    border-left: 3px solid {{ section.settings.accent_color }};
    padding-left: 20px;
  }

  .hero-id-image img {
    width: 100%;
    height: auto;
    object-fit: contain;
    filter: drop-shadow(0 20px 50px rgba(230, 46, 4, 0.2));
    animation: heroFloat 5s ease-in-out infinite;
  }

  .hero-id-btn {
    background: {{ section.settings.accent_color }};
    color: #fff;
    padding: 20px 50px;
    text-decoration: none;
    font-weight: 800;
    text-transform: uppercase;
    display: inline-block;
    width: fit-content;
    transition: 0.3s;
    border: none;
  }

  .hero-id-btn:hover {
    background: #fff;
    color: #000;
    transform: translateY(-5px);
  }

  @keyframes heroFloat {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-15px); }
  }

  @keyframes slideRight {
    from { opacity: 0; transform: translateX(-50px); }
    to { opacity: 1; transform: translateX(0); }
  }

  @media screen and (max-width: 990px) {
    .hero-id-container { grid-template-columns: 1fr; text-align: center; }
    .hero-id-image { order: -1; }
    .hero-id-subtitle { margin: 25px auto; text-align: left; }
    .hero-id-btn { margin: 0 auto; }
  }
{%- endstyle -%}

<section class="hero-id-{{ section.id }}">
  
<div class="ks-hero-img-area">
  {%- if section.settings.image != blank -%}
    {{ section.settings.image | image_url: width: 1200 | image_tag: 
      loading: 'eager', 
      alt: section.settings.title,
      class: 'hero-image-render'
    }}
  {%- else -%}
    {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg-kieslect' }}
  {%- endif -%}
</div>
</section>

{% schema %}
{
  "name": "Banner Identidad Kieslect",
  "settings": [
    { "type": "image_picker", "id": "image", "label": "Imagen del Reloj (PNG transparente)" },
    { "type": "text", "id": "title", "label": "Título", "default": "KIESLECT KS3" },
    { "type": "textarea", "id": "subtitle", "label": "Subtítulo", "default": "Tecnología de Doble Núcleo y Pantalla AMOLED Pro." },
    { "type": "text", "id": "btn_text", "label": "Texto Botón", "default": "Explorar Serie" },
    { "type": "url", "id": "link", "label": "Link Botón" },
    { "type": "color", "id": "accent_color", "label": "Color de Marca (Naranja)", "default": "#e62e04" },
    { "type": "range", "id": "height_desktop", "min": 60, "max": 100, "step": 5, "unit": "vh", "label": "Altura Banner", "default": 85 }
  ],
  "presets": [
    { "name": "Banner Identidad Kieslect" }
  ]
}
{% endschema %}