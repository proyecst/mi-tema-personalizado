{% comment %}
  KIESELECT TECH - MINIFICADO Y CORREGIDO
{% endcomment %}
<div class="ks-tech" id="ks-{{section.id}}"><div class="ks-cont"><div class="ks-wrap"><div class="ks-col-txt"><div class="ks-head"><h2 class="ks-tit">⭐ {{section.settings.title_es}}</h2><p class="ks-sub">{{section.settings.title_en}}</p><div class="ks-line"></div></div><div class="ks-list">{%for block in section.blocks%}<div class="ks-row" {{block.shopify_attributes}}><div class="ks-mark"><div class="ks-dot"></div></div><div class="ks-body"><p class="ks-txt">{{block.settings.text}}</p>{%if block.settings.link != blank%}<a href="{{block.settings.link}}" class="ks-lnk">CONNECTING...</a>{%endif%}</div></div>{%endfor%}</div></div><div class="ks-col-img"><div class="ks-frame">{%if section.settings.side_image != blank%}{{section.settings.side_image|image_url:width:800|image_tag:class:'ks-img',loading:'lazy'}}{%else%}<div class="ks-ph"><span>TECH_01</span></div>{%endif%}<div class="ks-scan"></div><div class="ks-c c1"></div><div class="ks-c c2"></div></div></div></div></div></div>
<style>
@import url('https://fonts.googleapis.com/css2?family=Orbitron:wght@700&family=Rajdhani:wght@500;700&display=swap');
.ks-tech{background:#03070d;color:#fff;padding:60px 0;font-family:'Rajdhani',sans-serif;overflow:hidden}
.ks-cont{max-width:1100px;margin:0 auto;padding:0 20px}
.ks-wrap{display:flex;align-items:center;gap:30px;background:rgba(0,242,255,.02);border:1px solid rgba(0,242,255,.1);padding:30px;border-radius:4px}
.ks-col-txt{flex:1.2}.ks-tit{font-family:'Orbitron',sans-serif;color:#00f2ff;font-size:22px;margin:0;text-shadow:0 0 10px rgba(0,242,255,.5)}
.ks-sub{font-family:'Orbitron',sans-serif;font-size:10px;color:rgba(0,242,255,.5);margin:5px 0 15px;letter-spacing:2px}
.ks-line{height:2px;width:80px;background:linear-gradient(90deg,#00f2ff,transparent);margin-bottom:20px}
.ks-list{display:flex;flex-direction:column;gap:15px}
.ks-row{display:flex;gap:12px;padding:8px;border-bottom:1px solid rgba(0,242,255,.05);transition:.3s}
.ks-row:hover{background:rgba(0,242,255,.05);transform:translateX(8px)}
.ks-dot{width:7px;height:7px;background:#00f2ff;box-shadow:0 0 8px #00f2ff;transform:rotate(45deg);margin-top:6px}
.ks-txt{font-size:16px;margin:0}.ks-lnk{font-size:9px;color:#00f2ff;text-decoration:none;letter-spacing:1px;display:block}
.ks-col-img{flex:.8}.ks-frame{position:relative;border:1px solid rgba(0,242,255,.2);background:#000;padding:8px}
.ks-img{width:100%;height:auto;display:block;filter:drop-shadow(0 0 10px rgba(0,242,255,.1))}
.ks-scan{position:absolute;top:0;left:0;right:0;height:2px;background:#00f2ff;box-shadow:0 0 8px #00f2ff;animation:scan 3s linear infinite}
.ks-c{position:absolute;width:12px;height:12px;border:2px solid #00f2ff}
.c1{top:-2px;right:-2px;border-left:0;border-bottom:0}.c2{bottom:-2px;left:-2px;border-right:0;border-top:0}
@keyframes scan{0%{top:0}100%{top:100%}}
@media(max-width:768px){.ks-wrap{flex-direction:column}.ks-col-img{width:100%}}
</style>
{% schema %}
{
  "name": "Kieselect - Tech Min",
  "settings": [
    {"type":"text","id":"title_es","label":"Título ES","default":"POR QUÉ ELEGIR KIESELECT"},
    {"type":"text","id":"title_en","label":"Título EN","default":"WHY CHOOSE KIESELECT"},
    {"type":"image_picker","id":"side_image","label":"Imagen"}
  ],
  "blocks": [
    {
      "type": "benefit",
      "name": "Item",
      "settings": [
        {"type":"text","id":"text","label":"Texto","default":"Beneficio Kieselect"},
        {"type":"url","id":"link","label":"Link"}
      ]
    }
  ],
  "presets": [
    {
      "name": "Kieselect - Tech Min",
      "blocks": [
        { "type": "benefit" },
        { "type": "benefit" },
        { "type": "benefit" }
      ]
    }
  ]
}
{% endschema %}