<div class="ks-tech" id="ks-{{ section.id }}">
  <div class="ks-cont">
    <div class="ks-wrap">
      <div class="ks-col-txt">
        <div class="ks-head">
          <h2 class="ks-tit">⭐ {{ section.settings.title_es }}</h2>
          <p class="ks-sub">{{ section.settings.title_en }}</p>
          <div class="ks-line"></div>
        </div>
        <div class="ks-list">
          {% for block in section.blocks %}
            <div class="ks-row" {{ block.shopify_attributes }}>
              <div class="ks-mark"><div class="ks-dot"></div></div>
              <div class="ks-body">
                <p class="ks-txt">{{ block.settings.text }}</p>
                <div class="ks-actions">
                  {% if block.settings.link != blank %}
                    <a href="{{ block.settings.link }}" class="ks-lnk">URL</a>
                  {% endif %}
                  {% if block.settings.document != blank %}
                    <a href="{{ block.settings.document | image_url }}" class="ks-download" download>
                      <span class="ks-blink">_</span>FILE
                    </a>
                  {% endif %}
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
      <div class="ks-col-img">
        <div class="ks-frame">
          {% if section.settings.side_image != blank %}
            {{ section.settings.side_image | image_url: width: 600 | image_tag: class: 'ks-img', loading: 'lazy' }}
          {% else %}
            <div class="ks-ph"><span class="ks-glitch-text">DATA_STREAM</span></div>
          {% endif %}
          <div class="ks-scan"></div>
          <div class="ks-c c-tl"></div>
          <div class="ks-c c-br"></div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
@import url('https://fonts.googleapis.com/css2?family=Orbitron:wght@700&family=Rajdhani:wght@500;700&display=swap');
.ks-tech{background:#03070d;color:#fff;padding:40px 0;font-family:'Rajdhani',sans-serif;overflow:hidden}.ks-cont{max-width:1000px;margin:0 auto;padding:0 20px}.ks-wrap{display:flex;align-items:center;gap:30px;background:rgba(0,242,255,.02);border:1px solid rgba(0,242,255,.1);padding:30px;border-radius:4px;position:relative}.ks-col-txt{flex:1.2}.ks-tit{font-family:'Orbitron',sans-serif;color:#00f2ff;font-size:20px;margin:0;text-shadow:0 0 10px rgba(0,242,255,.5)}.ks-sub{font-family:'Orbitron',sans-serif;font-size:9px;color:rgba(0,242,255,.4);margin:2px 0 10px;letter-spacing:2px}.ks-line{height:2px;width:60px;background:linear-gradient(90deg,#00f2ff,transparent);margin-bottom:20px}.ks-list{display:flex;flex-direction:column;gap:12px}.ks-row{display:flex;gap:12px;padding:10px;border-bottom:1px solid rgba(0,242,255,.05);transition:.3s}.ks-row:hover{background:rgba(0,242,255,.08);transform:translateX(5px);border-bottom:1px solid #00f2ff}.ks-dot{width:7px;height:7px;background:#00f2ff;box-shadow:0 0 8px #00f2ff;transform:rotate(45deg);margin-top:6px}.ks-txt{font-size:15px;margin:0;font-weight:600;text-transform:uppercase}.ks-actions{display:flex;gap:12px;margin-top:8px}.ks-lnk,.ks-download{font-size:9px;color:#00f2ff;text-decoration:none;letter-spacing:1px;font-family:'Orbitron';text-transform:uppercase}.ks-download{background:rgba(0,242,255,.1);padding:3px 8px;border:1px solid #00f2ff;display:flex;align-items:center;gap:4px}.ks-download:hover{background:#00f2ff;color:#000}.ks-blink{animation:b .8s infinite}@keyframes b{0%,100%{opacity:1}50%{opacity:0}}.ks-col-img{flex:.8}.ks-frame{position:relative;border:1px solid rgba(0,242,255,.2);background:#000;padding:8px}.ks-img{width:100%;height:auto;display:block}.ks-ph{height:220px;background:#050b15;display:flex;align-items:center;justify-content:center;border:1px dashed rgba(0,242,255,.3)}.ks-glitch-text{font-family:'Orbitron';color:#00f2ff;font-size:10px}.ks-scan{position:absolute;top:0;left:0;right:0;height:2px;background:#00f2ff;box-shadow:0 0 10px #00f2ff;animation:s 4s linear infinite;z-index:2}.ks-c{position:absolute;width:12px;height:12px;border:2px solid #00f2ff}.c-tl{top:-2px;left:-2px;border-right:0;border-bottom:0}.c-br{bottom:-2px;right:-2px;border-left:0;border-top:0}@keyframes s{0%{top:0}100%{top:100%}}@media(max-width:768px){.ks-wrap{flex-direction:column;padding:20px}.ks-col-img{width:100%}}
</style>

{% schema %}
{
  "name": "Kieselect - Tech Final",
  "settings": [
    {
      "type": "text",
      "id": "title_es",
      "label": "Título ES",
      "default": "POR QUÉ ELEGIR KIESELECT"
    },
    {
      "type": "text",
      "id": "title_en",
      "label": "Título EN",
      "default": "WHY CHOOSE KIESELECT"
    },
    {
      "type": "image_picker",
      "id": "side_image",
      "label": "Imagen Lateral"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Item",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Texto",
          "default": "Archivo de Sistema"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Enlace URL"
        },
        {
          "type": "image_picker",
          "id": "document",
          "label": "Archivo (Sube aquí tu PDF/Imagen)"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Kieselect - Tech Final",
      "blocks": [
        { "type": "feature" },
        { "type": "feature" }
      ]
    }
  ]
}
{% endschema %}