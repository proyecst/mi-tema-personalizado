{%- style -%}
  :root {
    --k-blue: #00D1FF;
    --k-black: #000000;
    --k-dark-grey: #111111;
  }

  /* Bot√≥n Flotante */
  .k-chat-launcher {
    position: fixed;
    bottom: 30px;
    right: 30px;
    width: 60px;
    height: 60px;
    background-color: var(--k-black);
    border: 2px solid var(--k-blue);
    border-radius: 50%;
    cursor: pointer;
    box-shadow: 0 0 20px rgba(0, 209, 255, 0.3);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 10000;
    transition: transform 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  }
  
  .k-chat-launcher:hover { transform: scale(1.1); }
  .k-chat-launcher svg { width: 28px; height: 28px; fill: var(--k-blue); }

  /* Ventana de Ayuda */
  .k-help-window {
    position: fixed;
    bottom: 100px;
    right: 30px;
    width: 340px;
    background: var(--k-black);
    border: 1px solid #333;
    border-radius: 16px;
    box-shadow: 0 10px 40px rgba(0,0,0,0.6);
    display: none;
    flex-direction: column;
    overflow: hidden;
    z-index: 10000;
    font-family: 'Inter', sans-serif;
  }

  .k-help-window.active { display: flex; animation: k-slide 0.3s ease-out; }

  @keyframes k-slide {
    from { transform: translateY(30px); opacity: 0; }
    to { transform: translateY(0); opacity: 1; }
  }

  .k-help-header {
    background: var(--k-blue);
    color: var(--k-black);
    padding: 20px;
    position: relative;
  }

  .k-help-header h4 { margin: 0; font-size: 1rem; font-weight: 900; text-transform: uppercase; }
  .k-help-header p { margin: 3px 0 0; font-size: 0.75rem; font-weight: 600; }

  .k-help-body {
    padding: 15px;
    background: var(--k-black);
  }

  .k-msg-intro {
    color: #eee;
    font-size: 0.9rem;
    margin-bottom: 20px;
    line-height: 1.4;
    padding: 10px;
    background: var(--k-dark-grey);
    border-radius: 8px;
  }

  /* Botones de Opciones */
  .k-help-options {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  .k-help-btn {
    background: var(--k-dark-grey);
    border: 1px solid #333;
    color: var(--k-blue);
    padding: 12px 15px;
    border-radius: 8px;
    text-align: left;
    font-size: 0.85rem;
    cursor: pointer;
    text-decoration: none;
    transition: all 0.2s;
    font-weight: 700;
    text-transform: uppercase;
  }

  .k-help-btn:hover {
    background: var(--k-blue);
    color: var(--k-black);
    border-color: var(--k-blue);
  }

  .k-close {
    position: absolute;
    top: 15px;
    right: 15px;
    cursor: pointer;
    font-size: 22px;
    color: var(--k-black);
  }

  /* Vista de informaci√≥n r√°pida */
  #k-info-view {
    display: none;
    color: #fff;
    font-size: 0.85rem;
    animation: k-fade 0.3s;
  }

  @keyframes k-fade { from { opacity: 0; } to { opacity: 1; } }

  .k-back-btn {
    background: none;
    border: none;
    color: var(--k-blue);
    font-weight: 800;
    cursor: pointer;
    padding: 0;
    margin-bottom: 10px;
    font-size: 0.7rem;
  }
{%- endstyle -%}

