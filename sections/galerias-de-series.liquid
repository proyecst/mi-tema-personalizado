<section class="galeria-series-custom" style="background-color: #ffffff;">
  {% if section.settings.title != blank %}
    <h2 class="titulo-galeria">{{ section.settings.title }}</h2>
  {% endif %}

  <div class="grid-series">
    {% for block in section.blocks %}
      <div class="tarjeta-serie" {{ block.shopify_attributes }}>
        <div class="imagen-contenedor">
          {% if block.settings.image != blank %}
            <img src="{{ block.settings.image | image_url: width: 800 }}" alt="{{ block.settings.title }}">
          {% else %}
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg-custom' }}
          {% endif %}
        </div>
        
        <div class="texto-contenedor">
          <h3>{{ block.settings.title }}</h3>
          <div class="descripcion-corta">{{ block.settings.desc }}</div>
          {% if block.settings.id_link != blank %}
             <a href="{{ block.settings.id_link }}" class="boton-serie">Ver más</a>
          {% endif %}
        </div>
      </div>
    {% endfor %}
  </div>
</section>

<style>
  /* FONDO GENERAL EN BLANCO */
  .galeria-series-custom { 
    padding: 50px 20px; 
    max-width: 1400px; 
    margin: 0 auto; 
    text-align: center; 
    color: #000; /* Texto negro */
    background-color: #ffffff !important;
  }

  .titulo-galeria { 
    font-size: 2.5rem; 
    margin-bottom: 40px; 
    color: #000; 
    font-family: 'Ethnocentric', sans-serif; /* Mantenemos tu estilo de marca */
  }

  .grid-series { 
    display: grid; 
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); 
    gap: 25px; 
  }

  /* TARJETAS EN BLANCO */
  .tarjeta-serie { 
    border: 1px solid #eeeeee; 
    border-radius: 10px; 
    overflow: hidden; 
    background: #ffffff; /* Fondo blanco */
    box-shadow: 0 4px 15px rgba(0,0,0,0.05); /* Sombra suave para que resalte del fondo */
    transition: transform 0.3s ease;
  }

  .tarjeta-serie:hover {
    transform: translateY(-5px);
  }

  .imagen-contenedor img, .placeholder-svg-custom { 
    width: 100%; 
    height: 350px; 
    object-fit: cover; 
    display: block;
    background: #f9f9f9;
  }

  .texto-contenedor { padding: 25px; text-align: left; background: #ffffff; }
  
  .texto-contenedor h3 { 
    margin: 0 0 10px 0; 
    font-size: 1.5rem; 
    color: #000; 
    font-family: 'Ethnocentric', sans-serif;
    font-size: 14px;
  }

  .descripcion-corta, .descripcion-corta p { 
    margin-bottom: 20px; 
    color: #444; /* Gris oscuro para lectura */
    font-size: 13px;
    line-height: 1.5;
  }

  .boton-serie { 
    text-decoration: underline; 
    font-weight: bold; 
    color: #000; 
    font-size: 12px;
    text-transform: uppercase;
  }

  .boton-serie:hover {
    color: #ff0000; /* Rojo de tu marca Kieslect */
  }
</style>

{% schema %}
{
  "name": "Galería de Series Blanco",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Título de la Sección",
      "default": "Nuestras Series"
    }
  ],
  "blocks": [
    {
      "type": "bloque_serie",
      "name": "Serie",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Imagen de la Serie"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Título",
          "default": "Nombre de la Serie"
        },
        {
          "type": "richtext",
          "id": "desc",
          "label": "Descripción",
          "default": "<p>Agrega un resumen aquí.</p>"
        },
        {
          "type": "url",
          "id": "id_link",
          "label": "Enlace"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Galería de Series Blanco",
      "blocks": [
        { "type": "bloque_serie" },
        { "type": "bloque_serie" },
        { "type": "bloque_serie" }
      ]
    }
  ]
}
{% endschema %}