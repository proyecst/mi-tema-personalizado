<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@500;700&family=Rajdhani:wght@400;600&display=swap" rel="stylesheet">

<section class="k-gallery" id="section-{{ section.id }}">
  {% if section.settings.title != blank %}
    <h2 class="k-title">{{ section.settings.title }}</h2>
  {% endif %}

  <div class="k-grid">
    {% for block in section.blocks %}
      <article class="k-card" {{ block.shopify_attributes }}>
        <div class="k-img-wrapper">
          {% if block.settings.image != blank %}
            <img 
              src="{{ block.settings.image | image_url: width: 700 }}" 
              alt="{{ block.settings.title | escape }}"
              loading="lazy"
              width="700"
              height="auto">
          {% else %}
            {{ 'image' | placeholder_svg_tag: 'k-placeholder' }}
          {% endif %}
        </div>
        
        <div class="k-info">
          <h3 class="k-card-title">{{ block.settings.title }}</h3>
          <div class="k-card-desc">{{ block.settings.desc }}</div>
          
          {% if block.settings.id_link != blank %}
             <a href="{{ block.settings.id_link }}" class="k-cta">
               EXPLORAR
               <span class="k-line"></span>
             </a>
          {% endif %}
        </div>
      </article>
    {% endfor %}
  </div>
</section>

<style>
  /* Variables para fácil mantenimiento */
  :root {
    --k-font-main: 'Orbitron', sans-serif;
    --k-font-body: 'Rajdhani', sans-serif;
    --k-accent: #ff0000;
    --k-text: #000000;
    --k-bg: #ffffff;
  }

  .k-gallery {
    padding: 4rem 1.5rem;
    max-width: 1400px;
    margin: 0 auto;
    background: var(--k-bg);
  }

  .k-title {
    font-family: var(--k-font-main);
    font-size: clamp(1.5rem, 5vw, 2.2rem);
    text-align: center;
    text-transform: uppercase;
    letter-spacing: 0.3em;
    margin-bottom: 3rem;
    color: var(--k-text);
  }

  .k-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .k-card {
    background: var(--k-bg);
    border: 1px solid #eee;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .k-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 15px 30px rgba(0,0,0,0.08);
    border-color: var(--k-text);
  }

  .k-img-wrapper {
    aspect-ratio: 3/4;
    overflow: hidden;
    background: #f9f9f9;
  }

  .k-img-wrapper img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .k-card:hover .k-img-wrapper img {
    transform: scale(1.05);
  }

  .k-info {
    padding: 2rem;
  }

  .k-card-title {
    font-family: var(--k-font-main);
    font-size: 1.1rem;
    margin: 0 0 1rem 0;
    letter-spacing: 1px;
  }

  .k-card-desc {
    font-family: var(--k-font-body);
    font-size: 1rem;
    color: #555;
    line-height: 1.5;
    margin-bottom: 1.5rem;
  }

  .k-cta {
    display: inline-flex;
    flex-direction: column;
    font-family: var(--k-font-main);
    font-size: 0.75rem;
    font-weight: 700;
    text-decoration: none;
    color: var(--k-text);
    letter-spacing: 2px;
  }

  .k-line {
    width: 30%;
    height: 2px;
    background: var(--k-accent);
    margin-top: 4px;
    transition: width 0.3s ease;
  }

  .k-cta:hover .k-line {
    width: 100%;
  }

  .k-placeholder {
    width: 100%;
    height: 100%;
    fill: #ddd;
  }
</style>

{% schema %}
{
  "name": "Galería Futurista Pro",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Título",
      "default": "SERIES KIESLECT"
    }
  ],
  "blocks": [
    {
      "type": "bloque_serie",
      "name": "Serie",
      "settings": [
        { "type": "image_picker", "id": "image", "label": "Imagen" },
        { "type": "text", "id": "title", "label": "Título", "default": "K-SERIES" },
        { "type": "richtext", "id": "desc", "label": "Descripción", "default": "<p>Tecnología de última generación.</p>" },
        { "type": "url", "id": "id_link", "label": "Enlace" }
      ]
    }
  ],
  "presets": [
    { "name": "Galería Futurista Pro" }
  ]
}
{% endschema %}