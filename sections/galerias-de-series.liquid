<link href="https://fonts.googleapis.com/css2?family=Syncopate:wght@400;700&display=swap" rel="stylesheet">

<section class="k-galeria-futurista">
  {% if section.settings.title != blank %}
    <h2 class="k-titulo-principal">{{ section.settings.title }}</h2>
  {% endif %}

  <div class="k-grid-container">
    {% for block in section.blocks %}
      <div class="k-tarjeta" {{ block.shopify_attributes }}>
        
        <div class="k-imagen-box">
          {% if block.settings.image != blank %}
            <img src="{{ block.settings.image | image_url: width: 800 }}" alt="{{ block.settings.title }}" loading="lazy">
          {% else %}
            {{ 'image' | placeholder_svg_tag: 'k-placeholder' }}
          {% endif %}
        </div>
        
        <div class="k-contenido">
          <h3>{{ block.settings.title }}</h3>
          <div class="k-desc">{{ block.settings.desc }}</div>
          
          {% if block.settings.id_link != blank %}
             <a href="{{ block.settings.id_link }}" class="k-boton">
               VER MÁS
               <span class="k-linea-roja"></span>
             </a>
          {% endif %}
        </div>

      </div>
    {% endfor %}
  </div>
</section>

<style>
  .k-galeria-futurista { 
    padding: 60px 20px; 
    max-width: 1400px; 
    margin: 0 auto; 
    background-color: #ffffff; 
  }

  /* TIPOGRAFÍA ESTILO ETHNOCENTRIC (SYNC OPATE) */
  .k-titulo-principal { 
    font-family: 'Syncopate', sans-serif; 
    font-weight: 700;
    font-size: 1.8rem; 
    text-align: center;
    margin-bottom: 50px; 
    color: #000; 
    text-transform: uppercase;
    letter-spacing: 5px; /* Efecto extendido */
  }

  .k-grid-container { 
    display: grid; 
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); 
    gap: 30px; 
  }

  .k-tarjeta { 
    background: #ffffff; 
    border: 1px solid #eeeeee; 
    transition: all 0.3s ease;
  }

  .k-tarjeta:hover {
    box-shadow: 0 10px 25px rgba(0,0,0,0.08);
    transform: translateY(-5px);
  }

  .k-imagen-box { 
    aspect-ratio: 1/1;
    overflow: hidden;
  }

  .k-imagen-box img { 
    width: 100%; 
    height: 100%; 
    object-fit: cover; 
    display: block;
  }

  .k-contenido { 
    padding: 25px; 
    text-align: left; 
  }

  .k-contenido h3 { 
    font-family: 'Syncopate', sans-serif;
    font-size: 14px; 
    font-weight: 700;
    color: #000; 
    margin-bottom: 12px;
    letter-spacing: 2px;
  }

  .k-desc, .k-desc p { 
    font-family: sans-serif; 
    font-size: 14px; 
    color: #666; 
    line-height: 1.5;
    margin-bottom: 20px; 
  }

  .k-boton { 
    display: inline-block;
    font-family: 'Syncopate', sans-serif;
    font-weight: 700;
    font-size: 10px;
    color: #000; 
    text-decoration: none;
    letter-spacing: 1px;
  }

  .k-linea-roja { 
    display: block;
    width: 25px;
    height: 2px;
    background: #ff0000;
    margin-top: 5px;
    transition: width 0.3s ease;
  }

  .k-boton:hover .k-linea-roja {
    width: 100%;
  }

  @media (max-width: 768px) {
    .k-titulo-principal { font-size: 1.3rem; letter-spacing: 2px; }
  }
</style>

{% schema %}
{
  "name": "Galería Futurista Auto",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Título",
      "default": "SERIES KIESLECT"
    }
  ],
  "blocks": [
    {
      "type": "bloque_serie",
      "name": "Serie",
      "settings": [
        { "type": "image_picker", "id": "image", "label": "Imagen" },
        { "type": "text", "id": "title", "label": "Título", "default": "K-SERIES" },
        { "type": "richtext", "id": "desc", "label": "Descripción" },
        { "type": "url", "id": "id_link", "label": "Enlace" }
      ]
    }
  ],
  "presets": [
    { "name": "Galería Futurista Auto" }
  ]
}
{% endschema %}