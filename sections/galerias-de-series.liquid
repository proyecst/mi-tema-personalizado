<section class="galeria-series-custom">
  {% if section.settings.title != blank %}
    <h2 class="titulo-galeria">{{ section.settings.title }}</h2>
  {% endif %}

  <div class="grid-series">
    {% for block in section.blocks %}
      <div class="tarjeta-serie" {{ block.shopify_attributes }}>
        
        <div class="imagen-contenedor">
          {% if block.settings.image != blank %}
            <img src="{{ block.settings.image | image_url: width: 800 }}" alt="{{ block.settings.title }}">
          {% else %}
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg-custom' }}
          {% endif %}
        </div>
        
        <div class="texto-contenedor">
          <h3>{{ block.settings.title }}</h3>
          <div class="descripcion-corta">{{ block.settings.desc }}</div>
          
          {% if block.settings.id_link != blank %}
             <a href="{{ block.settings.id_link }}" class="boton-serie">Ver más</a>
          {% endif %}
        </div>

      </div>
    {% endfor %}
  </div>
</section>

<style>
  .galeria-series-custom { 
    padding: 60px 20px; 
    max-width: 1400px; 
    margin: 0 auto; 
    text-align: center; 
    background-color: #ffffff !important; 
  }

  .titulo-galeria { 
    font-family: 'Ethnocentric', sans-serif; 
    font-size: 2.2rem; 
    margin-bottom: 50px; 
    color: #000000; 
    text-transform: uppercase;
    letter-spacing: 2px;
  }

  .grid-series { 
    display: grid; 
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr)); 
    gap: 30px; 
  }

  .tarjeta-serie { 
    background: #ffffff; 
    border: 1px solid #f0f0f0; 
    border-radius: 12px; 
    overflow: hidden; 
    transition: all 0.4s ease;
    box-shadow: 0 5px 15px rgba(0,0,0,0.05);
  }

  .tarjeta-serie:hover {
    transform: translateY(-10px);
    box-shadow: 0 12px 30px rgba(0,0,0,0.1);
  }

  .imagen-contenedor img { 
    width: 100%; 
    height: 400px; 
    object-fit: cover; 
    display: block;
    background-color: #f7f7f7;
  }

  .texto-contenedor { 
    padding: 30px; 
    text-align: left; 
  }

  .texto-contenedor h3 { 
    font-family: 'Ethnocentric', sans-serif;
    font-size: 16px; 
    color: #000000; 
    margin: 0 0 15px 0;
    letter-spacing: 1px;
  }

  .descripcion-corta, 
  .descripcion-corta p { 
    font-size: 14px; 
    color: #555555; 
    line-height: 1.6;
    margin-bottom: 25px; 
  }

  .boton-serie { 
    display: inline-block;
    color: #000000; 
    font-weight: bold; 
    font-size: 12px;
    text-transform: uppercase;
    text-decoration: none;
    border-bottom: 2px solid #ff0000; /* Detalle rojo Kieslect */
    padding-bottom: 4px;
    transition: 0.3s;
  }

  .boton-serie:hover {
    color: #ff0000;
    letter-spacing: 1px;
  }

  /* Ajuste para pantallas pequeñas */
  @media (max-width: 768px) {
    .titulo-galeria { font-size: 1.6rem; }
    .imagen-contenedor img { height: 300px; }
  }
</style>

{% schema %}
{
  "name": "Galería de Series Blanco",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Título de la Sección",
      "default": "Nuestras Series"
    }
  ],
  "blocks": [
    {
      "type": "bloque_serie",
      "name": "Serie",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Imagen de la Serie"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Título",
          "default": "Nombre de la Serie"
        },
        {
          "type": "richtext",
          "id": "desc",
          "label": "Descripción",
          "default": "<p>Agrega un resumen aquí.</p>"
        },
        {
          "type": "url",
          "id": "id_link",
          "label": "Enlace"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Galería de Series Blanco",
      "blocks": [
        { "type": "bloque_serie" },
        { "type": "bloque_serie" },
        { "type": "bloque_serie" }
      ]
    }
  ]
}
{% endschema %}