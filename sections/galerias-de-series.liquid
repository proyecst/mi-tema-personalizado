<section class="k-gallery" id="section-{{ section.id }}">
  {% if section.settings.title != blank %}
    <h2 class="k-title">{{ section.settings.title }}</h2>
  {% endif %}

  <div class="k-grid">
    {% for block in section.blocks %}
      <article class="k-card" {{ block.shopify_attributes }}>
        <div class="k-img-wrapper">
          {% if block.settings.image != blank %}
            <img src="{{ block.settings.image | image_url: width: 800 }}" alt="{{ block.settings.title }}" loading="lazy">
          {% else %}
            {{ 'image' | placeholder_svg_tag: 'k-placeholder' }}
          {% endif %}
        </div>
        
        <div class="k-info">
          <h3 class="k-card-title">{{ block.settings.title }}</h3>
          <div class="k-card-desc">{{ block.settings.desc }}</div>
          
          {% if block.settings.id_link != blank %}
             <a href="{{ block.settings.id_link }}" class="k-cta">
               VER DETALLES
               <span class="k-line"></span>
             </a>
          {% endif %}
        </div>
      </article>
    {% endfor %}
  </div>
</section>

<style>
  /* 1. IMPORTACIÓN DE FUENTE (Sube tu archivo a Shopify > Archivos) */
  @font-face {
    font-family: 'Ethnocentric';
    src: url('URL_DE_TU_ARCHIVO_AQUI') format('woff2'); /* Reemplaza esto */
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }

  .k-gallery {
    padding: 60px 20px;
    max-width: 1400px;
    margin: 0 auto;
    background: #fff;
  }

  .k-title {
    font-family: 'Ethnocentric', sans-serif;
    font-size: clamp(1.2rem, 4vw, 2rem);
    text-align: center;
    letter-spacing: 2px;
    margin-bottom: 50px;
    color: #000;
  }

  .k-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 30px;
  }

  .k-card {
    border: 1px solid #f0f0f0;
    transition: all 0.4s ease;
  }

  .k-card:hover {
    border-color: #000;
    box-shadow: 0 10px 30px rgba(0,0,0,0.05);
  }

  .k-img-wrapper {
    aspect-ratio: 1 / 1.2;
    overflow: hidden;
  }

  .k-img-wrapper img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s ease;
  }

  .k-card:hover .k-img-wrapper img {
    transform: scale(1.05);
  }

  .k-info {
    padding: 25px;
  }

  .k-card-title {
    font-family: 'Ethnocentric', sans-serif;
    font-size: 14px;
    margin: 0 0 12px 0;
    color: #000;
  }

  .k-card-desc {
    font-family: sans-serif; /* Texto de cuerpo simple para legibilidad */
    font-size: 14px;
    color: #666;
    line-height: 1.5;
    margin-bottom: 20px;
  }

  .k-cta {
    font-family: 'Ethnocentric', sans-serif;
    font-size: 10px;
    text-decoration: none;
    color: #000;
    display: inline-block;
  }

  .k-line {
    display: block;
    width: 30px;
    height: 2px;
    background: #ff0000;
    margin-top: 5px;
    transition: width 0.3s ease;
  }

  .k-cta:hover .k-line {
    width: 100%;
  }
</style>

{% schema %}
{
  "name": "Galería Ethnocentric",
  "settings": [
    { "type": "text", "id": "title", "label": "Título", "default": "SERIES" }
  ],
  "blocks": [
    {
      "type": "bloque_serie",
      "name": "Serie",
      "settings": [
        { "type": "image_picker", "id": "image", "label": "Imagen" },
        { "type": "text", "id": "title", "label": "Título", "default": "K-SERIE" },
        { "type": "richtext", "id": "desc", "label": "Descripción" },
        { "type": "url", "id": "id_link", "label": "Enlace" }
      ]
    }
  ],
  "presets": [{ "name": "Galería Ethnocentric" }]
}
{% endschema %}