<div class="series-destacadas-container">
  {% if section.settings.title != blank %}
    <h2 class="section-title">{{ section.settings.title }}</h2>
  {% endif %}
  
  <div class="series-grid">
    {% comment %} 
      Cambiamos a un bucle que busca en una entrada de metaobjetos 
      o bloques manuales si prefieres mezclarlos.
    {% endcomment %}
    
    {% for block in section.blocks %}
      <div class="serie-card" {{ block.shopify_attributes }}>
        
        {%- assign image = block.settings.image -%}
        {%- assign title = block.settings.title -%}
        {%- assign desc = block.settings.description -%}
        {%- assign link = block.settings.link_url -%}

        <div class="serie-image">
          {% if image != blank %}
            <img src="{{ image | image_url: width: 600 }}" alt="{{ title }}">
          {% else %}
            {{ 'collection-1' | placeholder_svg_tag: 'placeholder-svg' }}
          {% endif %}
        </div>

        <div class="serie-content">
          <h3>{{ title | default: "Título de Serie" }}</h3>
          <div class="serie-description">
            {{ desc }}
          </div>
          {% if link != blank %}
            <a href="{{ link }}" class="btn-link">Ver detalles</a>
          {% endif %}
        </div>
      </div>
    {% endfor %}

    {% if section.blocks.size == 0 %}
      <p style="grid-column: 1/-1;">Haz clic en "Agregar Serie" en el editor de la izquierda para ver contenido.</p>
    {% endif %}
  </div>
</div>

<style>
  .series-destacadas-container { padding: 50px 20px; max-width: 1200px; margin: 0 auto; font-family: sans-serif; }
  .section-title { text-align: center; font-size: 2.5rem; margin-bottom: 40px; }
  .series-grid { 
    display: grid; 
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr)); 
    gap: 25px; 
  }
  .serie-card { 
    border: 1px solid #eee; 
    border-radius: 15px; 
    overflow: hidden; 
    background: #fff;
    transition: 0.3s ease;
  }
  .serie-card:hover { transform: scale(1.02); box-shadow: 0 10px 20px rgba(0,0,0,0.1); }
  .serie-image img { width: 100%; height: 350px; object-fit: cover; display: block; }
  .serie-content { padding: 20px; }
  .serie-content h3 { margin: 0 0 10px 0; font-size: 1.5rem; color: #333; }
  .serie-description { font-size: 1rem; color: #666; margin-bottom: 15px; }
  .btn-link { font-weight: bold; color: #000; text-decoration: none; border-bottom: 2px solid #000; }
  .placeholder-svg { width: 100%; height: 350px; background: #f0f0f0; }
</style>

{% schema %}
{
  "name": "Galería de Series",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Título Principal de la Sección",
      "default": "Mis Series Destacadas"
    }
  ],
  "blocks": [
    {
      "type": "serie_item",
      "name": "Serie",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Imagen (O conectar Metaobjeto)"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Título de la Serie",
          "default": "Nueva Serie"
        },
        {
          "type": "richtext",
          "id": "description",
          "label": "Descripción corta",
          "default": "<p>Escribe aquí los detalles o conecta un campo dinámico.</p>"
        },
        {
          "type": "url",
          "id": "link_url",
          "label": "Link de la página"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Galería de Series",
      "blocks": [
        { "type": "serie_item" },
        { "type": "serie_item" }
      ]
    }
  ]
}
{% endschema %}