<section class="galeria-series-custom" style="background-color: {{ section.settings.bg_color }};">
  {% if section.settings.title != blank %}
    <h2 class="titulo-galeria">{{ section.settings.title }}</h2>
  {% endif %}

  <div class="grid-series">
    {% for block in section.blocks %}
      <div class="tarjeta-serie" {{ block.shopify_attributes }}>
        <div class="imagen-contenedor">
          {% if block.settings.image != blank %}
            <img src="{{ block.settings.image | image_url: width: 800 }}" alt="{{ block.settings.title }}">
          {% else %}
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg-custom' }}
          {% endif %}
        </div>
        
        <div class="texto-contenedor">
          <h3>{{ block.settings.title }}</h3>
          <div class="descripcion-corta">{{ block.settings.desc }}</div>
          {% if block.settings.link != blank %}
             <a href="{{ block.settings.link }}" class="boton-serie">Ver más</a>
          {% endif %}
        </div>
      </div>
    {% endfor %}
  </div>
</section>

<style>
  .galeria-series-custom { padding: 50px 20px; max-width: 1400px; margin: 0 auto; text-align: center; color: #fff; }
  .titulo-galeria { font-size: 2.5rem; margin-bottom: 40px; color: #fff; }
  .grid-series { 
    display: grid; 
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); 
    gap: 25px; 
  }
  .tarjeta-serie { border: 1px solid #333; border-radius: 10px; overflow: hidden; background: #1a1a1a; }
  .imagen-contenedor img, .placeholder-svg-custom { 
    width: 100%; 
    height: 350px; 
    object-fit: cover; 
    display: block;
    background: #222;
  }
  .texto-contenedor { padding: 20px; text-align: left; }
  .texto-contenedor h3 { margin: 0 0 10px 0; font-size: 1.5rem; color: #fff; }
  .descripcion-corta { margin-bottom: 20px; color: #ccc; }
  .descripcion-corta p { margin: 0; color: #ccc; } /* Asegura el color en el richtext */
  .boton-serie { text-decoration: underline; font-weight: bold; color: #fff; }
</style>

{% schema %}
{
  "name": "Galería de Series",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Título de la Sección",
      "default": "Nuestras Series"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Color de Fondo",
      "default": "#000000"
    }
  ],
  "blocks": [
    {
      "type": "bloque_serie",
      "name": "Serie",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Imagen de la Serie"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Título",
          "default": "Nombre de la Serie"
        },
        {
          "type": "richtext",
          "id": "desc",
          "label": "Descripción",
          "default": "<p>Agrega un resumen aquí.</p>"
        },
        {
          "type": "url",
          "id": "id_link",
          "label": "Enlace"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Galería de Series",
      "blocks": [
        { "type": "bloque_serie" },
        { "type": "bloque_serie" },
        { "type": "bloque_serie" }
      ]
    }
  ]
}
{% endschema %}