<div class="custom-section full-width">
  {% if section.settings.background_image %}
    <div class="custom-section__background">
      {{ section.settings.background_image | image_url: width: 2000 | image_tag }}
    </div>
  {% endif %}

  <div class="custom-section__content">
    {%- for block in section.blocks -%}
      {%- case block.type -%}
        
        {%- when 'link_pago' -%}
          <div class="keislec-link-wrapper" {{ block.shopify_attributes }}>
            <a href="{{ block.settings.link_url }}" class="keislec-btn-link" target="_blank">
              {{ block.settings.link_text }}
            </a>
          </div>

        {%- when 'add_block' -%}
          <div class="keislec-add-block" {{ block.shopify_attributes }}>
            {% if block.settings.title != blank %}
              <strong class="keislec-block-title">{{ block.settings.title }}</strong>
            {% endif %}
            <div class="keislec-block-text">
              {{ block.settings.content }}
            </div>
          </div>
          
      {%- endcase -%}
    {%- endfor -%}
  </div>
</div>

<style>
  .custom-section {
    position: relative;
    overflow: hidden;
    width: 100%;
    padding: 40px 0;
    min-height: 200px;
  }
  .custom-section__background {
    position: absolute;
    width: 100%;
    height: 100%;
    z-index: -1;
    top: 0; left: 0;
  }
  .custom-section__background img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .custom-section__content {
    display: flex;
    flex-direction: column;
    gap: 20px;
    max-width: 1000px;
    margin: 0 auto;
    padding: 0 20px;
    position: relative;
    z-index: 1;
  }

  /* ESTILO PARA LOS BOTONES (LINKS) */
  .keislec-btn-link {
    background: #00D1FF;
    color: #000 !important;
    display: block;
    text-align: center;
    padding: 15px;
    border-radius: 5px;
    font-weight: 900;
    text-decoration: none !important;
    text-transform: uppercase;
    font-size: 13px;
    letter-spacing: 1px;
    transition: 0.3s ease;
    border: 1px solid #00D1FF;
  }
  .keislec-btn-link:hover {
    background: #fff;
    border-color: #fff;
    transform: scale(1.02);
  }

  /* ESTILO PARA LOS BLOQUES DE TEXTO (ADD BLOCKS) */
  .keislec-add-block {
    background: rgba(0, 0, 0, 0.85);
    border-left: 5px solid #00D1FF;
    padding: 20px;
    border-radius: 4px;
    color: #fff;
    box-shadow: 0 4px 15px rgba(0,0,0,0.5);
  }
  .keislec-block-title {
    display: block;
    color: #00D1FF;
    margin-bottom: 10px;
    font-size: 14px;
    text-transform: uppercase;
    font-weight: 800;
  }
  .keislec-block-text { 
    font-size: 15px; 
    line-height: 1.6; 
    color: #f0f0f0; 
  }
  .keislec-block-text p { margin: 0; }
</style>

{% schema %}
{
  "name": "Keislec Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Imagen de Fondo"
    }
  ],
  "blocks": [
    {
      "type": "link_pago",
      "name": "Añadir Botón/Link",
      "settings": [
        {
          "type": "text",
          "id": "link_text",
          "label": "Texto del Botón",
          "default": "BOTÓN DE PAGO"
        },
        {
          "type": "url",
          "id": "link_url",
          "label": "Enlace (Link)"
        }
      ]
    },
    {
      "type": "add_block",
      "name": "Añadir Bloque de Texto",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Título del Bloque",
          "default": "INFORMACIÓN IMPORTANTE"
        },
        {
          "type": "richtext",
          "id": "content",
          "label": "Contenido de Texto",
          "default": "<p>Escribe aquí todo el texto que necesites mostrar.</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Keislec Section"
    }
  ]
}
{% endschema %}

