<style>
  .pdp-navigation-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20px 0;
    font-family: 'Inter', sans-serif;
  }

  .breadcrumb {
    font-size: 13px;
    color: #888;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .breadcrumb a {
    color: #888;
    text-decoration: none;
    transition: color 0.3s;
  }

  .breadcrumb a:hover { color: #fff; }

  .separator { margin: 0 8px; color: #444; }

  .active-product { color: #e62e04; font-weight: bold; }

  /* Etiquetas de Estado */
  .product-status-badges { display: flex; gap: 8px; }

  .badge {
    padding: 4px 12px;
    font-size: 11px;
    font-weight: 900;
    border-radius: 2px;
  }

  .badge-new { background: #00e676; color: #000; }
  .badge-sale { background: #e62e04; color: #fff; }
  .badge-limited { background: #ffea00; color: #000; }
  .badge-best { background: #2979ff; color: #fff; }
  .badge-exclusive { border: 1px solid #e62e04; color: #e62e04; }
</style>