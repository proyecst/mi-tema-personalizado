<section class="unlimited-section" style="background-color: {{ section.settings.bg_color }};">
  <div class="unlimited-container">
    {% if section.settings.title != blank %}
      <h2 class="unlimited-main-title">{{ section.settings.title }}</h2>
    {% endif %}

    <div class="unlimited-grid">
      {% for block in section.blocks %}
        <div class="unlimited-item" {{ block.shopify_attributes }}>
          <div class="unlimited-card">
            <div class="unlimited-icon" style="color: {{ section.settings.accent_color }};">
              {{ block.settings.icon_emoji }}
            </div>
            <div class="unlimited-content">
              <h3 class="unlimited-h3">{{ block.settings.item_title }}</h3>
              <p class="unlimited-p">{{ block.settings.item_text }}</p>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<style>
  .unlimited-section { padding: 80px 5%; overflow: hidden; }
  .unlimited-container { max-width: 1200px; margin: 0 auto; }
  .unlimited-main-title { text-align: center; margin-bottom: 50px; font-size: 32px; font-weight: 800; }
  
  .unlimited-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 30px;
  }

  .unlimited-card {
    background: #fff;
    padding: 30px;
    border-radius: 20px;
    box-shadow: 0 10px 30px rgba(0,0,0,0.05);
    transition: all 0.3s ease;
    height: 100%;
    border: 1px solid #f0f0f0;
  }

  .unlimited-card:hover {
    transform: translateY(-10px);
    border-color: {{ section.settings.accent_color }};
  }

  .unlimited-icon {
    font-size: 40px;
    margin-bottom: 20px;
    display: block;
  }

  .unlimited-h3 { margin: 0 0 10px 0; font-size: 20px; font-weight: 700; color: #111; }
  .unlimited-p { margin: 0; font-size: 15px; color: #666; line-height: 1.6; }
</style>

{% schema %}
{
  "name": "Sección Ilimitada",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Título de la Sección",
      "default": "Nuestros Beneficios"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Fondo",
      "default": "#fdfdfd"
    },
    {
      "type": "color",
      "id": "accent_color",
      "label": "Color de Acento",
      "default": "#000000"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Nueva Opción",
      "settings": [
        {
          "type": "text",
          "id": "icon_emoji",
          "label": "Icono (Emoji)",
          "default": "✨"
        },
        {
          "type": "text",
          "id": "item_title",
          "label": "Título",
          "default": "Característica"
        },
        {
          "type": "textarea",
          "id": "item_text",
          "label": "Descripción",
          "default": "Escribe aquí los detalles de esta opción."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Sección Ilimitada",
      "blocks": [
        { "type": "feature" },
        { "type": "feature" },
        { "type": "feature" }
      ]
    }
  ]
}
{% endschema %}