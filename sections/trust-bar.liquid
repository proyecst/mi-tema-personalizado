<div class="trust-bar-section" id="trust-bar-{{ section.id }}">
  <div class="trust-bar-limit">
    <div class="trust-bar-flex">
      
      {% for block in section.blocks %}
        <div class="trust-card-wrapper" {{ block.shopify_attributes }}>
          {% comment %} El "bot√≥n" interactivo {% endcomment %}
          <button 
            class="trust-card-button" 
            onclick="toggleTrustInfo(this, '{{ block.id }}')"
            aria-expanded="false"
            data-action-url="{{ block.settings.post_url }}"
          >
            <div class="trust-icon-wrapper">
              {{ block.settings.icon }}
            </div>
            <div class="trust-content">
              <span class="trust-title">{{ block.settings.title }}</span>
              <span class="trust-status-dot"></span>
            </div>
          </button>

          {% comment %} Panel Desplegable {% endcomment %}
          <div class="trust-info-panel" id="panel-{{ block.id }}">
            <div class="panel-inner">
              <p>{{ block.settings.subtitle }}</p>
              {% if block.settings.show_button %}
                <button class="action-post-btn" onclick="sendPostData('{{ block.id }}', '{{ block.settings.title }}')">
                  {{ block.settings.button_label | default: 'Confirmar' }}
                </button>
              {% endif %}
            </div>
          </div>
        </div>
      {% endfor %}

    </div>
  </div>
</div>

<style>
  :root {
    --primary-color: {{ section.settings.accent_color }};
    --text-color: {{ section.settings.text_color }};
    --bg-card: {{ section.settings.card_bg }};
  }

  .trust-bar-section {
    background-color: {{ section.settings.bg_color }};
    padding: 40px 0;
  }

  .trust-bar-flex {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
    gap: 20px;
  }

  .trust-card-wrapper {
    background: var(--bg-card);
    border-radius: 12px;
    overflow: hidden;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 4px 6px -1px rgba(0,0,0,0.1);
    border: 1px solid rgba(0,0,0,0.05);
  }

  .trust-card-wrapper:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 15px -3px rgba(0,0,0,0.1);
  }

  .trust-card-button {
    width: 100%;
    background: none;
    border: none;
    padding: 20px;
    display: flex;
    align-items: center;
    gap: 15px;
    cursor: pointer;
    text-align: left;
  }

  .trust-icon-wrapper {
    font-size: 28px;
    background: white;
    width: 50px;
    height: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    box-shadow: inset 0 0 10px rgba(0,0,0,0.05);
  }

  .trust-title {
    display: block;
    font-weight: 800;
    font-size: 15px;
    color: var(--text-color);
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  /* Panel Desplegable */
  .trust-info-panel {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.4s ease-out;
    background: rgba(0,0,0,0.02);
  }

  .panel-inner {
    padding: 0 20px 20px 20px;
    font-size: 13px;
    color: var(--text-color);
    opacity: 0.8;
  }

  .action-post-btn {
    margin-top: 10px;
    width: 100%;
    padding: 8px;
    background: var(--primary-color);
    color: white;
    border: none;
    border-radius: 6px;
    cursor: pointer;
    font-weight: 600;
    transition: opacity 0.2s;
  }

  .action-post-btn:hover { opacity: 0.9; }

  /* Estado Activo */
  .trust-card-button[aria-expanded="true"] + .trust-info-panel {
    max-height: 200px;
  }
</style>

<script>
  function toggleTrustInfo(btn, id) {
    const isExpanded = btn.getAttribute('aria-expanded') === 'true';
    btn.setAttribute('aria-expanded', !isExpanded);
  }

  // Funci√≥n para llamado POST (Simulaci√≥n de API o registro)
  async function sendPostData(id, title) {
    const btn = event.target;
    btn.innerText = "Procesando...";
    
    try {
      // Aqu√≠ puedes cambiar la URL por un endpoint real de tu App de Shopify
      const response = await fetch('/cart/add.js', { // Ejemplo usando la API de carrito de Shopify
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          items: [{ id: id, quantity: 1, properties: { 'Source': 'Trust Bar ' + title }}]
        })
      });

      if (response.ok) {
        btn.style.background = "#27ae60";
        btn.innerText = "‚úÖ ¬°Listo!";
      }
    } catch (error) {
      console.error("Error en POST:", error);
      btn.innerText = "Reintentar";
    }
  }
</script>

