<div class="trust-bar-custom">
  <div class="trust-bar-wrapper">
    {% for block in section.blocks %}
      <div class="trust-bar-item">
        <span class="trust-bar-icon">{{ block.settings.icon }}</span>
        <div class="trust-bar-content">
          <span class="trust-bar-title">{{ block.settings.title }}</span>
          {% if block.settings.subtitle != blank %}
            <span class="trust-bar-subtitle">{{ block.settings.subtitle }}</span>
          {% endif %}
        </div>
      </div>
    {% endfor %}
  </div>
</div>

<style>
  .trust-bar-custom {
    background-color: {{ section.settings.bg_color }};
    padding: 15px 0;
    width: 100%;
    border-top: 1px solid #eee;
    border-bottom: 1px solid #eee;
  }
  .trust-bar-wrapper {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    max-width: 1200px;
    margin: 0 auto;
    gap: 20px;
  }
  .trust-bar-item {
    display: flex;
    align-items: center;
    gap: 10px;
    padding: 5px 15px;
  }
  .trust-bar-icon {
    font-size: 20px;
  }
  .trust-bar-content {
    display: flex;
    flex-direction: column;
  }
  .trust-bar-title {
    font-weight: bold;
    font-size: 14px;
    color: {{ section.settings.text_color }};
    line-height: 1.2;
  }
  .trust-bar-subtitle {
    font-size: 12px;
    color: {{ section.settings.text_color }};
    opacity: 0.8;
  }
  @media (max-width: 749px) {
    .trust-bar-item {
      width: 45%;
      justify-content: center;
    }
  }
</style>

