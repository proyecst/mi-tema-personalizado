<div class="neo-trust-section" id="neo-{{ section.id }}" style="background-color: {{ section.settings.bg_color }};">
  <div class="neo-container">
    <div class="neo-grid">
      
      {% for block in section.blocks %}
        <div class="neo-card-orbit" {{ block.shopify_attributes }}>
          <div class="neo-card" onclick="this.classList.toggle('is-active')">
            
            <div class="neo-card-inner">
              <div class="neo-icon-box" style="background-color: {{ section.settings.accent_color }};">
                <span class="neo-emoji">{{ block.settings.icon }}</span>
              </div>
              
              <div class="neo-text-zone">
                <h3 class="neo-h3" style="color: {{ section.settings.text_color }};">{{ block.settings.title }}</h3>
                <div class="neo-expandable">
                  <p class="neo-p" style="color: {{ section.settings.text_color }};">{{ block.settings.subtitle }}</p>
                  <button class="neo-btn-post" 
                          style="background-color: {{ section.settings.accent_color }}; color: #fff;"
                          onclick="triggerBrutalAction(event, '{{ block.id }}')">
                    {{ block.settings.button_label }}
                  </button>
                </div>
              </div>
            </div>

          </div>
        </div>
      {% endfor %}

    </div>
  </div>
</div>

<style>
  .neo-trust-section {
    padding: 60px 0;
    width: 100%;
    display: block !important; /* Forzar visibilidad */
    min-height: 200px;
  }

  .neo-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .neo-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 20px;
  }

  .neo-card {
    background: rgba(128, 128, 128, 0.05); /* Fondo gris suave para que se vea */
    border: 2px solid rgba(0,0,0,0.1);
    border-radius: 20px;
    padding: 25px;
    cursor: pointer;
    transition: all 0.4s ease;
  }

  .neo-card-inner {
    display: flex;
    flex-direction: column;
    gap: 15px;
  }

  .neo-icon-box {
    width: 50px;
    height: 50px;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 24px;
  }

  .neo-h3 {
    margin: 0;
    font-size: 18px;
    font-weight: bold;
  }

  /* El contenido se oculta hasta hacer clic */
  .neo-expandable {
    max-height: 0;
    overflow: hidden;
    transition: all 0.5s ease;
    opacity: 0;
  }

  .neo-card.is-active {
    border-color: {{ section.settings.accent_color }};
    background: white;
    box-shadow: 0 10px 30px rgba(0,0,0,0.1);
  }

  .neo-card.is-active .neo-expandable {
    max-height: 500px;
    opacity: 1;
    margin-top: 15px;
  }

  .neo-btn-post {
    width: 100%;
    border: none;
    padding: 12px;
    border-radius: 10px;
    font-weight: bold;
    cursor: pointer;
    margin-top: 10px;
  }
</style>

<script>
  function triggerBrutalAction(e, id) {
    e.stopPropagation();
    alert("隆Acci贸n POST enviada para el bloque: " + id + "!");
  }
</script>

