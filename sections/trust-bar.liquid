<div class="trust-bar-section">
  <div class="trust-bar-limit">
    <div class="trust-bar-flex">
      
      {% for block in section.blocks %}
        <div class="trust-bar-item">
          {% if block.settings.icon != blank %}
            <span class="trust-icon-img">{{ block.settings.icon }}</span>
          {% endif %}
          <div class="trust-content">
            <span class="trust-title">{{ block.settings.title }}</span>
            {% if block.settings.subtitle != blank %}
              <span class="trust-subtitle">{{ block.settings.subtitle }}</span>
            {% endif %}
          </div>
        </div>
      {% endfor %}

    </div>
  </div>
</div>

<style>
  .trust-bar-section {
    background-color: {{ section.settings.bg_color }};
    padding: 20px 0;
    width: 100%;
    border-top: 1px solid #eeeeee;
    border-bottom: 1px solid #eeeeee;
  }
  .trust-bar-limit {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 15px;
  }
  .trust-bar-flex {
    display: flex;
    justify-content: space-around;
    flex-wrap: wrap;
    gap: 15px;
  }
  .trust-bar-item {
    display: flex;
    align-items: center;
    gap: 10px;
    flex: 1;
    min-width: 180px;
    justify-content: center;
  }
  .trust-icon-img {
    font-size: 22px;
  }
  .trust-content {
    display: flex;
    flex-direction: column;
  }
  .trust-title {
    font-weight: 700;
    font-size: 14px;
    color: {{ section.settings.text_color }};
    line-height: 1.1;
  }
  .trust-subtitle {
    font-size: 12px;
    color: {{ section.settings.text_color }};
    opacity: 0.7;
    margin-top: 2px;
  }

  @media (max-width: 767px) {
    .trust-bar-item {
      min-width: 45%;
      justify-content: flex-start;
    }
  }
</style>

