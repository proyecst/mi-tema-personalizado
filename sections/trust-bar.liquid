<div class="neo-trust-section" id="neo-{{ section.id }}">
  <div class="neo-container">
    <div class="neo-grid">
      
      {% for block in section.blocks %}
        <div class="neo-card-orbit" {{ block.shopify_attributes }}>
          <div class="neo-card" onclick="this.classList.toggle('is-active')">
            
            {% comment %} Fondo con gradiente animado {% endcomment %}
            <div class="neo-card-bg"></div>
            
            <div class="neo-card-inner">
              <div class="neo-icon-box">
                <span class="neo-emoji">{{ block.settings.icon }}</span>
              </div>
              
              <div class="neo-text-zone">
                <h3 class="neo-h3">{{ block.settings.title }}</h3>
                <div class="neo-expandable">
                  <p class="neo-p">{{ block.settings.subtitle }}</p>
                  <button class="neo-btn-post" onclick="triggerBrutalAction(event, '{{ block.id }}')">
                    <span class="btn-text">{{ block.settings.button_label }}</span>
                    <span class="btn-icon">‚Üí</span>
                  </button>
                </div>
              </div>
            </div>

          </div>
        </div>
      {% endfor %}

    </div>
  </div>
</div>

<style>
  .neo-trust-section {
    padding: 80px 0;
    background: {{ section.settings.bg_color }};
    overflow: hidden;
  }

  .neo-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 40px;
  }

  .neo-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 30px;
  }

  /* La Tarjeta */
  .neo-card {
    position: relative;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 24px;
    padding: 35px;
    cursor: pointer;
    transition: all 0.6s cubic-bezier(0.23, 1, 0.32, 1);
    overflow: hidden;
    backdrop-filter: blur(10px);
  }

  .neo-card-bg {
    position: absolute;
    top: 0; left: 0; width: 100%; height: 100%;
    background: radial-gradient(circle at top right, {{ section.settings.accent_color }}22, transparent);
    opacity: 0;
    transition: opacity 0.5s ease;
    z-index: 0;
  }

  .neo-card:hover {
    transform: translateY(-10px) scale(1.02);
    border-color: {{ section.settings.accent_color }};
  }

  .neo-card:hover .neo-card-bg {
    opacity: 1;
  }

  .neo-card-inner {
    position: relative;
    z-index: 1;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 20px;
  }

  .neo-icon-box {
    width: 60px;
    height: 60px;
    background: {{ section.settings.accent_color }};
    border-radius: 18px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 30px;
    box-shadow: 0 10px 20px {{ section.settings.accent_color }}44;
  }

  .neo-h3 {
    margin: 0;
    font-size: 20px;
    font-weight: 700;
    color: {{ section.settings.text_color }};
    letter-spacing: -0.5px;
  }

  /* Animaci√≥n Desplegable */
  .neo-expandable {
    max-height: 0;
    opacity: 0;
    transition: all 0.5s ease;
    transform: translateY(10px);
  }

  .neo-card.is-active .neo-expandable {
    max-height: 200px;
    opacity: 1;
    transform: translateY(0);
    margin-top: 15px;
  }

  .neo-p {
    font-size: 14px;
    line-height: 1.6;
    color: {{ section.settings.text_color }};
    opacity: 0.7;
    margin-bottom: 20px;
  }

  /* Bot√≥n Brutal */
  .neo-btn-post {
    display: flex;
    align-items: center;
    gap: 10px;
    background: {{ section.settings.text_color }};
    color: {{ section.settings.bg_color }};
    border: none;
    padding: 12px 24px;
    border-radius: 12px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    width: 100%;
    justify-content: center;
  }

  .neo-btn-post:hover {
    gap: 20px;
    filter: brightness(1.2);
  }

  @media (max-width: 768px) {
    .neo-container { padding: 0 20px; }
  }
</style>

<script>
  function triggerBrutalAction(e, blockId) {
    e.stopPropagation(); // Evita cerrar la card al clickar el bot√≥n
    const btn = e.currentTarget;
    const originalText = btn.innerHTML;
    
    btn.innerHTML = '<span class="btn-text">CONECTANDO...</span>';
    btn.style.opacity = "0.5";

    // Simulaci√≥n de llamada POST a Shopify AJAX API
    fetch('/cart/add.js', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ items: [{ id: blockId, quantity: 1 }] })
    })
    .then(res => {
      btn.style.background = "#00ff88";
      btn.style.color = "#000";
      btn.style.opacity = "1";
      btn.innerHTML = "¬°MISI√ìN COMPLETADA! ‚ö°";
      
      setTimeout(() => {
        btn.innerHTML = originalText;
        btn.style.background = "";
        btn.style.color = "";
      }, 3000);
    })
    .catch(err => console.error("Error brutal:", err));
  }
</script>

