{%- style -%}
  :root {
    --primary-blue: {{ section.settings.accent_color }};
    --deep-black: #050505;
    --text-gray: #b0b0b0;
    --header-height: 70px;
  }

  .kieslect-header {
    background: var(--deep-black);
    border-bottom: 1px solid rgba(255,255,255,0.05);
    padding: 0 5%;
    font-family: 'Inter', sans-serif;
    position: sticky;
    top: 0;
    z-index: 1000;
    height: var(--header-height);
    display: flex;
    align-items: center;
  }

  .header-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
  }

  /* LOGO FUNCIONAL */
  .logo a {
    font-weight: 900;
    font-size: 24px;
    color: #fff;
    text-decoration: none;
    letter-spacing: 3px;
    transition: 0.3s;
  }
  .logo a:hover { color: var(--primary-blue); text-shadow: 0 0 15px var(--primary-blue); }

  /* NAVEGACIÓN DINÁMICA */
  .nav-list {
    display: flex;
    list-style: none;
    gap: 35px;
    margin: 0;
    padding: 0;
  }

  .nav-link {
    text-decoration: none;
    color: #fff;
    font-weight: 600;
    font-size: 13px;
    text-transform: uppercase;
    letter-spacing: 1px;
    transition: 0.3s;
    position: relative;
  }

  .nav-link:hover { color: var(--primary-blue); }

  /* DROPDOWN MEJORADO */
  .has-dropdown { position: relative; height: var(--header-height); display: flex; align-items: center; }
  
  .dropdown {
    position: absolute;
    top: 100%;
    left: -20px;
    background: #0f0f0f;
    border: 1px solid #222;
    min-width: 220px;
    padding: 15px 0;
    visibility: hidden;
    opacity: 0;
    transform: translateY(10px);
    transition: 0.3s;
    box-shadow: 0 20px 40px rgba(0,0,0,0.8);
  }

  .has-dropdown:hover .dropdown { visibility: visible; opacity: 1; transform: translateY(0); }

  .dropdown a {
    padding: 12px 25px;
    display: block;
    color: #eee;
    text-decoration: none;
    font-size: 12px;
    text-transform: uppercase;
    transition: 0.2s;
  }

  .dropdown a:hover { background: #1a1a1a; color: var(--primary-blue); padding-left: 30px; }

  /* ACCIONES (BUSQUEDA, CUENTA, REGISTRO) */
  .secondary-nav { display: flex; gap: 20px; align-items: center; }

  .icon-link {
    color: #fff;
    text-decoration: none;
    font-size: 13px;
    font-weight: 600;
    transition: 0.3s;
  }
  .icon-link:hover { color: var(--primary-blue); }

  .register-btn {
    background: var(--primary-blue);
    color: #000 !important;
    padding: 10px 20px;
    border-radius: 5px;
    font-size: 12px;
    font-weight: 800;
    text-transform: uppercase;
    text-decoration: none;
    transition: 0.3s;
  }
  .register-btn:hover {
    box-shadow: 0 0 20px var(--primary-blue);
    transform: translateY(-2px);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .main-nav { display: none; } /* Aquí deberías agregar un menú hamburguesa */
  }
{%- endstyle -%}

<header class="kieslect-header">
  <div class="header-container">
    
    <div class="logo">
      <a href="{{ routes.root_url }}">KIESLECT</a>
    </div>

    <nav class="main-nav">
      <ul class="nav-list">
        <li><a href="{{ routes.root_url }}" class="nav-link">Inicio</a></li>
        
        <li class="has-dropdown">
          <a href="{{ routes.all_products_collection_url }}" class="nav-link">Tienda</a>
          <ul class="dropdown">
            {% comment %} Estos enlaces deben coincidir con tus colecciones creadas en Shopify {% endcomment %}
            <li><a href="/collections/serie-ks">Serie Ks (AMOLED)</a></li>
            <li><a href="/collections/serie-kr">Serie Kr (Llamadas)</a></li>
            <li><a href="/collections/serie-l">Serie L (Damas)</a></li>
            <li><a href="/collections/accesorios">Accesorios</a></li>
          </ul>
        </li>
        
        <li><a href="/pages/comunidad" class="nav-link">Comunidad</a></li>
        <li><a href="{{ routes.search_url }}" class="nav-link">Buscar</a></li>
      </ul>
    </nav>

    <div class="secondary-nav">
      {% if customer %}
        <a href="{{ routes.account_url }}" class="icon-link">HOLA, {{ customer.first_name | uppercase }}</a>
        <a href="{{ routes.account_logout_url }}" class="icon-link" style="opacity: 0.6;">Salir</a>
      {% else %}
        <a href="{{ routes.account_login_url }}" class="icon-link">LOGIN</a>
        <a href="{{ routes.account_register_url }}" class="register-btn">REGISTRARSE</a>
      {% endif %}
      
      <a href="{{ routes.cart_url }}" class="icon-link">
        CART ({{ cart.item_count }})
      </a>
    </div>

  </div>
</header>

{% schema %}
{
  "name": "Kieslect Header Pro",
  "settings": [
    {
      "type": "color",
      "id": "accent_color",
      "label": "Color de Acento (Azul)",
      "default": "#007BFF"
    }
  ],
  "presets": [
    {
      "name": "Kieslect Header Pro"
    }
  ]
}
{% endschema %}