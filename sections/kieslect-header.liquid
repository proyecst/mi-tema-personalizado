{% style %}
  .kieslect-header {
    background: #ffffff;
    border-bottom: 1px solid #e5e5e5;
    padding: 0 40px;
    font-family: 'Inter', -apple-system, sans-serif;
    position: sticky;
    top: 0;
    z-index: 1000;
  }

  .header-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 1400px;
    margin: 0 auto;
    height: 80px;
  }

  .header-logo a {
    font-size: 26px;
    font-weight: 800;
    text-decoration: none;
    color: #000;
    letter-spacing: -1px;
    text-transform: uppercase;
  }

  /* MenÃº Principal */
  .main-nav .nav-list {
    display: flex;
    list-style: none;
    margin: 0;
    padding: 0;
    gap: 35px;
  }

  .nav-list > li {
    position: relative;
    display: flex;
    align-items: center;
    height: 80px;
  }

  .nav-list a {
    text-decoration: none;
    color: #1a1a1a;
    font-weight: 600;
    font-size: 14px;
    transition: color 0.2s ease;
  }

  .nav-list a:hover {
    color: #ff4d00;
  }

  /* Dropdown Mejorado */
  .dropdown {
    display: none;
    position: absolute;
    top: 80px;
    left: -20px;
    background: #ffffff;
    box-shadow: 0 15px 30px rgba(0,0,0,0.1);
    min-width: 260px;
    border-radius: 0 0 8px 8px;
    padding: 15px 0;
    list-style: none;
    border-top: 2px solid #ff4d00;
  }

  .has-dropdown:hover .dropdown {
    display: block;
    animation: fadeIn 0.2s ease;
  }

  .dropdown li a {
    padding: 12px 25px;
    display: block;
    font-size: 13px;
    font-weight: 500;
    color: #444;
  }

  .dropdown li a:hover {
    background: #fff5f0;
    color: #ff4d00;
  }

  /* Iconos y Enlaces Secundarios */
  .secondary-nav {
    display: flex;
    gap: 20px;
    align-items: center;
  }

  .icon-link {
    display: flex;
    align-items: center;
    color: #000;
    text-decoration: none;
    position: relative;
  }

  .icon-link svg {
    width: 24px;
    height: 24px;
  }

  .cart-count {
    position: absolute;
    top: -5px;
    right: -10px;
    background: #ff4d00;
    color: white;
    font-size: 10px;
    padding: 2px 6px;
    border-radius: 50%;