{%- style -%}
  :root { --k-cyan: #00D1FF; --k-dark: #050505; }
  
  /* ... (Estilos base anteriores se mantienen) ... */

  .k-drop-menu {
    display: none; position: absolute; top: 100%; left: 0;
    background: #0a0a0a; min-width: 300px; border: 1px solid #1a1a1a;
    border-radius: 12px; padding: 15px 0; box-shadow: 0 20px 50px rgba(0,0,0,0.8);
  }

  /* Contenedor de Grupo */
  .k-nav-group { margin-bottom: 15px; }
  .k-nav-group-label {
    display: block; padding: 0 20px 8px; font-size: 9px;
    font-weight: 800; color: #444; text-transform: uppercase; letter-spacing: 1.5px;
  }

  /* Estilo para LINKS de navegaci√≥n */
  .k-nav-link {
    display: flex !important; align-items: center; justify-content: space-between;
    padding: 10px 20px; color: #fff; text-decoration: none; font-size: 12px;
    font-weight: 600; transition: all 0.2s ease;
  }
  .k-nav-link:hover { background: #111; color: var(--k-cyan); }
  .k-nav-link svg { width: 14px; height: 14px; opacity: 0.3; transition: 0.3s; }
  .k-nav-link:hover svg { opacity: 1; transform: translateX(3px); }

  /* Estilo para ARCHIVOS descargables */
  .k-file-item {
    display: flex !important; align-items: center; gap: 12px;
    padding: 10px 20px; text-decoration: none; background: rgba(255,255,255,0.02);
    margin: 4px 10px; border-radius: 8px; border: 1px solid transparent;
  }
  .k-file-item:hover {
    background: rgba(0, 209, 255, 0.05);
    border-color: rgba(0, 209, 255, 0.2);
  }
  .k-file-icon { font-size: 18px; }
  .k-file-text { display: flex; flex-direction: column; }
  .k-file-name { color: #fff; font-size: 11px; font-weight: 700; }
  .k-file-meta { color: var(--k-cyan); font-size: 8px; font-weight: 800; text-transform: uppercase; }

  .k-dropdown.is-open .k-drop-menu { display: block; animation: kReveal 0.3s cubic-bezier(0.23, 1, 0.32, 1); }
  @keyframes kReveal { from { opacity: 0; transform: translateY(10px); } to { opacity: 1; transform: translateY(0); } }
{%- endstyle -%}

