{%- style -%}
  .k-header-wrapper {
    display: block;
    width: 100%;
    background: #000000;
    font-family: 'Helvetica', 'Arial', sans-serif;
    position: sticky;
    top: 0;
    z-index: 9999;
    border-bottom: 1px solid #1a1a1a;
  }

  .k-header-container {
    max-width: 1300px;
    height: 80px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 20px;
  }

  .k-logo a {
    color: #ffffff;
    text-decoration: none;
    font-size: 24px;
    font-weight: 900;
    letter-spacing: 3px;
    text-transform: uppercase;
  }

  .k-main-nav {
    display: flex;
    gap: 30px;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .k-nav-link {
    color: #ffffff;
    text-decoration: none;
    font-size: 13px;
    font-weight: 600;
    text-transform: uppercase;
    transition: 0.3s;
  }

  .k-nav-link:hover {
    color: #00D1FF;
  }

  .k-actions {
    display: flex;
    align-items: center;
    gap: 20px;
  }

  .k-login-link {
    color: #ffffff;
    text-decoration: none;
    font-size: 12px;
    font-weight: 600;
  }

  .k-register-btn {
    background: #00D1FF !important;
    color: #000000 !important;
    padding: 10px 20px !important;
    border-radius: 4px !important;
    font-weight: 800 !important;
    font-size: 11px !important;
    text-decoration: none !important;
    text-transform: uppercase !important;
    display: inline-block !important;
  }

  @media (max-width: 768px) {
    .k-main-nav { display: none; }
  }
{%- endstyle -%}

<div class="k-header-wrapper">
  <div class="k-header-container">
    
    <div class="k-logo">
      <a href="/">KIESLECT</a>
    </div>

    <nav>
      <ul class="k-main-nav">
        <li><a href="/" class="k-nav-link">Inicio</a></li>
        <li><a href="/collections/all" class="k-nav-link">Tienda</a></li>
        <li><a href="/pages/comunidad" class="k-nav-link">Comunidad</a></li>
      </ul>
    </nav>

    <div class="k-actions">
      {%- if customer -%}
        <a href="/account" class="k-login-link">MI CUENTA</a>
        <a href="/account/logout" class="k-login-link" style="opacity: 0.5;">SALIR</a>
      {%- else -%}
        <a href="/account/login" class="k-login-link">LOGIN</a>
        <a href="/account/register" class="k-register-btn">REGISTRO INFINITO</a>
      {%- endif -%}
      
      <a href="/cart" class="k-login-link" style="color: #00D1FF;">
        CARRITO ({{ cart.item_count }})
      </a>
    </div>

  </div>
</div>

