<link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700&family=Rajdhani:wght@300;500;700&display=swap" rel="stylesheet">

<style>
  :root {
    --f-cyan: #00f2ff; /* El azul neón de Kieslect */
    --f-cyan-glow: rgba(0, 242, 255, 0.5);
    --f-white: #ffffff;
    --f-dark: #000000;
    --f-gray: #0a0a0a;
    --f-font-main: 'Orbitron', sans-serif;
    --f-font-body: 'Rajdhani', sans-serif;
  }

  /* Contenedor Principal */
  .k-header-wrapper {
    background-color: var(--f-dark);
    border-bottom: 2px solid var(--f-cyan);
    box-shadow: 0 0 15px var(--f-cyan-glow);
    padding: 15px 4%;
    position: sticky;
    top: 0;
    z-index: 9999;
    font-family: var(--f-font-body);
  }

  .k-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 1400px;
    margin: 0 auto;
  }

  /* LOGO: EFECTO NEÓN AZUL */
  .k-logo {
    font-family: var(--f-font-main);
    font-size: 26px;
    font-weight: 700;
    text-decoration: none;
    letter-spacing: 2px;
    color: var(--f-white);
    display: flex;
    align-items: center;
  }

  .k-logo span {
    color: var(--f-cyan);
    text-shadow: 0 0 10px var(--f-cyan), 0 0 20px var(--f-cyan);
    margin-right: 2px;
  }

  /* NAVEGACIÓN */
  .k-nav {
    display: flex;
    list-style: none;
    gap: 30px;
    margin: 0;
    padding: 0;
  }

  .k-nav-link {
    text-decoration: none;
    color: #cccccc;
    text-transform: uppercase;
    font-weight: 600;
    font-size: 14px;
    letter-spacing: 1.5px;
    transition: 0.3s;
    padding: 10px 0;
    display: block;
  }

  .k-nav-link:hover {
    color: var(--f-cyan);
    text-shadow: 0 0 8px var(--f-cyan);
  }

  /* MEGA MENÚ AZUL */
  .k-mega-menu {
    position: absolute;
    top: 100%;
    left: -50px;
    background: var(--f-gray);
    border: 1px solid var(--f-cyan);
    display: none;
    grid-template-columns: 250px 200px;
    padding: 25px;
    gap: 20px;
    box-shadow: 0 10px 30px rgba(0, 242, 255, 0.2);
    min-width: 500px;
  }

  .k-nav-item:hover .k-mega-menu {
    display: grid;
  }

  .mega-col h4 {
    font-family: var(--f-font-main);
    color: var(--f-cyan);
    font-size: 11px;
    margin-bottom: 15px;
    border-bottom: 1px solid rgba(0, 242, 255, 0.3);
    padding-bottom: 5px;
  }

  .mega-col li a:hover {
    color: var(--f-cyan);
    padding-left: 8px;
    border-left: 2px solid var(--f-cyan);
    background: rgba(0, 242, 255, 0.05);
  }

  /* BUSCADOR */
  .k-search-input {
    background: #000;
    border: 1px solid #444;
    color: white;
    padding: 8px 15px;
    border-radius: 0px;
    width: 180px;
    outline: none;
    transition: 0.3s;
  }

  .k-search-input:focus {
    border-color: var(--f-cyan);
    box-shadow: 0 0 10px var(--f-cyan-glow);
  }

  /* CARRITO AZUL */
  .cart-btn {
    text-decoration: none;
    color: var(--f-white);
    font-size: 12px;
    font-weight: 700;
    letter-spacing: 1px;
    border: 1px solid var(--f-cyan);
    padding: 7px 15px;
    transition: 0.3s;
  }

  .cart-btn:hover {
    background: var(--f-cyan);
    color: #000;
    box-shadow: 0 0 15px var(--f-cyan);
  }

  .cart-count {
    background: #fff;
    color: #000;
    padding: 2px 6px;
    font-size: 10px;
    margin-left: 5px;
  }

  @media (max-width: 768px) {
    .k-nav { display: none; }
  }
</style>

<div class="k-header-wrapper">
  <div class="k-container">
    
    <a href="{{ routes.root_url }}" class="k-logo">
      <span>K</span>IESLECT
    </a>

    <nav>
      <ul class="k-nav">
        <li class="k-nav-item">
          <a href="/collections/all" class="k-nav-link">Tienda</a>
          <div class="k-mega-menu">
            <div class="mega-col">
              <h4>Modelos Pro</h4>
              <ul>
                <li><a href="/collections/serie-amoled">Pantallas AMOLED</a></li>
                <li><a href="/collections/llamadas-bluetooth">Llamadas BT</a></li>
              </ul>
            </div>
            <div class="mega-col">
              <h4>Soporte</h4>
              <ul>
                <li><a href="/pages/app">Descargar App</a></li>
                <li><a href="/pages/contacto">Garantía</a></li>
              </ul>
            </div>
          </div>
        </li>
        <li><a href="/collections/novedades" class="k-nav-link">Novedades</a></li>
        <li><a href="/pages/sobre-kieslect" class="k-nav-link">Nosotros</a></li>
      </ul>
    </nav>

    <div class="k-actions">
      <div class="k-search-box">
        <form action="{{ routes.search_url }}" method="get">
          <input type="text" name="q" class="k-search-input" placeholder="BUSCAR TECH...">
        </form>
      </div>

      <a href="{{ routes.cart_url }}" class="cart-btn">
        CARRITO <span class="cart-count">{{ cart.item_count }}</span>
      </a>
    </div>

  </div>
</div>