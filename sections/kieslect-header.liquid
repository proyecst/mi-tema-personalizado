<style>
  /* 1. FUENTE TÉCNICA */
  @font-face {
    font-family: 'Ethnocentric';
    src: url('URL_DE_TU_ARCHIVO') format('opentype');
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }

  :root { 
    --k-cyan: #00D1FF; 
    --k-bg: #0a0a0a; 
    --k-font: 'Ethnocentric', sans-serif;
    --k-red: #ff0000;
  }

  .k-header-wrapper { 
    width: 100%; 
    background: #000; 
    border-bottom: 1px solid #1a1a1a; 
    position: sticky; 
    top: 0; 
    z-index: 9999; 
    font-family: var(--k-font);
  }

  .k-header-container { 
    max-width: 1300px; 
    height: 80px; 
    margin: 0 auto; 
    display: flex; 
    align-items: center; 
    justify-content: space-between; 
    padding: 0 20px; 
  }

  /* --- LOGO KIESLECT ESTILIZADO --- */
  .k-logo-container {
    display: flex;
    align-items: center;
    text-decoration: none;
    color: #fff;
    font-size: 24px;
    letter-spacing: 1px;
  }

  .k-icon-css {
    position: relative;
    width: 20px;
    height: 24px;
    margin-right: 6px;
  }

  /* Palo vertical de la K */
  .k-icon-css::before {
    content: "";
    position: absolute;
    left: 0;
    top: 0;
    width: 5px;
    height: 100%;
    background-color: var(--k-red);
  }

  /* Flecha/Diagonal de la K */
  .k-icon-css::after {
    content: "";
    position: absolute;
    left: 1px;
    top: 1px;
    width: 14px;
    height: 14px;
    border-top: 5px solid var(--k-red);
    border-right: 5px solid var(--k-red);
    transform: rotate(45deg);
    transform-origin: top left;
  }

  .k-logo-text {
    line-height: 1;
    margin-top: 2px;
  }

  /* --- NAVEGACIÓN --- */
  .k-nav-main { display: flex; gap: 10px; }
  .k-dropdown { position: relative; }
  
  .k-drop-trigger { 
    background: transparent; 
    color: #fff; 
    border: none; 
    padding: 10px 15px; 
    font-size: 10px; 
    text-transform: uppercase; 
    cursor: pointer; 
    display: flex; 
    align-items: center; 
    gap: 6px; 
    font-family: var(--k-font);
  }

  .k-drop-trigger:hover { color: var(--k-cyan); }
  
  .k-drop-menu { 
    display: none; 
    position: absolute; 
    top: 100%; 
    left: 0; 
    background: var(--k-bg); 
    min-width: 260px; 
    border: 1px solid #1a1a1a; 
    padding: 15px 0; 
    box-shadow: 0 20px 40px rgba(0,0,0,0.8); 
  }

  .k-dropdown.is-open .k-drop-menu { display: block; animation: kSlideUp 0.25s ease forwards; }
  
  .k-item { 
    display: flex !important; 
    padding: 12px 20px; 
    text-decoration: none; 
    background: transparent; 
    width: 100%; 
  }

  .k-item-title { color: #fff; font-size: 9px; text-transform: uppercase; }

  @keyframes kSlideUp { from { opacity: 0; transform: translateY(8px); } to { opacity: 1; transform: translateY(0); } }
  @media (max-width: 900px) { .k-nav-main { display: none; } }
</style>

<header class="k-header-wrapper">
  <div class="k-header-container">
    
    <a href="/" class="k-logo-container">
      <div class="k-icon-css"></div>
      <span class="k-logo-text">IESLECT</span>
    </a>

    <nav class="k-nav-main">
      <a href="/" class="k-drop-trigger" style="text-decoration:none;">INICIO</a>
      
      {% assign menu_items = "Productos,Comunidad,Soporte" | split: "," %}
      {% for m_title in menu_items %}
        <div class="k-dropdown js-drop">
          <button class="k-drop-trigger" onclick="kToggle(this)">{{ m_title }}</button>
          <div class="k-drop-menu">
            {% for block in section.blocks %}
              {% if block.settings.parent == m_title %}
                <a href="{{ block.settings.url }}" class="k-item">
                  <span class="k-item-title">{{ block.settings.title }}</span>
                </a>
              {% endif %}
            {% endfor %}
          </div>
        </div>
      {% endfor %}
    </nav>

    <div style="width: 150px;"></div> </div>
</header>

<script>
  function kToggle(btn) {
    const parent = btn.parentElement;
    const wasOpen = parent.classList.contains('is-open');
    document.querySelectorAll('.js-drop').forEach(el => el.classList.remove('is-open'));
    if (!wasOpen) parent.classList.add('is-open');
  }
  document.addEventListener('click', (e) => {
    if (!e.target.closest('.js-drop')) {
      document.querySelectorAll('.js-drop').forEach(el => el.classList.remove('is-open'));
    }
  });
</script>

{% schema %}
{
  "name": "Kieslect Header Pro V2",
  "settings": [],
  "blocks": [
    {
      "type": "enlace",
      "name": "Link de Menú",
      "settings": [
        { "type": "select", "id": "parent", "label": "Menú Padre", "options": [{"value":"Productos","label":"Productos"},{"value":"Comunidad","label":"Comunidad"},{"value":"Soporte","label":"Soporte"}]},
        { "type": "text", "id": "title", "label": "Nombre del link" },
        { "type": "url", "id": "url", "label": "Link" }
      ]
    }
  ],
  "presets": [{ "name": "Kieslect Header Pro V2" }]
}
{% endschema %}