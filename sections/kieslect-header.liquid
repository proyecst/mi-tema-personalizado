<link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700&family=Rajdhani:wght@300;500;700&display=swap" rel="stylesheet">

<style>
  :root {
    --f-red: #ff0000;
    --f-glow: #00f2ff;
    --f-white: #ffffff;
    --f-dark: #050505;
    --f-gray: #1a1a1a;
    --f-font-main: 'Orbitron', sans-serif;
    --f-font-body: 'Rajdhani', sans-serif;
  }

  /* Contenedor Principal */
  .k-header-wrapper {
    background-color: var(--f-dark);
    border-bottom: 2px solid var(--f-red); /* Estilo AddBlock/Borde */
    padding: 15px 4%;
    position: sticky;
    top: 0;
    z-index: 9999;
    font-family: var(--f-font-body);
  }

  .k-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 1400px;
    margin: 0 auto;
  }

  /* LOGO: K ROJA, RESTO BLANCO */
  .k-logo {
    font-family: var(--f-font-main);
    font-size: 26px;
    font-weight: 700;
    text-decoration: none;
    letter-spacing: 2px;
    color: var(--f-white);
    display: flex;
    align-items: center;
  }

  .k-logo span {
    color: var(--f-red);
    text-shadow: 0 0 10px rgba(255, 0, 0, 0.5);
    margin-right: 1px;
  }

  /* NAVEGACIÓN PRINCIPAL */
  .k-nav {
    display: flex;
    list-style: none;
    gap: 30px;
    margin: 0;
    padding: 0;
  }

  .k-nav-item {
    position: relative;
  }

  .k-nav-link {
    text-decoration: none;
    color: var(--f-white);
    text-transform: uppercase;
    font-weight: 500;
    font-size: 14px;
    letter-spacing: 1px;
    transition: 0.3s;
    padding: 10px 0;
    display: block;
  }

  .k-nav-link:hover {
    color: var(--f-red);
  }

  /* MEGA MENÚ */
  .k-mega-menu {
    position: absolute;
    top: 100%;
    left: -50px;
    background: var(--f-gray);
    border: 1px solid #333;
    border-top: 3px solid var(--f-red);
    display: none;
    grid-template-columns: 250px 200px;
    padding: 25px;
    gap: 20px;
    box-shadow: 0 15px 40px rgba(0,0,0,0.9);
    min-width: 500px;
  }

  .k-nav-item:hover .k-mega-menu {
    display: grid;
  }

  .mega-col h4 {
    font-family: var(--f-font-main);
    color: var(--f-red);
    font-size: 12px;
    margin-bottom: 15px;
    border-bottom: 1px solid #333;
    padding-bottom: 5px;
  }

  .mega-col ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .mega-col li a {
    color: #bbb;
    text-decoration: none;
    font-size: 14px;
    line-height: 2.2;
    transition: 0.2s;
    display: block;
  }

  .mega-col li a:hover {
    color: var(--f-white);
    padding-left: 5px;
    border-left: 2px solid var(--f-red);
  }

  /* ACCIONES: BUSCADOR, CUENTA, CARRITO */
  .k-actions {
    display: flex;
    align-items: center;
    gap: 20px;
  }

  .k-search-box {
    position: relative;
  }

  .k-search-input {
    background: #111;
    border: 1px solid #333;
    color: white;
    padding: 6px 15px;
    border-radius: 4px;
    font-family: var(--f-font-body);
    width: 180px;
    outline: none;
    transition: 0.3s;
  }

  .k-search-input:focus {
    border-color: var(--f-red);
    box-shadow: 0 0 5px rgba(255,0,0,0.3);
  }

  .action-icon {
    text-decoration: none;
    color: var(--f-white);
    font-size: 13px;
    text-transform: uppercase;
    font-weight: 700;
  }

  .cart-count {
    background: var(--f-red);
    color: white;
    padding: 2px 6px;
    font-size: 10px;
    border-radius: 50%;
    margin-left: 5px;
  }

  /* MÓVIL: RESPONSIVO BÁSICO */
  @media (max-width: 768px) {
    .k-nav { display: none; }
    .k-search-input { width: 100px; }
  }
</style>

<div class="k-header-wrapper">
  <div class="k-container">
    
    <a href="{{ routes.root_url }}" class="k-logo">
      <span>K</span>IESLECT
    </a>

    <nav>
      <ul class="k-nav">
        <li class="k-nav-item">
          <a href="/collections/all" class="k-nav-link">Tienda</a>
          <div class="k-mega-menu">
            <div class="mega-col">
              <h4>Smartwatches</h4>
              <ul>
                <li><a href="/collections/serie-amoled">Serie AMOLED</a></li>
                <li><a href="/collections/llamadas-bluetooth">Llamadas Bluetooth</a></li>
                <li><a href="/collections/deporte-fitness">Serie Deportiva & Fitness</a></li>
                <li><a href="/collections/premium">Serie Premium</a></li>
                <li><a href="/collections/economica">Serie Económica</a></li>
              </ul>
            </div>
            <div class="mega-col">
              <h4>Accesorios</h4>
              <ul>
                <li><a href="/collections/correas">Correas</a></li>
              </ul>
            </div>
          </div>
        </li>

        <li><a href="/collections/novedades" class="k-nav-link">Novedades</a></li>
        <li><a href="/collections/mas-vendidos" class="k-nav-link">Más Vendidos</a></li>

        <li class="k-nav-item">
          <a href="#" class="k-nav-link">Kieslect +</a>
          <div class="k-mega-menu" style="min-width: 200px; grid-template-columns: 1fr;">
            <div class="mega-col">
              <h4>Información</h4>
              <ul>
                <li><a href="/pages/sobre-kieslect">Sobre Kieslect</a></li>
                <li><a href="/blogs/news">Blog & Guías</a></li>
                <li><a href="/pages/soporte-faq">Soporte / FAQ</a></li>
                <li><a href="/pages/contacto">Contacto</a></li>
              </ul>
            </div>
          </div>
        </li>
      </ul>
    </nav>

    <div class="k-actions">
      <div class="k-search-box">
        <form action="{{ routes.search_url }}" method="get">
          <input type="text" name="q" class="k-search-input" placeholder="BUSCAR TECH...">
        </form>
      </div>

      {% if shop.customer_accounts_enabled %}
        <a href="{{ routes.account_url }}" class="action-icon">
          {% if customer %}Cuenta{% else %}Login{% endif %}
        </a>
      {% endif %}

      <a href="{{ routes.cart_url }}" class="action-icon" style="color: var(--f-red);">
        CARRITO <span class="cart-count">{{ cart.item_count }}</span>
      </a>
    </div>

  </div>
</div>