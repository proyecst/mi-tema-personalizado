{%- style -%}
  .k-header-wrapper {
    display: block;
    width: 100%;
    background: #000000;
    font-family: 'Inter', sans-serif;
    position: sticky;
    top: 0;
    z-index: 9999;
    border-bottom: 1px solid #1a1a1a;
  }

  .k-header-container {
    max-width: 1300px;
    height: 80px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 20px;
  }

  .k-logo a {
    color: #ffffff;
    text-decoration: none;
    font-size: 24px;
    font-weight: 900;
    letter-spacing: 3px;
    text-transform: uppercase;
  }

  .k-main-nav {
    display: flex;
    gap: 30px;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .k-nav-link {
    color: #ffffff;
    text-decoration: none;
    font-size: 13px;
    font-weight: 600;
    text-transform: uppercase;
    transition: 0.3s;
  }

  .k-nav-link:hover {
    color: #00D1FF;
  }

  .k-actions {
    display: flex;
    align-items: center;
    gap: 20px;
  }

  .k-login-link {
    color: #ffffff;
    text-decoration: none;
    font-size: 12px;
    font-weight: 600;
  }

  .k-register-btn {
    background: #00D1FF;
    color: #000000 !important;
    padding: 10px 20px;
    border-radius: 4px;
    font-weight: 800;
    font-size: 11px;
    text-decoration: none;
    text-transform: uppercase;
    transition: 0.3s;
  }

  .k-register-btn:hover {
    box-shadow: 0 0 15px rgba(0, 209, 255, 0.5);
  }

  @media (max-width: 768px) {
    .k-main-nav { display: none; }
  }
{%- endstyle -%}

