{%- style -%}
  :root { --k-cyan: #00D1FF; }
  
  .k-header-wrapper {
    width: 100%; background: #000; border-bottom: 1px solid #1a1a1a;
    position: sticky; top: 0; z-index: 9999; font-family: 'Inter', sans-serif;
  }
  .k-header-container {
    max-width: 1300px; height: 80px; margin: 0 auto;
    display: flex; align-items: center; justify-content: space-between; padding: 0 20px;
  }
  
  .k-logo a { color: #fff; text-decoration: none; font-size: 22px; font-weight: 900; letter-spacing: 2px; }

  /* Navegación Principal */
  .k-nav-main { display: flex; gap: 15px; align-items: center; }
  
  /* Estilo para los links directos */
  .k-nav-link {
    color: #fff; text-decoration: none; font-size: 12px; font-weight: 700;
    text-transform: uppercase; padding: 10px 15px; transition: 0.3s; opacity: 0.8;
  }
  .k-nav-link:hover { opacity: 1; color: var(--k-cyan); }

  /* Botón Acceso */
  .k-access-btn {
    background: var(--k-cyan); color: #000 !important; padding: 10px 20px;
    border-radius: 4px; font-weight: 800; font-size: 11px; text-decoration: none;
    text-transform: uppercase; transition: 0.3s;
  }
  .k-access-btn:hover { background: #fff; }

  @media (max-width: 900px) { .k-nav-main { display: none; } }
{%- endstyle -%}

<div class="k-header-wrapper">
  <div class="k-header-container">
    
    <div class="k-logo"><a href="/">KIESLECT</a></div>
    
    <nav class="k-nav-main">
      <a href="/" class="k-nav-link">Inicio</a>
      <a href="/collections/all" class="k-nav-link">Productos</a>
      <a href="/pages/comunidad" class="k-nav-link">Comunidad</a>
      <a href="/pages/soporte" class="k-nav-link">Soporte</a>
    </nav>

    <div class="k-actions">
      <a href="/account" class="k-access-btn">
        {%- if customer -%}
          {{ customer.first_name }}
        {%- else -%}
          Acceso
        {%- endif -%}
      </a>
    </div>

  </div>
</div>

<script>
  // Script minimalista para efectos futuros
  document.querySelectorAll('.k-nav-link').forEach(link => {
    if(link.href === window.location.href) {
      link.style.color = 'var(--k-cyan)';
      link.style.opacity = '1';
    }
  });
</script>