{%- style -%}
  :root { --k-cyan: #00D1FF; }
  
  .k-header-wrapper {
    width: 100%; background: #000; border-bottom: 1px solid #1a1a1a;
    position: sticky; top: 0; z-index: 9999; font-family: 'Inter', sans-serif;
  }
  .k-header-container {
    max-width: 1300px; height: 80px; margin: 0 auto;
    display: flex; align-items: center; justify-content: space-between; padding: 0 20px;
  }
  .k-logo a { color: #fff; text-decoration: none; font-size: 22px; font-weight: 900; letter-spacing: 2px; }

  .k-nav-main { display: flex; gap: 10px; }
  .k-dropdown { position: relative; }
  
  .k-drop-trigger {
    background: transparent; color: #fff; border: none; padding: 10px 15px;
    font-size: 12px; font-weight: 700; text-transform: uppercase; cursor: pointer;
    display: flex; align-items: center; gap: 6px; transition: 0.3s;
  }
  .k-drop-trigger:hover { color: var(--k-cyan); }

  .k-drop-menu {
    display: none; position: absolute; top: 100%; left: 0;
    background: #0a0a0a; min-width: 280px; border: 1px solid #1a1a1a;
    border-radius: 8px; padding: 15px 0; box-shadow: 0 20px 40px rgba(0,0,0,0.5);
  }
  
  .k-dropdown.is-open .k-drop-menu { 
    display: block; 
    animation: slideUp 0.2s ease-out forwards; 
  }

  @keyframes slideUp {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .k-menu-section { padding: 10px 20px; }
  .k-menu-section-title {
    color: var(--k-cyan); font-size: 10px; font-weight: 800;
    text-transform: uppercase; letter-spacing: 1.5px; margin-bottom: 8px;
    display: block; border-bottom: 1px solid #222; padding-bottom: 4px;
  }

  .k-drop-menu a {
    display: block; color: #bbb; text-decoration: none; font-size: 11px;
    padding: 7px 0; transition: 0.2s; font-weight: 500; text-align: left;
  }
  .k-drop-menu a:hover { color: #fff; padding-left: 5px; }

  .k-access-btn {
    background: var(--k-cyan); color: #000 !important; padding: 10px 20px;
    border-radius: 4px; font-weight: 800; font-size: 11px; text-decoration: none;
    text-transform: uppercase;
  }

  @media (max-width: 900px) { .k-nav-main { display: none; } }
{%- endstyle -%}

