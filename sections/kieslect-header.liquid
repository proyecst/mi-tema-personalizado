{%- style -%}
  .k-header-wrapper {
    width: 100%;
    background: #000;
    border-bottom: 1px solid #1a1a1a;
    position: sticky;
    top: 0;
    z-index: 9999;
    font-family: 'Inter', sans-serif;
  }
  .k-header-container {
    max-width: 1300px;
    height: 80px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 20px;
  }
  .k-logo a { 
    color: #fff; 
    text-decoration: none; 
    font-size: 24px; 
    font-weight: 900; 
    letter-spacing: 3px;
    text-transform: uppercase;
  }
  .k-logo img {
    max-height: 40px;
    display: block;
  }

  .k-nav { display: flex; gap: 30px; list-style: none; margin: 0; padding: 0; }
  .k-nav a { 
    color: #fff; 
    text-decoration: none; 
    font-size: 13px; 
    font-weight: 600; 
    text-transform: uppercase;
    transition: 0.3s;
    opacity: 0.8;
  }
  .k-nav a:hover { opacity: 1; color: #00D1FF; }

  .k-actions { display: flex; align-items: center; gap: 20px; }
  .k-register-link {
    background: #00D1FF;
    color: #000 !important;
    padding: 10px 20px;
    border-radius: 4px;
    font-weight: 800;
    font-size: 11px;
    text-transform: uppercase;
    text-decoration: none;
    transition: 0.3s;
  }

  @media (max-width: 768px) { .k-nav { display: none; } }
{%- endstyle -%}

<div class="k-header-wrapper">
  <div class="k-header-container">
    
    <div class="k-logo">
      <a href="/">
        {%- if section.settings.logo_img != blank -%}
          <img src="{{ section.settings.logo_img | image_url: width: 300 }}" alt="{{ shop.name }}">
        {%- else -%}
          {{ section.settings.logo_text | default: 'KIESLECT' }}
        {%- endif -%}
      </a>
    </div>
    
    <nav>
      <ul class="k-nav">
        {%- for block in section.blocks -%}
          <li {{ block.shopify_attributes }}>
            <a href="{{ block.settings.link_url | default: '#' }}" {% if block.settings.external %}target="_blank"{% endif %}>
              {{ block.settings.link_text }}
            </a>
          </li>
        {%- endfor -%}
      </ul>
    </nav>

    <div class="k-actions">
      {%- if customer -%}
        <a href="/account" style="color:#fff; text-decoration:none; font-size:12px; font-weight:700;">HOLA, {{ customer.first_name | upcase }}</a>
        <a href="/account/logout" style="color:#ff4d4d; font-size:10px; text-decoration:none; margin-left:10px;">SALIR</a>
      {%- else -%}
        <a href="{{ section.settings.reg_link | default: '/account/register' }}" class="k-register-link">
          {{ section.settings.reg_text | default: 'Registrarse' }}
        </a>
      {%- endif -%}
    </div>

  </div>
</div>

<script>
  document.querySelectorAll('.k-nav a').forEach(link => {
    link.addEventListener('click', function(e) {
      const href = this.getAttribute('href');
      if (href && href.startsWith('#')) {
        const target = document.querySelector(href);
        if (target) {
          e.preventDefault();
          window.scrollTo({
            top: target.offsetTop - 80,
            behavior: 'smooth'
          });
        }
      }
    });
  });
</script>

{% schema %}
{
  "name": "Kieslect Header Ultimate",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo_img",
      "label": "Logo en Imagen"
    },
    {
      "type": "text",
      "id": "logo_text",
      "label": "Texto del Logo (Si no hay imagen)",
      "default": "KIESLECT"
    },
    {
      "type": "header",
      "content": "Botón de Acción"
    },
    {
      "type": "text",
      "id": "reg_text",
      "label": "Texto Botón",
      "default": "Registrarse"
    },
    {
      "type": "url",
      "id": "reg_link",
      "label": "Link Botón"
    }
  ],
  "blocks": [
    {
      "type": "nav_link",
      "name": "Link de Menú",
      "settings": [
        {
          "type": "text",
          "id": "link_text",
          "label": "Nombre del link",
          "default": "Nueva Sección"
        },
        {
          "type": "url",
          "id": "link_url",
          "label": "Link (URL o #Seccion)"
        },
        {
          "type": "checkbox",
          "id": "external",
          "label": "Abrir en pestaña nueva",
          "default": false
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Kieslect Header Ultimate",
      "blocks": [
        { "type": "nav_link", "settings": { "link_text": "Inicio" } },
        { "type": "nav_link", "settings": { "link_text": "Modelos" } }
      ]
    }
  ]
}
{% endschema %}


