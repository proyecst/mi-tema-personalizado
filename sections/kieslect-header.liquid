<script>
  function kToggle(btn) {
    const parent = btn.closest('.js-drop');
    const wasOpen = parent.classList.contains('is-open');
    document.querySelectorAll('.js-drop').forEach(d => d.classList.remove('is-open'));
    if (!wasOpen) parent.classList.add('is-open');
  }

  // Cierre autom√°tico al hacer clic fuera o al descargar un archivo
  window.onclick = function(e) {
    if (!e.target.closest('.js-drop')) {
      document.querySelectorAll('.js-drop').forEach(d => d.classList.remove('is-open'));
    }
  }
</script>