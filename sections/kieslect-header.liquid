{%- style -%}
  .k-header-wrapper {
    width: 100%;
    background: #000;
    border-bottom: 1px solid #1a1a1a;
    position: sticky;
    top: 0;
    z-index: 9999;
    font-family: 'Inter', sans-serif;
  }
  .k-header-container {
    max-width: 1300px;
    height: 80px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 20px;
  }
  .k-logo a { 
    color: #fff; 
    text-decoration: none; 
    font-size: 24px; 
    font-weight: 900; 
    letter-spacing: 3px;
    text-transform: uppercase;
  }

  /* Navegación */
  .k-nav { display: flex; gap: 30px; list-style: none; margin: 0; padding: 0; }
  .k-nav a { 
    color: #fff; 
    text-decoration: none; 
    font-size: 13px; 
    font-weight: 600; 
    text-transform: uppercase;
    transition: 0.3s;
    opacity: 0.8;
  }
  .k-nav a:hover { opacity: 1; color: #00D1FF; }

  /* Acciones y Botón de Link */
  .k-actions { display: flex; align-items: center; gap: 20px; }
  
  .k-register-link {
    background: #00D1FF;
    color: #000 !important;
    padding: 12px 24px;
    border-radius: 6px;
    font-weight: 800;
    font-size: 11px;
    text-transform: uppercase;
    text-decoration: none;
    transition: 0.3s;
    display: inline-block;
  }
  .k-register-link:hover { 
    box-shadow: 0 0 20px rgba(0, 209, 255, 0.4); 
    transform: translateY(-2px);
    filter: brightness(1.1);
  }

  .k-user-greeting {
    color: #fff;
    text-decoration: none;
    font-size: 12px;
    font-weight: 700;
  }

  .k-logout-link {
    color: #ff4d4d;
    font-size: 10px;
    text-decoration: none;
    margin-left: 10px;
    font-weight: bold;
    text-transform: uppercase;
  }

  @media (max-width: 768px) { .k-nav { display: none; } }
{%- endstyle -%}

<div class="k-header-wrapper">
  <div class="k-header-container">
    
    <div class="k-logo"><a href="/">KIESLECT</a></div>
    
    <nav>
      <ul class="k-nav">
        <li><a href="#shopify-section-template--index-main">Inicio</a></li>
        <li><a href="#shopify-section-featured-products">Modelos</a></li>
        <li><a href="#testi-list">Comunidad</a></li>
      </ul>
    </nav>

    <div class="k-actions">
      {%- if customer -%}
        <a href="/account" class="k-user-greeting">HOLA, {{ customer.first_name | upcase }}</a>
        <a href="/account/logout" class="k-logout-link">Salir</a>
      {%- else -%}
        {%- comment -%} 
          Cambia el href por el link que necesites. 
          Ejemplo para registro de Shopify: /account/register 
        {%- endcomment -%}
        <a href="/account/register" class="k-register-link">Registrarse</a>
      {%- endif -%}
    </div>

  </div>
</div>

<script>
  // Desplazamiento suave para las secciones de la misma página
  document.querySelectorAll('.k-nav a').forEach(link => {
    link.addEventListener('click', function(e) {
      const href = this.getAttribute('href');
      if (href.startsWith('#')) {
        e.preventDefault();
        const target = document.querySelector(href);
        if (target) {
          window.scrollTo({
            top: target.offsetTop - 80,
            behavior: 'smooth'
          });
        }
      }
    });
  });
</script>

