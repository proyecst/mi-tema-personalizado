<style>
  /* IMPORTACIÓN DE FUENTES */
  @font-face {
    font-family: 'Ethnocentric';
    src: url('https://db.onlinewebfonts.com/t/625330384ef8f0607921389809635532.woff2') format('woff2');
  }
  @import url('https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700&display=swap');

  :root {
    --f-cyan: #00f2ff; 
    --f-cyan-glow: rgba(0, 242, 255, 0.6);
    --f-white: #ffffff;
    --f-dark: #000000;
    --font-futurista: 'Ethnocentric', sans-serif;
    --font-secondary: 'Orbitron', sans-serif;
  }

  .k-header-wrapper {
    background-color: var(--f-dark);
    border-bottom: 2px solid var(--f-cyan);
    box-shadow: 0 4px 20px rgba(0, 242, 255, 0.15);
    padding: 15px 4%;
    position: sticky;
    top: 0;
    z-index: 9999;
  }

  .k-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 1400px;
    margin: 0 auto;
  }

  /* LOGO CON ETNOCENTRIC */
  .k-logo {
    font-family: var(--font-futurista);
    font-size: 22px;
    text-decoration: none;
    letter-spacing: 2px;
    color: var(--f-white);
    display: flex;
    align-items: center;
  }

  .k-logo span {
    color: var(--f-cyan);
    text-shadow: 0 0 10px var(--f-cyan);
    margin-right: 2px;
  }

  /* NAVEGACIÓN CON ETNOCENTRIC */
  .k-nav {
    display: flex;
    list-style: none;
    gap: 25px;
    margin: 0;
    padding: 0;
  }

  .k-nav-link {
    font-family: var(--font-futurista);
    text-decoration: none;
    color: #bbbbbb;
    text-transform: uppercase;
    font-size: 11px; /* Ethnocentric es ancha, bajamos el tamaño para legibilidad */
    letter-spacing: 1px;
    transition: 0.3s;
    padding: 10px 0;
  }

  .k-nav-link:hover {
    color: var(--f-cyan);
    text-shadow: 0 0 8px var(--f-cyan);
  }

  /* BUSCADOR */
  .k-search-input {
    background: #111;
    border: 1px solid #333;
    color: white;
    padding: 8px 15px;
    font-family: var(--font-secondary);
    font-size: 12px;
    width: 180px;
    outline: none;
    transition: 0.3s;
    text-transform: uppercase;
  }

  .k-search-input:focus {
    border-color: var(--f-cyan);
    box-shadow: 0 0 10px var(--f-cyan-glow);
  }

  /* CARRITO CON ETNOCENTRIC */
  .cart-btn {
    font-family: var(--font-futurista);
    text-decoration: none;
    color: var(--f-white);
    font-size: 10px;
    border: 1px solid var(--f-cyan);
    padding: 8px 18px;
    transition: 0.3s;
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .cart-btn:hover {
    background: var(--f-cyan);
    color: #000;
    box-shadow: 0 0 15px var(--f-cyan);
  }

  .cart-count {
    background: #fff;
    color: #000;
    padding: 1px 5px;
    font-weight: bold;
  }

  @media (max-width: 1024px) {
    .k-nav { display: none; } /* Ocultar en tablets/móvil para evitar desborde */
  }
</style>

<div class="k-header-wrapper">
  <div class="k-container">
    
    <a href="{{ routes.root_url }}" class="k-logo">
      <span>K</span>IESLECT
    </a>

    <nav>
      <ul class="k-nav">
        <li><a href="/collections/all" class="k-nav-link">Tienda</a></li>
        <li><a href="/collections/novedades" class="k-nav-link">Novedades</a></li>
        <li><a href="/pages/sobre-kieslect" class="k-nav-link">Tech</a></li>
        <li><a href="/pages/contacto" class="k-nav-link">Soporte</a></li>
      </ul>
    </nav>

    <div class="k-actions">
      <div class="k-search-box">
        <form action="{{ routes.search_url }}" method="get">
          <input type="text" name="q" class="k-search-input" placeholder="SEARCH_">
        </form>
      </div>

      <a href="{{ routes.cart_url }}" class="cart-btn">
        CART <span class="cart-count">{{ cart.item_count }}</span>
      </a>
    </div>

  </div>
</div>